{% extends 'base.html.twig' %}

{% block title %}Home - OddOneGaming{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body { overflow: hidden; }

        .hero {
            position: relative;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background:
                linear-gradient(135deg, rgba(10,14,39,0.85) 0%, rgba(26,31,58,0.85) 100%),
                url('{{ asset('images/castle-background.jpg') }}') center/cover no-repeat fixed;
        }

        .hero::before {
            content: '';
            position: absolute;
            inset: 0;
            background:
                radial-gradient(circle at 20% 50%, rgba(0,255,100,0.15) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(0,200,255,0.15) 0%, transparent 50%);
            animation: pulse 8s ease-in-out infinite;
        }

        @keyframes pulse {
            0%,100% { opacity: .5; }
            50% { opacity: 1; }
        }

        .hero-container {
            position: relative;
            z-index: 2;
            max-width: 1200px;
            padding: 60px 40px;
            text-align: center;
        }

        .brand { margin-bottom: 40px; }

        .brand h1 {
            font-size: 4.5rem;
            font-weight: 900;
            background: linear-gradient(135deg,#00ff88 0%,#00ccff 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            letter-spacing: 0;
            text-transform: uppercase;
            animation: glow 3s ease-in-out infinite;
            white-space: nowrap;
            margin-top: 30px;
        }

        @keyframes glow {
            0%,100% { filter: drop-shadow(0 0 20px rgba(0,255,136,.5)); }
            50% { filter: drop-shadow(0 0 40px rgba(0,255,136,.8)); }
        }

        .brand-subtitle {
            font-size: 1.5rem;
            color: #00ff88;
            font-weight: 600;
            letter-spacing: 4px;
            text-transform: uppercase;
        }

        .content-card {
            background: rgba(255,255,255,.03);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            padding: 50px 60px;
            border: 1px solid rgba(0,255,136,.2);
            box-shadow: 0 20px 60px rgba(0,0,0,.4);
            margin-top: 30px;
        }

        .welcome-title {
            font-size: 2.5rem;
            color: #fff;
            font-weight: 700;
            margin-bottom: 25px;
        }

        .welcome-text {
            font-size: 1.25rem;
            color: rgba(255,255,255,.8);
            line-height: 1.8;
            max-width: 700px;
            margin: 0 auto;
        }

        .features {
            display: grid;
            grid-template-columns: repeat(auto-fit,minmax(250px,1fr));
            gap: 30px;
            margin-top: 60px;
        }

        .feature-item {
            padding: 30px;
            background: rgba(255,255,255,.02);
            border-radius: 16px;
            border: 1px solid rgba(0,255,136,.1);
        }

        .feature-icon { font-size: 2.5rem; margin-bottom: 15px; }

        .feature-title {
            font-size: 1.3rem;
            color: #00ff88;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .feature-description {
            font-size: 1rem;
            color: rgba(255,255,255,.7);
            line-height: 1.6;
        }

        @media (max-width:768px) {
            .hero-container { padding: 40px 20px; }
            .brand h1 { font-size: 2.5rem; margin-top: 20px; }
            .brand-subtitle { font-size: 1rem; letter-spacing: 2px; }
            .content-card { padding: 35px 25px; }
            .welcome-title { font-size: 1.8rem; }
            .welcome-text { font-size: 1.1rem; }
            .features { grid-template-columns: 1fr; }
        }
    </style>
{% endblock %}

{% block body %}
<div class="hero">
    <div class="hero-container">
        <div class="brand">
            <h1>OddOneGaming</h1>
            <div class="brand-subtitle">Godforge</div>
        </div>

        <div class="content-card">
            <h2 class="welcome-title">Welcome to OddOneGaming's Lair</h2>
            <p class="welcome-text">
                Sink your teeth into a wealth of knowledge developed by a coven of experienced gamers
            </p>
        </div>

        <div class="features">
            <div class="feature-item">
                <div class="feature-icon">üéÆ</div>
                <h3 class="feature-title">Expert Guides</h3>
                <p class="feature-description">In-depth tutorials created by passionate players</p>
            </div>
            <div class="feature-item">
                <div class="feature-icon">‚ö°</div>
                <h3 class="feature-title">Pro Strategies</h3>
                <p class="feature-description">Advanced techniques to level up your gameplay</p>
            </div>
            <div class="feature-item">
                <div class="feature-icon">üèÜ</div>
                <h3 class="feature-title">Active Community</h3>
                <p class="feature-description">Connect with other gamers and grow together</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
