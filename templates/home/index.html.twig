{% extends 'base.html.twig' %}

{% block title %}Accueil - OddOne Gaming{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
    <style>
        /* Reset et base */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            overflow: hidden;
        }

        /* Hero Section */
        .hero {
            position: relative;
            min-height: 100vh;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: 
                linear-gradient(135deg, rgba(10, 14, 39, 0.85) 0%, rgba(26, 31, 58, 0.85) 100%),
                url('{{ asset('images/castle-background.jpg') }}') center/cover no-repeat fixed;
            overflow: hidden;
        }

        /* Overlay sombre pour am√©liorer la lisibilit√© */
        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 50%, rgba(0, 255, 100, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(0, 200, 255, 0.15) 0%, transparent 50%);
            animation: pulse 8s ease-in-out infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 0.5; }
            50% { opacity: 1; }
        }

        /* Conteneur principal */
        .hero-container {
            position: relative;
            z-index: 2;
            max-width: 1200px;
            margin: 0 auto;
            padding: 60px 40px;
            text-align: center;
        }

        /* Logo/Titre principal */
        .brand {
            margin-bottom: 40px;
        }

        .brand h1 {
            font-size: 5rem;
            font-weight: 900;
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 15px;
            letter-spacing: -2px;
            text-transform: uppercase;
            animation: glow 3s ease-in-out infinite;
        }

        @keyframes glow {
            0%, 100% {
                filter: drop-shadow(0 0 20px rgba(0, 255, 136, 0.5));
            }
            50% {
                filter: drop-shadow(0 0 40px rgba(0, 255, 136, 0.8));
            }
        }

        .brand-subtitle {
            font-size: 1.5rem;
            color: #00ff88;
            font-weight: 600;
            letter-spacing: 4px;
            text-transform: uppercase;
        }

        /* Carte de contenu */
        .content-card {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            padding: 50px 60px;
            border: 1px solid rgba(0, 255, 136, 0.2);
            box-shadow: 
                0 20px 60px rgba(0, 0, 0, 0.4),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
            margin-top: 30px;
            transition: all 0.4s ease;
        }

        .content-card:hover {
            transform: translateY(-5px);
            box-shadow: 
                0 30px 80px rgba(0, 255, 136, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
            border-color: rgba(0, 255, 136, 0.4);
        }

        /* Texte d'accueil */
        .welcome-title {
            font-size: 2.5rem;
            color: #ffffff;
            font-weight: 700;
            margin-bottom: 25px;
            line-height: 1.3;
        }

        .welcome-text {
            font-size: 1.25rem;
            color: rgba(255, 255, 255, 0.8);
            line-height: 1.8;
            max-width: 700px;
            margin: 0 auto 35px;
        }

        /* Bouton CTA */
        .cta-button {
            display: inline-block;
            padding: 18px 45px;
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            color: #0a0e27;
            font-size: 1.1rem;
            font-weight: 700;
            text-decoration: none;
            border-radius: 50px;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            box-shadow: 0 10px 30px rgba(0, 255, 136, 0.3);
        }

        .cta-button:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 15px 40px rgba(0, 255, 136, 0.5);
            color: #0a0e27;
        }

        /* Features */
        .features {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            margin-top: 60px;
        }

        .feature-item {
            padding: 30px;
            background: rgba(255, 255, 255, 0.02);
            border-radius: 16px;
            border: 1px solid rgba(0, 255, 136, 0.1);
            transition: all 0.3s ease;
        }

        .feature-item:hover {
            background: rgba(0, 255, 136, 0.05);
            border-color: rgba(0, 255, 136, 0.3);
            transform: translateY(-5px);
        }

        .feature-icon {
            font-size: 2.5rem;
            margin-bottom: 15px;
        }

        .feature-title {
            font-size: 1.3rem;
            color: #00ff88;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .feature-description {
            font-size: 1rem;
            color: rgba(255, 255, 255, 0.7);
            line-height: 1.6;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .hero-container {
                padding: 40px 20px;
            }

            .brand h1 {
                font-size: 3rem;
            }

            .brand-subtitle {
                font-size: 1rem;
                letter-spacing: 2px;
            }

            .content-card {
                padding: 35px 25px;
            }

            .welcome-title {
                font-size: 1.8rem;
            }

            .welcome-text {
                font-size: 1.1rem;
            }

            .cta-button {
                padding: 15px 35px;
                font-size: 1rem;
            }

            .features {
                grid-template-columns: 1fr;
                gap: 20px;
            }
        }
    </style>
{% endblock %}

