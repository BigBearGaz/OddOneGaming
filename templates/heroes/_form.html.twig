{% extends 'base.html.twig' %}

{% block title %}New Hero{% endblock %}

{# ============================= #}
{#    CUSTOM FORM THEME          #}
{# ============================= #}
{% form_theme form _self %}

{% block form_row %}
    <div class="form-group mb-4">
        {{ form_label(form, null, {
            label_attr: { class: 'form-label fw-bold text-uppercase mb-2' }
        }) }}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
        {% if form.vars.help is defined and form.vars.help %}
            <small class="form-text" style="color: rgba(255, 255, 255, 0.6);">{{ form.vars.help }}</small>
        {% endif %}
    </div>
{% endblock %}

{% block textarea_widget %}
    {% set attr = attr|merge({
        class: (attr.class|default('') ~ ' form-control form-control-lg')|trim,
        rows: attr.rows|default(4)
    }) %}
    <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
{% endblock %}

{# Custom rendering for checkboxes with icons #}
{% block choice_widget_expanded %}
    <div class="status-checkbox-grid">
        {% for child in form %}
            {% set entity = null %}
            {% if child.parent.vars.choices is defined %}
                {% for choice in child.parent.vars.choices %}
                    {# Group management (like imprints grouped by rarity) #}
                    {% if choice.choices is defined %}
                        {% for subChoice in choice.choices %}
                            {% if subChoice.value == child.vars.value %}
                                {% set entity = subChoice.data %}
                            {% endif %}
                        {% endfor %}
                    {% else %}
                        {# Simple ungrouped choice #}
                        {% if choice.value == child.vars.value %}
                            {% set entity = choice.data %}
                        {% endif %}
                    {% endif %}
                {% endfor %}
            {% endif %}

            <div class="status-checkbox-item">
                <input type="{{ child.parent.vars.multiple ? 'checkbox' : 'radio' }}" 
                       id="{{ child.vars.id }}" 
                       name="{{ child.vars.full_name }}" 
                       class="status-checkbox-input"
                       value="{{ child.vars.value }}"
                       {% if child.vars.checked %}checked{% endif %}>

                <label for="{{ child.vars.id }}" class="status-checkbox-label">
                    <span class="status-checkbox-box">
                        <svg class="status-checkbox-checkmark" viewBox="0 0 24 24">
                            <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                        </svg>
                    </span>

                    {# Smart icon management: iconUrl then imageUrl #}
                    {% set hasImage = false %}
                    {% set imageSource = null %}

                    {% if entity %}
                        {% if entity.iconUrl is defined and entity.iconUrl %}
                            {% set hasImage = true %}
                            {% set imageSource = entity.iconUrl %}
                        {% elseif entity.imageUrl is defined and entity.imageUrl %}
                            {% set hasImage = true %}
                            {% set imageSource = entity.imageUrl %}
                        {% endif %}
                    {% endif %}

                    {% if hasImage and imageSource %}
                        <img src="{{ imageSource }}" 
                             alt="{{ child.vars.label }}" 
                             class="status-icon"
                             loading="lazy"
                             onerror="this.style.display='none'">
                    {% else %}
                        <span class="status-icon-placeholder">
                            <i class="fas fa-shield-alt"></i>
                        </span>
                    {% endif %}

                    <span class="status-name">{{ child.vars.label }}</span>
                </label>
            </div>
        {% endfor %}
    </div>
{% endblock %}

