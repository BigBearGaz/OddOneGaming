{% block javascripts %}
    {{ parent() }}
    <script>
        // Collection management for Awakenings
        document.querySelectorAll('.add-collection-item').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                const container = this.closest('.collection-container');
                const list = container.querySelector('.awakenings-list');
                const index = container.dataset.index;
                const prototype = container.dataset.prototype;
                
                const newForm = prototype.replace(/__name__/g, index);
                const wrapper = document.createElement('div');
                wrapper.innerHTML = newForm;
                wrapper.firstElementChild.classList.add('collection-item', 'card', 'mb-3', 'p-3');
                
                list.appendChild(wrapper.firstElementChild);
                container.dataset.index = parseInt(index) + 1;
                
                attachDeleteHandlers();
            });
        });

        function attachDeleteHandlers() {
            document.querySelectorAll('.remove-collection-item').forEach(button => {
                button.replaceWith(button.cloneNode(true));
            });
            
            document.querySelectorAll('.remove-collection-item').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    this.closest('.collection-item').remove();
                });
            });
        }

        attachDeleteHandlers();
    </script>
{% endblock %}
