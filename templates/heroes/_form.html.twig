{% extends 'base.html.twig' %}

{% block title %}{{ hero is defined and hero.id ? 'Éditer ' ~ hero.Name : 'Nouveau Héros' }}{% endblock %}

{% block body %}
<div class="container-fluid py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh;">
    <div class="container" style="max-width: 1000px;">
        
        {# Breadcrumb #}
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb bg-white shadow-sm rounded p-3">
                <li class="breadcrumb-item">
                    <a href="{{ path('app_heroes_index') }}" class="text-decoration-none">
                        <i class="bi bi-house-fill"></i> Galerie
                    </a>
                </li>
                <li class="breadcrumb-item active">
                    {{ hero is defined and hero.id ? 'Éditer' : 'Nouveau' }}
                </li>
            </ol>
        </nav>

        {# Formulaire #}
        <div class="card border-0 shadow-lg" style="border-radius: 20px;">
            
            {# En-tête #}
            <div class="card-header text-white py-4 text-center" 
                 style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 20px 20px 0 0;">
                <h2 class="mb-0 fw-bold">
                    <i class="bi bi-{{ hero is defined and hero.id ? 'pencil-square' : 'plus-circle' }}"></i>
                    {{ hero is defined and hero.id ? 'Éditer ' ~ hero.Name : 'Créer un Nouveau Héros' }}
                </h2>
            </div>

            {{ form_start(form) }}
            <div class="card-body p-5">
                
                {# ========== SECTION 1 : Informations Générales ========== #}
                <div class="mb-5">
                    <div class="d-flex align-items-center mb-4 pb-2 border-bottom border-primary border-3">
                        <div class="bg-primary text-white rounded-circle p-3 me-3">
                            <i class="bi bi-info-circle-fill fs-4"></i>
                        </div>
                        <h4 class="mb-0 fw-bold text-primary">Informations Générales</h4>
                    </div>
                    
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.Name, {'attr': {'class': 'form-control', 'placeholder': 'Nom du héros'}}) }}
                                {{ form_label(form.Name, null, {'label_attr': {'class': 'text-muted'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.imageUrl, {'attr': {'class': 'form-control', 'placeholder': 'URL Image'}}) }}
                                {{ form_label(form.imageUrl, 'URL de l\'image', {'label_attr': {'class': 'text-muted'}}) }}
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating">
                                {{ form_widget(form.faction, {'attr': {'class': 'form-control', 'placeholder': 'Faction'}}) }}
                                {{ form_label(form.faction, null, {'label_attr': {'class': 'text-muted'}}) }}
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating">
                                {{ form_widget(form.type, {'attr': {'class': 'form-control', 'placeholder': 'Type'}}) }}
                                {{ form_label(form.type, null, {'label_attr': {'class': 'text-muted'}}) }}
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating">
                                {{ form_widget(form.affinity, {'attr': {'class': 'form-control', 'placeholder': 'Affinité'}}) }}
                                {{ form_label(form.affinity, null, {'label_attr': {'class': 'text-muted'}}) }}
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating">
                                {{ form_widget(form.allegiance, {'attr': {'class': 'form-control', 'placeholder': 'Allégeance'}}) }}
                                {{ form_label(form.allegiance, null, {'label_attr': {'class': 'text-muted'}}) }}
                            </div>
                        </div>
                    </div>
                </div>

                {# ========== SECTION 2 : Armes ========== #}
                <div class="mb-5">
                    <div class="d-flex align-items-center mb-4 pb-2 border-bottom border-dark border-3">
                        <div class="bg-dark text-white rounded-circle p-3 me-3">
                            <i class="bi bi-sword fs-4"></i>
                        </div>
                        <h4 class="mb-0 fw-bold text-dark">Armes Recommandées</h4>
                    </div>
                    
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.weapons1, {'attr': {'class': 'form-control', 'placeholder': 'Arme 1'}}) }}
                                {{ form_label(form.weapons1, 'Arme Principale', {'label_attr': {'class': 'text-muted'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.weapons2, {'attr': {'class': 'form-control', 'placeholder': 'Arme 2'}}) }}
                                {{ form_label(form.weapons2, 'Arme Secondaire', {'label_attr': {'class': 'text-muted'}}) }}
                            </div>
                        </div>
                    </div>
                </div>

                {# ========== SECTION 3 : Compétences ========== #}
                <div class="mb-5">
                    <div class="d-flex align-items-center mb-4 pb-2 border-bottom border-danger border-3">
                        <div class="bg-danger text-white rounded-circle p-3 me-3">
                            <i class="bi bi-lightning-charge-fill fs-4"></i>
                        </div>
                        <h4 class="mb-0 fw-bold text-danger">Compétences</h4>
                    </div>
                    
                    <div class="row g-4">
                        <div class="col-12">
                            <label class="form-label fw-bold">
                                <span class="badge bg-primary me-2">A1</span>Base Skill
                            </label>
                            {{ form_widget(form.base, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold">
                                <span class="badge bg-success me-2">A2</span>Core Skill
                            </label>
                            {{ form_widget(form.core, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold">
                                <span class="badge bg-danger me-2">A3</span>Ultimate
                            </label>
                            {{ form_widget(form.ultimate, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold">
                                <span class="badge bg-warning text-dark me-2">P</span>Passive Skill
                            </label>
                            {{ form_widget(form.passive, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                        </div>
                    </div>
                </div>

                {# ========== SECTION 4 : Imprints ========== #}
                <div class="mb-5">
                    <div class="d-flex align-items-center mb-4 pb-2 border-bottom border-success border-3">
                        <div class="bg-success text-white rounded-circle p-3 me-3">
                            <i class="bi bi-gem fs-4"></i>
                        </div>
                        <h4 class="mb-0 fw-bold text-success">Imprints</h4>
                    </div>
                    
                    <div class="row g-4">
                        <div class="col-12">
                            <label class="form-label fw-bold">
                                <i class="bi bi-info-circle-fill text-info me-2"></i>Bonus Général
                            </label>
                            {{ form_widget(form.imprint, {'attr': {'class': 'form-control', 'rows': 2}}) }}
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating">
                                {{ form_widget(form.imprint1, {'attr': {'class': 'form-control', 'placeholder': 'Niveau I'}}) }}
                                {{ form_label(form.imprint1, 'Niveau I', {'label_attr': {'class': 'text-muted'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating">
                                {{ form_widget(form.imprint2, {'attr': {'class': 'form-control', 'placeholder': 'Niveau II'}}) }}
                                {{ form_label(form.imprint2, 'Niveau II', {'label_attr': {'class': 'text-muted'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating">
                                {{ form_widget(form.imprint3, {'attr': {'class': 'form-control', 'placeholder': 'Niveau III'}}) }}
                                {{ form_label(form.imprint3, 'Niveau III', {'label_attr': {'class': 'text-muted'}}) }}
                            </div>
                        </div>
                    </div>
                </div>

                {# ========== SECTION 5 : Leader Skill ========== #}
                <div class="mb-4">
                    <div class="d-flex align-items-center mb-4 pb-2 border-bottom border-warning border-3">
                        <div class="bg-warning text-dark rounded-circle p-3 me-3">
                            <i class="bi bi-star-fill fs-4"></i>
                        </div>
                        <h4 class="mb-0 fw-bold text-warning">Leader Skill (Optionnel)</h4>
                    </div>
                    
                    {{ form_widget(form.Leader, {'attr': {'class': 'form-control', 'rows': 2}}) }}
                    <small class="text-muted">Laissez vide si le héros n'a pas de compétence de leader</small>
                </div>

            </div>

            {# Footer avec boutons #}
            <div class="card-footer bg-light p-4" style="border-radius: 0 0 20px 20px;">
                <div class="d-flex gap-3 justify-content-center">
                    <a href="{{ path('app_heroes_index') }}" class="btn btn-outline-secondary btn-lg px-5">
                        <i class="bi bi-x-circle me-2"></i>Annuler
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg px-5 shadow">
                        <i class="bi bi-check-circle me-2"></i>{{ button_label|default('Enregistrer') }}
                    </button>
                </div>
            </div>
            {{ form_end(form) }}

        </div>
    </div>
</div>

<style>
    .form-floating > .form-control:focus ~ label {
        color: #667eea !important;
    }
    
    .form-control:focus, 
    textarea.form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
    }
    
    .form-label {
        font-weight: 600;
        color: #495057;
    }
</style>
{% endblock %}
