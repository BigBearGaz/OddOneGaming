{% extends 'base.html.twig' %}

{% block title %}Heroes Gallery - OddOne Gaming{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
    <style>
        /* Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            overflow-x: hidden;
        }

        /* Hero Section avec fond ch√¢teau */
        .heroes-section {
            position: relative;
            min-height: 100vh;
            background: 
                linear-gradient(135deg, rgba(10, 14, 39, 0.92) 0%, rgba(26, 31, 58, 0.92) 100%),
                url('{{ asset('images/castle-background.jpg') }}') center/cover no-repeat fixed;
            padding: 180px 0 80px 0;
        }

        .heroes-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 50%, rgba(0, 255, 100, 0.08) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(0, 200, 255, 0.08) 0%, transparent 50%);
            pointer-events: none;
        }

        .container-custom {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 40px;
            position: relative;
            z-index: 2;
        }

        /* Header */
        .page-header {
            text-align: center;
            margin-bottom: 50px;
        }

        .page-title {
            font-size: 3.5rem;
            font-weight: 900;
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 25px;
            text-transform: uppercase;
            letter-spacing: -1px;
        }

        .add-hero-btn {
            display: inline-block;
            padding: 15px 40px;
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            color: #0a0e27;
            font-size: 1rem;
            font-weight: 700;
            text-decoration: none;
            border-radius: 50px;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            box-shadow: 0 10px 30px rgba(0, 255, 136, 0.3);
        }

        .add-hero-btn:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 15px 40px rgba(0, 255, 136, 0.5);
            color: #0a0e27;
        }

        /* Filters Card */
        .filters-card {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 35px;
            border: 1px solid rgba(0, 255, 136, 0.2);
            margin-bottom: 40px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        }

        .filters-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 25px;
            color: #00ff88;
            font-size: 1.5rem;
            font-weight: 700;
        }

        .filter-group {
            margin-bottom: 20px;
        }

        .filter-label {
            display: block;
            color: #00ff88;
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 0.95rem;
        }

        .filter-select {
            width: 100%;
            padding: 12px 16px;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(0, 255, 136, 0.2);
            border-radius: 10px;
            color: #ffffff;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .filter-select:focus {
            outline: none;
            border-color: #00ff88;
            background: rgba(255, 255, 255, 0.08);
            box-shadow: 0 0 0 3px rgba(0, 255, 136, 0.1);
        }

        .filter-select option {
            background: #1a1f3a;
            color: #ffffff;
        }

        .filters-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 20px;
            margin-bottom: 25px;
        }

        .filter-actions {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
        }

        .btn-filter {
            padding: 12px 30px;
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            color: #0a0e27;
            border: none;
            border-radius: 25px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-filter:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(0, 255, 136, 0.4);
        }

        .btn-reset {
            padding: 12px 30px;
            background: rgba(255, 255, 255, 0.05);
            color: #ffffff;
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 25px;
            font-weight: 600;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-block;
        }

        .btn-reset:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.4);
            color: #ffffff;
        }

        /* Results Counter */
        .results-counter {
            color: #00ff88;
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 30px;
            text-align: center;
            transition: all 0.3s ease;
        }

        /* Heroes Grid */
        .heroes-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 30px;
            margin-bottom: 50px;
        }

        /* Hero Card */
        .hero-card {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid rgba(0, 255, 136, 0.2);
            overflow: hidden;
            transition: all 0.4s ease;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        }

        .hero-card.hidden {
            display: none;
        }

        .hero-card:hover {
            transform: translateY(-10px);
            border-color: rgba(0, 255, 136, 0.5);
            box-shadow: 0 20px 60px rgba(0, 255, 136, 0.3);
        }

        .hero-image {
            position: relative;
            height: 250px;
            overflow: hidden;
        }

        .hero-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.4s ease;
        }

        .hero-card:hover .hero-image img {
            transform: scale(1.1);
        }

        .leader-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
            color: #0a0e27;
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: 700;
            font-size: 0.9rem;
            box-shadow: 0 5px 15px rgba(255, 215, 0, 0.4);
        }

        .hero-header {
            background: linear-gradient(135deg, rgba(0, 255, 136, 0.2) 0%, rgba(0, 204, 255, 0.2) 100%);
            padding: 20px;
            text-align: center;
            border-bottom: 1px solid rgba(0, 255, 136, 0.2);
        }

        .hero-name {
            color: #00ff88;
            font-size: 1.5rem;
            font-weight: 700;
            margin: 0;
        }

        .hero-body {
            padding: 25px;
        }

        .hero-badges {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin-bottom: 20px;
        }

        .badge-custom {
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .badge-faction {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #ffffff;
        }

        .badge-type {
            background: rgba(255, 255, 255, 0.1);
            color: #ffffff;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .badge-affinity {
            background: linear-gradient(135deg, #00d2ff 0%, #3a7bd5 100%);
            color: #ffffff;
        }

        .hero-info {
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 20px;
            font-size: 0.95rem;
        }

        .hero-info strong {
            color: #00ff88;
        }

        .hero-divider {
            border: none;
            height: 1px;
            background: rgba(0, 255, 136, 0.2);
            margin: 20px 0;
        }

        .skills-section {
            margin-top: 15px;
        }

        .skills-title {
            color: #00ccff;
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 12px;
        }

        .skill-item {
            margin-bottom: 10px;
            font-size: 0.9rem;
        }

        .skill-badge {
            display: inline-block;
            background: rgba(0, 255, 136, 0.1);
            color: #00ff88;
            padding: 4px 10px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.8rem;
            margin-right: 8px;
        }

        .skill-text {
            color: rgba(255, 255, 255, 0.7);
        }

        .hero-footer {
            padding: 20px;
            background: rgba(0, 0, 0, 0.2);
            border-top: 1px solid rgba(0, 255, 136, 0.1);
        }

        .hero-actions {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
        }

        .btn-action {
            padding: 12px;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            text-align: center;
            transition: all 0.3s ease;
            font-size: 0.95rem;
        }

        .btn-view {
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            color: #0a0e27;
        }

        .btn-view:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(0, 255, 136, 0.4);
            color: #0a0e27;
        }

        .btn-edit {
            background: rgba(255, 255, 255, 0.05);
            color: #ffffff;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .btn-edit:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: #00ff88;
            color: #00ff88;
        }

        /* Empty State */
        .empty-state {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid rgba(0, 255, 136, 0.2);
            padding: 60px 40px;
            text-align: center;
            grid-column: 1 / -1;
            display: none;
        }

        .empty-state.show {
            display: block;
        }

        .empty-icon {
            font-size: 5rem;
            color: rgba(255, 255, 255, 0.2);
            margin-bottom: 20px;
        }

        .empty-title {
            color: #00ff88;
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .empty-text {
            color: rgba(255, 255, 255, 0.7);
            font-size: 1.1rem;
            margin-bottom: 30px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .container-custom {
                padding: 0 20px;
            }

            .page-title {
                font-size: 2.5rem;
            }

            .heroes-grid {
                grid-template-columns: 1fr;
            }

            .filters-grid {
                grid-template-columns: 1fr;
            }

            .hero-actions {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="heroes-section">
        <div class="container-custom">
            <!-- Header -->
            <div class="page-header">
                <h1 class="page-title">Heroes Gallery</h1>
            </div>

            <div class="filters-card">
                <div class="filters-header">
                    üîç Filters
                </div>
                
                <div class="filters-grid">
                    <div class="filter-group">
                        <label class="filter-label">‚öîÔ∏è Faction</label>
                        <select id="filter-faction" class="filter-select">
                            <option value="">All Factions</option>
                            {% for faction in factions %}
                                <option value="{{ faction }}">{{ faction }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">üõ°Ô∏è Type</label>
                        <select id="filter-type" class="filter-select">
                            <option value="">All Types</option>
                            {% for type in types %}
                                <option value="{{ type }}">{{ type }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">‚ö° Affinity</label>
                        <select id="filter-affinity" class="filter-select">
                            <option value="">All Affinities</option>
                            {% for affinity in affinities %}
                                <option value="{{ affinity }}">{{ affinity }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">üö© Allegiance</label>
                        <select id="filter-allegiance" class="filter-select">
                            <option value="">All Allegiances</option>
                            {% for allegiance in allegiances %}
                                <option value="{{ allegiance }}">{{ allegiance }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">‚≠ê Leader Type</label>
                        <select id="filter-leader" class="filter-select">
                            <option value="">All Leaders</option>
                            {% for leaderType in leaderTypes %}
                                <option value="{{ leaderType }}">{{ leaderType }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">‚ú® Buffs</label>
                        <select id="filter-buffs" class="filter-select">
                            <option value="">All Buffs</option>
                            {% for buff in buffs %}
                                <option value="{{ buff }}">{{ buff }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">üíÄ Debuffs</label>
                        <select id="filter-debuffs" class="filter-select">
                            <option value="">All Debuffs</option>
                            {% for debuff in debuffs %}
                                <option value="{{ debuff }}">{{ debuff }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">üö´ Disables</label>
                        <select id="filter-disable" class="filter-select">
                            <option value="">All Disables</option>
                            {% for disable in disables %}
                                <option value="{{ disable }}">{{ disable }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="filter-actions">
                    <button type="button" id="btn-reset" class="btn-reset">
                        ‚ùå Reset All
                    </button>
                    <a href="{{ path('app_heroes_import') }}" style="padding: 12px 30px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 25px; text-decoration: none; font-weight: 700;">
                        üì§ Importer depuis Excel
                    </a>
                </div>
            </div>

            <!-- Results Counter -->
            <div class="results-counter" id="results-counter">
                üìä {{ heroes|length }} hero{{ heroes|length != 1 ? 'es' : '' }} found
            </div>

            <!-- Heroes Grid -->
            <div class="heroes-grid" id="heroes-grid">
                {% for hero in heroes %}
                    {% set leaderType = '' %}
                    {% if hero.Leader %}
                        {% set leaderLower = hero.Leader|lower %}
                        {% if 'speed' in leaderLower %}
                            {% set leaderType = 'Speed' %}
                        {% elseif 'defense' in leaderLower %}
                            {% set leaderType = 'Defense' %}
                        {% elseif 'attack' in leaderLower %}
                            {% set leaderType = 'Attack' %}
                        {% elseif 'hp' in leaderLower %}
                            {% set leaderType = 'Health' %}
                        {% elseif 'initiative' in leaderLower or 'init' in leaderLower %}
                            {% set leaderType = 'Initiative' %}
                        {% elseif 'resistance' in leaderLower %}
                            {% set leaderType = 'Resistance' %}
                        {% elseif 'accuracy' in leaderLower %}
                            {% set leaderType = 'Accuracy' %}
                        {% elseif 'critical rate' in leaderLower or 'crit rate' in leaderLower %}
                            {% set leaderType = 'Crit Rate' %}
                        {% elseif 'critical damage' in leaderLower or 'crit damage' in leaderLower %}
                            {% set leaderType = 'Crit Damage' %}
                        {% endif %}
                    {% endif %}

                    <div class="hero-card" 
                         data-faction="{{ hero.faction|lower }}"
                         data-type="{{ hero.type|lower }}"
                         data-affinity="{{ hero.affinity|lower }}"
                         data-allegiance="{{ hero.allegiance|lower }}"
                         data-leader="{{ hero.Leader ? 'yes' : 'no' }}"
                         data-leader-type="{{ leaderType|lower }}"
                         data-buffs="{{ hero.buffs|lower }}"
                         data-debuffs="{{ hero.debuffs|lower }}"
                         data-disable="{{ hero.disable|lower }}">
                        
                        <!-- Image -->
                        <div class="hero-image">
                            {% if hero.imageUrl %}
                                <img src="{{ hero.imageUrl }}" alt="{{ hero.Name }}">
                            {% else %}
                                <img src="https://via.placeholder.com/400x250/667eea/ffffff?text={{ hero.Name|url_encode }}" alt="{{ hero.Name }}">
                            {% endif %}
                            
                            {% if hero.Leader %}
                                <div class="leader-badge">‚≠ê {{ leaderType }}</div>
                            {% endif %}
                        </div>

                        <!-- Header -->
                        <div class="hero-header">
                            <h3 class="hero-name">{{ hero.Name }}</h3>
                        </div>

                        <!-- Body -->
                        <div class="hero-body">
                            <!-- Badges -->
                            <div class="hero-badges">
                                <span class="badge-custom badge-faction">{{ hero.faction }}</span>
                                <span class="badge-custom badge-type">{{ hero.type }}</span>
                                <span class="badge-custom badge-affinity">{{ hero.affinity }}</span>
                            </div>

                            <!-- Info -->
                            <div class="hero-info">
                                <strong>üö© Allegiance:</strong> {{ hero.allegiance }}
                            </div>

                            <hr class="hero-divider">

                            <!-- Skills -->
                            <div class="skills-section">
                                <div class="skills-title">‚ö° Skills</div>
                                
                                <div class="skill-item">
                                    <span class="skill-badge">Base</span>
                                    <span class="skill-text">{{ hero.base|length > 50 ? hero.base|slice(0, 50) ~ '...' : hero.base }}</span>
                                </div>
                                
                                <div class="skill-item">
                                    <span class="skill-badge">Core</span>
                                    <span class="skill-text">{{ hero.core|length > 50 ? hero.core|slice(0, 50) ~ '...' : hero.core }}</span>
                                </div>
                                
                                <div class="skill-item">
                                    <span class="skill-badge">Ultimate</span>
                                    <span class="skill-text">{{ hero.ultimate|length > 50 ? hero.ultimate|slice(0, 50) ~ '...' : hero.ultimate }}</span>
                                </div>
                            </div>
                        </div>

                        <!-- Footer -->
                        <div class="hero-footer">
                            <div class="hero-actions">
                                <a href="{{ path('app_heroes_show', {'id': hero.id}) }}" class="btn-action btn-view">
                                    üëÅÔ∏è View
                                </a>
                                <a href="{{ path('app_heroes_edit', {'id': hero.id}) }}" class="btn-action btn-edit">
                                    ‚úèÔ∏è Edit
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                <!-- Empty State -->
                <div class="empty-state" id="empty-state">
                    <div class="empty-icon">üì≠</div>
                    <h3 class="empty-title">No Heroes Found</h3>
                    <p class="empty-text">No heroes match your filter criteria.</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // R√©cup√®re tous les filtres
            const filters = {
                faction: document.getElementById('filter-faction'),
                type: document.getElementById('filter-type'),
                affinity: document.getElementById('filter-affinity'),
                allegiance: document.getElementById('filter-allegiance'),
                leader: document.getElementById('filter-leader'),
                buffs: document.getElementById('filter-buffs'),
                debuffs: document.getElementById('filter-debuffs'),
                disable: document.getElementById('filter-disable')
            };

            const heroCards = document.querySelectorAll('.hero-card');
            const resultsCounter = document.getElementById('results-counter');
            const emptyState = document.getElementById('empty-state');
            const btnReset = document.getElementById('btn-reset');

            // Fonction de filtrage
            function filterHeroes() {
                const selectedFilters = {
                    faction: filters.faction.value.toLowerCase(),
                    type: filters.type.value.toLowerCase(),
                    affinity: filters.affinity.value.toLowerCase(),
                    allegiance: filters.allegiance.value.toLowerCase(),
                    leader: filters.leader.value.toLowerCase(),
                    buffs: filters.buffs.value.toLowerCase(),
                    debuffs: filters.debuffs.value.toLowerCase(),
                    disable: filters.disable.value.toLowerCase()
                };

                let visibleCount = 0;

                heroCards.forEach(card => {
                    let shouldShow = true;

                    // V√©rifie chaque filtre
                    for (const [key, value] of Object.entries(selectedFilters)) {
                        if (value !== '') {
                            let cardValue = '';
                            
                            // Pour le leader, utilise data-leader-type
                            if (key === 'leader') {
                                cardValue = card.dataset.leaderType.toLowerCase();
                                if (cardValue !== value) {
                                    shouldShow = false;
                                    break;
                                }
                            }
                            // Pour buffs, debuffs, disable : v√©rifie si la valeur est contenue
                            else if (key === 'buffs' || key === 'debuffs' || key === 'disable') {
                                cardValue = card.dataset[key].toLowerCase();
                                if (!cardValue.includes(value)) {
                                    shouldShow = false;
                                    break;
                                }
                            } 
                            // Pour les autres filtres : √©galit√© stricte
                            else {
                                cardValue = card.dataset[key].toLowerCase();
                                if (cardValue !== value) {
                                    shouldShow = false;
                                    break;
                                }
                            }
                        }
                    }

                    // Affiche ou cache la carte
                    if (shouldShow) {
                        card.classList.remove('hidden');
                        visibleCount++;
                    } else {
                        card.classList.add('hidden');
                    }
                });

                // Met √† jour le compteur
                resultsCounter.textContent = `üìä ${visibleCount} hero${visibleCount !== 1 ? 'es' : ''} found`;

                // Affiche l'√©tat vide si aucun r√©sultat
                if (visibleCount === 0) {
                    emptyState.classList.add('show');
                } else {
                    emptyState.classList.remove('show');
                }
            }

            // Ajoute les listeners sur chaque filtre
            Object.values(filters).forEach(filter => {
                filter.addEventListener('change', filterHeroes);
            });

            // Bouton Reset
            btnReset.addEventListener('click', function() {
                // R√©initialise tous les filtres
                Object.values(filters).forEach(filter => {
                    filter.value = '';
                });
                
                // Affiche toutes les cartes
                heroCards.forEach(card => {
                    card.classList.remove('hidden');
                });

                // Met √† jour le compteur
                resultsCounter.textContent = `üìä ${heroCards.length} hero${heroCards.length !== 1 ? 'es' : ''} found`;
                
                // Cache l'√©tat vide
                emptyState.classList.remove('show');
            });
        });
    </script>
{% endblock %}
