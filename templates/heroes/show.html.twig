                                {% set imageSource = null %}
                                {% if hero.allegianceEntity.iconUrl is defined and hero.allegianceEntity.iconUrl %}
                                    {% set hasImage = true %}
                                    {% set imageSource = hero.allegianceEntity.iconUrl %}
                                {% elseif hero.allegianceEntity.imageUrl is defined and hero.allegianceEntity.imageUrl %}
                                    {% set hasImage = true %}
                                    {% set imageSource = hero.allegianceEntity.imageUrl %}
                                {% endif %}
                                {% if hasImage and imageSource %}
                                    <img src="{{ imageSource }}" alt="{{ hero.allegianceEntity.name }}" class="badge-icon" loading="lazy" onerror="this.style.display='none'">
                                {% endif %}
                                {{ hero.allegianceEntity.name }}
                            </span>
                        {% endif %}
                    </div>

                    <!-- Weapons and Leader -->
                    <div class="weapons-leader-grid">
                        {% if hero.weapons|length > 0 %}
                            <div class="info-box info-box-weapons">
                                <div class="info-box-title">‚öîÔ∏è Recommended Weapons</div>
                                {% for weapon in hero.weapons %}
                                    <div class="weapon-item" tabindex="0" data-name="{{ weapon.name|e('html_attr') }}" data-description="{{ weapon.description ? (weapon.description|striptags)|e('html_attr') : '' }}">
