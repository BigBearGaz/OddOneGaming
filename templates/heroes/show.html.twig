            <div class="hero-header-section">
                <!-- Hero Image -->
                <div class="hero-image-container">
                    {% if hero.imageUrl %}
                        <img src="{{ hero.imageUrl }}" alt="{{ hero.Name }}">
                    {% else %}
                        <img src="https://via.placeholder.com/400x600/667eea/ffffff?text={{ hero.Name|url_encode }}" alt="{{ hero.Name }}">
                    {% endif %}
                    
                    <div class="hero-image-overlay">
                        <h1 class="hero-main-title">{{ hero.Name }}</h1>
