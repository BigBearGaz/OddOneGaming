            align-items: center;
            justify-content: center;
            cursor: pointer;
            font-size: 1.2rem;
            transition: all 0.3s ease;
            flex-shrink: 0;
        }

        .skill-modal-close:active {
            background: rgba(255, 255, 255, 0.2);
            transform: scale(0.95);
        }

        .skill-modal-body {
            padding: 20px;
            font-size: 0.95rem;
            color: rgba(255, 255, 255, 0.85);
            line-height: 1.7;
        }

        /* Accordion styles */
        .accordion-item {
            background: rgba(255, 255, 255, 0.05);
            border: 2px solid var(--rarity-border);
            border-radius: 12px;
            margin-bottom: 1rem;
        }

        .accordion-button {
            background: var(--rarity-bg);
            color: var(--rarity-primary);
            font-weight: 700;
            border-radius: 12px;
            padding: 1rem 1.5rem;
        }

        .accordion-button:not(.collapsed) {
            background: var(--rarity-bg);
            color: var(--rarity-primary);
            box-shadow: none;
        }

        .accordion-button:focus {
            box-shadow: 0 0 0 4px var(--rarity-glow);
            border-color: var(--rarity-primary);
        }

        .accordion-body {
            background: rgba(0, 0, 0, 0.2);
            padding: 1.5rem;
            border-radius: 0 0 12px 12px;
            color: rgba(255, 255, 255, 0.9);
        }

        /* Bonuses Section */
        .bonuses-section {
            padding: 30px;
            background: var(--rarity-bg);
            border-top: 2px solid var(--rarity-border);
        }

        .bonuses-title {
            color: var(--rarity-primary);
            font-size: 1.5rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            text-shadow: 0 2px 12px var(--rarity-glow);
        }

        .bonuses-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
            gap: 20px;
        }

        .bonus-card {
            background: rgba(255, 255, 255, 0.03);
            padding: 24px;
            border-radius: 14px;
            border: 2px solid var(--rarity-border);
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

        .bonus-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 24px var(--rarity-glow);
        }

        .bonus-card-title {
            color: var(--rarity-primary);
            font-size: 1.15rem;
            font-weight: 700;
            margin-bottom: 16px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        /* Bonus Lists */
        .bonus-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .bonus-list li {
            color: rgba(255, 255, 255, 0.9);
            padding: 10px 0 10px 26px;
            position: relative;
            line-height: 1.6;
            font-size: 0.95rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        .bonus-list li:last-child {
            border-bottom: none;
        }

        .bonus-list li::before {
            content: '‚≠ê';
            position: absolute;
            left: 0;
            color: var(--rarity-primary);
            font-weight: 700;
            font-size: 1.2rem;
        }

        /* Video Section */
        .video-section {
            padding: 30px;
            background: rgba(0, 0, 0, 0.2);
            border-top: 1px solid rgba(255, 0, 0, 0.3);
        }

        .video-container {
            position: relative;
            padding-bottom: 56.25%;
            height: 0;
            overflow: hidden;
            border-radius: 14px;
            background: rgba(0, 0, 0, 0.5);
            border: 2px solid rgba(255, 0, 0, 0.5);
            box-shadow: 0 8px 32px rgba(255, 0, 0, 0.3);
        }

        .video-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: none;
            border-radius: 12px;
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .hero-header-section {
                grid-template-columns: 1fr;
            }

            .hero-image-container {
                height: 350px;
            }

            .skills-grid,
            .bonuses-grid {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .container-custom {
                padding: 0 16px;
            }

            .hero-main-title {
                font-size: 1.6rem;
            }

            .weapons-leader-grid {
                grid-template-columns: 1fr;
            }

            .imprints-grid {
                grid-template-columns: 1fr;
            }

            .equipment-grid {
                grid-template-columns: 1fr;
            }

            .action-buttons {
                flex-direction: column;
            }

            .btn-edit,
            .btn-delete {
                width: 100%;
                justify-content: center;
            }

            .skill-meta-badges {
                flex-direction: column;
                align-items: flex-start;
            }

            .set-item-triangle img {
                width: 45px;
                height: 45px;
            }
        }
    </style>
