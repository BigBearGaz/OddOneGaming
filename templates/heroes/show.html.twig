{% block javascripts %}
  {{ parent() }}

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      if (window.__skillTooltipInitialized) return;
      window.__skillTooltipInitialized = true;

      const canHover = window.matchMedia ? window.matchMedia('(any-hover: hover)').matches : false;

      // ---------- DOM singletons ----------
      let tooltip = document.querySelector('.skill-tooltip');
      if (!tooltip) {
        tooltip = document.createElement('div');
        tooltip.className = 'skill-tooltip';
        tooltip.innerHTML = `
          <div class="skill-tooltip-header"></div>
          <div class="skill-tooltip-body"></div>
        `;
        document.body.appendChild(tooltip);
      }

      let modalOverlay = document.querySelector('.skill-modal-overlay');
      if (!modalOverlay) {
        modalOverlay = document.createElement('div');
        modalOverlay.className = 'skill-modal-overlay';
        modalOverlay.innerHTML = `
          <div class="skill-modal">
            <div class="skill-modal-header">
              <span id="modalTitle" style="flex: 1;"></span>
              <button class="skill-modal-close" aria-label="Close">‚úï</button>
            </div>
            <div class="skill-modal-body" id="modalBody"></div>
          </div>
        `;
        document.body.appendChild(modalOverlay);
      }

      const tooltipHeader = tooltip.querySelector('.skill-tooltip-header');
      const tooltipBody   = tooltip.querySelector('.skill-tooltip-body');
      const modalHeader   = modalOverlay.querySelector('.skill-modal-header');
      const modalTitle    = modalOverlay.querySelector('#modalTitle');
      const modalBody     = modalOverlay.querySelector('#modalBody');
      const closeBtn      = modalOverlay.querySelector('.skill-modal-close');

      // S√©curit√©: le tooltip ne doit jamais capter la souris
      tooltip.style.pointerEvents = 'none';

      // ---------- State ----------
      let activeEl = null;
      let tooltipTimeout = null;

      // ---------- Helpers ----------
      const findInteractive = (target) => {
        if (!(target instanceof Element)) return null;
        // Normalise: buffs, armes, sets
        return target.closest('.skill-effect, .weapon-item, .set-item-triangle');
      };

      const getType = (el) => {
        if (!el) return 'buff';
        if (el.classList.contains('weapon-item')) return 'weapon';
        if (el.classList.contains('set-item-triangle')) return 'set';
        if (el.classList.contains('effect-debuff')) return 'debuff';
        if (el.classList.contains('effect-disable')) return 'disable';
        // buff par d√©faut (skill-effect effect-buff ou autre)
        return 'buff';
      };

      const getData = (el) => {
        if (!el) return { name: 'Unknown', description: 'No description', type: 'buff' };

        // 1) Nom: armes/sets => data-name; buffs => data-effect (ou data-name si tu ajoutes plus tard)
        const name =
          el.dataset.name ||
          el.dataset.effect ||
          'Unknown';

        // 2) Description: armes/sets => data-description d√©j√† HTML-attr safe; buffs => data-description ou inner content
        let description = el.dataset.description || '';

        // Pour les buffs, tu as parfois un inner node d√©di√© (tu l'utilisais d√©j√†)
        const inner = el.querySelector('[data-tooltip-target="content"]');
        if (inner && inner.innerText && inner.innerText.trim()) {
          description = inner.innerText.trim();
        }

        return {
          name,
          description: (description && description.trim()) ? description.trim() : 'No description',
          type: getType(el),
        };
      };

      const positionTooltip = (e) => {
        const ww = window.innerWidth;
        const rect = tooltip.getBoundingClientRect();
        const tw = 300;
        const th = rect.height || 160;

        let x = e.clientX - tw / 2;
        let y = e.clientY - th - 12;

        if (x < 10) x = 10;
        if (x + tw > ww - 10) x = ww - tw - 10;
        if (y < 10) y = e.clientY + 12;

        tooltip.style.left = x + 'px';
        tooltip.style.top  = y + 'px';
      };

      const showTooltip = (el, e) => {
        const data = getData(el);

        tooltipHeader.textContent = data.name;
        tooltipHeader.className = `skill-tooltip-header ${data.type}`;

        tooltipBody.textContent = data.description;
        tooltip.className = `skill-tooltip ${data.type}`;
        tooltip.style.display = 'block';

        activeEl = el;
        positionTooltip(e);
      };

      const hideTooltip = () => {
        tooltip.style.display = 'none';
        activeEl = null;
        if (tooltipTimeout) clearTimeout(tooltipTimeout);
        tooltipTimeout = null;
      };

      const showModal = (el) => {
        const data = getData(el);

        modalTitle.textContent = data.name;
        modalHeader.className = `skill-modal-header ${data.type}`;
        modalBody.textContent = data.description;

        modalOverlay.classList.add('active');
        document.body.style.overflow = 'hidden';
      };

      const closeModal = () => {
        modalOverlay.classList.remove('active');
        document.body.style.overflow = '';
      };

      // ---------- Events ----------
      if (canHover) {
        document.addEventListener('mouseover', (e) => {
          const el = findInteractive(e.target);
          if (!el) return;

          if (activeEl === el) return;

          if (tooltipTimeout) clearTimeout(tooltipTimeout);
          tooltipTimeout = setTimeout(() => showTooltip(el, e), 80);
        }, true);

        document.addEventListener('mouseout', (e) => {
          const el = findInteractive(e.target);
          if (!el) return;

          const to = e.relatedTarget;
          if (to instanceof Node && el.contains(to)) return;

          hideTooltip();
        }, true);

        document.addEventListener('mousemove', (e) => {
          if (activeEl) positionTooltip(e);
        }, true);

        // Bonus: accessibilit√© clavier (armes/sets ont tabindex=0 dans ton HTML)
        document.addEventListener('focusin', (e) => {
          const el = findInteractive(e.target);
          if (!el) return;

          // Simule une position tooltip si focus (au centre de l'√©l√©ment)
          const r = el.getBoundingClientRect();
          const fakeEvent = { clientX: r.left + r.width / 2, clientY: r.top + 10 };
          showTooltip(el, fakeEvent);
        }, true);

        document.addEventListener('focusout', (e) => {
          const el = findInteractive(e.target);
          if (!el) return;
          hideTooltip();
        }, true);
      }

      // Mobile / no-hover => modal au click
      document.addEventListener('click', (e) => {
        if (canHover) return;

        const el = findInteractive(e.target);
        if (!el) return;

        e.preventDefault();
        showModal(el);
      });

      // Clavier: Enter/Espace ouvre modal si no-hover
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
          hideTooltip();
          closeModal();
          return;
        }

        if (!canHover && (e.key === 'Enter' || e.key === ' ')) {
          const el = findInteractive(e.target);
          if (!el) return;
          e.preventDefault();
          showModal(el);
        }
      }, true);

      if (closeBtn) closeBtn.addEventListener('click', closeModal);

      modalOverlay.addEventListener('click', (e) => {
        if (e.target === modalOverlay) closeModal();
      });
    });
  </script>
