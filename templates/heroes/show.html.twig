                                {% set imageSource = null %}
                                {% if hero.affinityEntity.iconUrl is defined and hero.affinityEntity.iconUrl %}
                                    {% set hasImage = true %}
                                    {% set imageSource = hero.affinityEntity.iconUrl %}
                                {% elseif hero.affinityEntity.imageUrl is defined and hero.affinityEntity.imageUrl %}
                                    {% set hasImage = true %}
                                    {% set imageSource = hero.affinityEntity.imageUrl %}
