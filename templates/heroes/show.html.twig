{% extends 'base.html.twig' %}

{% block title %}{{ hero.Name }} - Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            overflow-x: hidden;
        }

        /* Hero Detail Section */
        .hero-detail-section {
            position: relative;
            min-height: 100vh;
            background: 
                linear-gradient(135deg, rgba(10, 14, 39, 0.92) 0%, rgba(26, 31, 58, 0.92) 100%),
                url('{{ asset('images/castle-background.jpg') }}') center/cover no-repeat fixed;
            padding: 180px 0 80px 0;
        }

        .hero-detail-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 50%, rgba(0, 255, 100, 0.08) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(0, 200, 255, 0.08) 0%, transparent 50%);
            pointer-events: none;
        }

        .container-custom {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 40px;
            position: relative;
            z-index: 2;
        }

        /* Back Button */
        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 12px 30px;
            background: rgba(255, 255, 255, 0.05);
            color: #00ff88;
            border: 1px solid rgba(0, 255, 136, 0.3);
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            margin-bottom: 40px;
            transition: all 0.3s ease;
        }

        .back-btn:hover {
            background: rgba(0, 255, 136, 0.1);
            border-color: #00ff88;
            transform: translateX(-5px);
            color: #00ff88;
        }

        /* Main Hero Card */
        .hero-card-detail {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            border: 1px solid rgba(0, 255, 136, 0.2);
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
        }

        /* Hero Header with Image */
        .hero-header-section {
            display: grid;
            grid-template-columns: 400px 1fr;
            gap: 0;
        }

        .hero-image-container {
            position: relative;
            height: 600px;
            overflow: hidden;
        }

        .hero-image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .hero-image-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 30px;
            background: linear-gradient(to top, rgba(0, 0, 0, 0.95), transparent);
        }

        .hero-main-title {
            color: #00ff88;
            font-size: 2.5rem;
            font-weight: 900;
            margin: 0;
            text-transform: uppercase;
        }

        .hero-id {
            color: rgba(255, 255, 255, 0.5);
            font-size: 1rem;
        }

        .leader-badge-large {
            position: absolute;
            top: 20px;
            right: 20px;
            background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
            color: #0a0e27;
            padding: 12px 24px;
            border-radius: 25px;
            font-weight: 700;
            font-size: 1.1rem;
            box-shadow: 0 8px 25px rgba(255, 215, 0, 0.5);
        }

        /* Hero Info Section */
        .hero-info-section {
            padding: 40px;
        }

        .hero-badges-main {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
            margin-bottom: 30px;
        }

        .badge-large {
            padding: 12px 24px;
            border-radius: 25px;
            font-size: 1rem;
            font-weight: 700;
        }

        .badge-faction {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #ffffff;
        }

        .badge-type {
            background: rgba(255, 255, 255, 0.1);
            color: #ffffff;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .badge-affinity {
            background: linear-gradient(135deg, #00d2ff 0%, #3a7bd5 100%);
            color: #ffffff;
        }

        .badge-allegiance {
            background: rgba(0, 0, 0, 0.3);
            color: #ffffff;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        /* Video Section */
        .video-section {
            padding: 40px;
            background: rgba(0, 0, 0, 0.2);
            border-top: 1px solid rgba(255, 0, 0, 0.3);
        }

        .video-container {
            position: relative;
            padding-bottom: 56.25%; /* 16:9 aspect ratio */
            height: 0;
            overflow: hidden;
            border-radius: 16px;
            background: rgba(0, 0, 0, 0.5);
            border: 2px solid rgba(255, 0, 0, 0.5);
            box-shadow: 0 10px 40px rgba(255, 0, 0, 0.3);
        }

        .video-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: none;
            border-radius: 14px;
        }

        /* Weapons and Leader Grid */
        .weapons-leader-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .info-box {
            padding: 20px;
            border-radius: 16px;
            border: 2px solid;
        }

        .info-box-weapons {
            background: rgba(102, 126, 234, 0.1);
            border-color: rgba(102, 126, 234, 0.5);
        }

        .info-box-leader {
            background: rgba(255, 215, 0, 0.1);
            border-color: rgba(255, 215, 0, 0.5);
        }

        .info-box-title {
            font-size: 1.1rem;
            font-weight: 700;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .info-box-weapons .info-box-title {
            color: #667eea;
        }

        .info-box-leader .info-box-title {
            color: #ffd700;
        }

        .weapon-item {
            color: rgba(255, 255, 255, 0.9);
            margin-bottom: 10px;
            display: flex;
            align-items: flex-start;
            gap: 10px;
        }

        .weapon-number {
            background: rgba(102, 126, 234, 0.5);
            color: #ffffff;
            padding: 4px 10px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.85rem;
            flex-shrink: 0;
        }

        .leader-text {
            color: rgba(255, 255, 255, 0.9);
            line-height: 1.6;
        }

        /* Imprints Section */
        .imprints-section {
            margin-bottom: 30px;
        }

        .section-title {
            color: #00ff88;
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .imprints-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 15px;
        }

        .imprint-box {
            padding: 15px;
            background: rgba(0, 255, 136, 0.05);
            border: 1px solid rgba(0, 255, 136, 0.3);
            border-radius: 12px;
        }

        .imprint-level {
            background: rgba(0, 255, 136, 0.3);
            color: #ffffff;
            padding: 4px 12px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.85rem;
            display: inline-block;
            margin-bottom: 8px;
        }

        .imprint-text {
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.9rem;
            line-height: 1.5;
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .btn-edit {
            padding: 14px 35px;
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            color: #0a0e27;
            border: none;
            border-radius: 25px;
            font-weight: 700;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
        }

        .btn-edit:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(0, 255, 136, 0.4);
            color: #0a0e27;
        }

        .btn-delete {
            padding: 14px 35px;
            background: rgba(255, 82, 82, 0.2);
            color: #ff5252;
            border: 1px solid #ff5252;
            border-radius: 25px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-delete:hover {
            background: rgba(255, 82, 82, 0.3);
            transform: translateY(-3px);
        }

        /* Skills Section */
        .skills-section {
            padding: 40px;
            background: rgba(0, 0, 0, 0.2);
            border-top: 1px solid rgba(0, 255, 136, 0.2);
        }

        .skills-title {
            color: #00ccff;
            font-size: 2rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
        }

        .skills-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
            gap: 20px;
        }

        .skill-card {
            padding: 25px;
            background: rgba(255, 255, 255, 0.03);
            border-left: 4px solid;
            border-radius: 12px;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

        .skill-card:hover {
            transform: translateX(5px);
            background: rgba(255, 255, 255, 0.05);
        }

        .skill-card-base {
            border-color: #667eea;
        }

        .skill-card-core {
            border-color: #00ff88;
        }

        .skill-card-ultimate {
            border-color: #ff5252;
        }

        .skill-card-passive {
            border-color: #ffd700;
        }

        .skill-card-imprint {
            border-color: #00ccff;
            grid-column: 1 / -1;
        }

        .skill-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 15px;
        }

        .skill-badge {
            padding: 6px 14px;
            border-radius: 10px;
            font-weight: 700;
            font-size: 0.9rem;
        }

        .skill-badge-base { background: #667eea; color: #fff; }
        .skill-badge-core { background: #00ff88; color: #0a0e27; }
        .skill-badge-ultimate { background: #ff5252; color: #fff; }
        .skill-badge-passive { background: #ffd700; color: #0a0e27; }
        .skill-badge-imprint { background: #00ccff; color: #0a0e27; }

        .skill-name {
            font-weight: 600;
            font-size: 1.1rem;
        }

        .skill-card-base .skill-name { color: #667eea; }
        .skill-card-core .skill-name { color: #00ff88; }
        .skill-card-ultimate .skill-name { color: #ff5252; }
        .skill-card-passive .skill-name { color: #ffd700; }
        .skill-card-imprint .skill-name { color: #00ccff; }

        .skill-description {
            color: rgba(255, 255, 255, 0.85);
            line-height: 1.7;
            font-size: 1rem;
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .hero-header-section {
                grid-template-columns: 1fr;
            }

            .hero-image-container {
                height: 400px;
            }

            .skills-grid {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .container-custom {
                padding: 0 20px;
            }

            .hero-main-title {
                font-size: 2rem;
            }

            .weapons-leader-grid {
                grid-template-columns: 1fr;
            }

            .imprints-grid {
                grid-template-columns: 1fr;
            }

            .action-buttons {
                flex-direction: column;
            }

            .btn-edit, .btn-delete {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="hero-detail-section">
        <div class="container-custom">
            <!-- Back Button -->
            <a href="{{ path('app_heroes_index') }}" class="back-btn">
                ‚Üê Back to Gallery
            </a>

            <!-- Main Hero Card -->
            <div class="hero-card-detail">
                <!-- Hero Header with Image and Info -->
                <div class="hero-header-section">
                    <!-- Hero Image -->
                    <div class="hero-image-container">
                        {% if hero.imageUrl %}
                            <img src="{{ hero.imageUrl }}" alt="{{ hero.Name }}">
                        {% else %}
                            <img src="https://via.placeholder.com/400x600/667eea/ffffff?text={{ hero.Name|url_encode }}" alt="{{ hero.Name }}">
                        {% endif %}
                        
                        <div class="hero-image-overlay">
                            <h1 class="hero-main-title">{{ hero.Name }}</h1>
                            <p class="hero-id">#{{ hero.id }}</p>
                        </div>

                        {% if hero.Leader %}
                            <div class="leader-badge-large">‚≠ê LEADER</div>
                        {% endif %}
                    </div>

                    <!-- Hero Info -->
                    <div class="hero-info-section">
                        <!-- Main Badges -->
                        <div class="hero-badges-main">
                            <span class="badge-large badge-faction">‚öîÔ∏è {{ hero.faction }}</span>
                            <span class="badge-large badge-type">üõ°Ô∏è {{ hero.type }}</span>
                            <span class="badge-large badge-affinity">‚ö° {{ hero.affinity }}</span>
                            <span class="badge-large badge-allegiance">üö© {{ hero.allegiance }}</span>
                        </div>

                        <!-- Weapons and Leader -->
                        <div class="weapons-leader-grid">
                            {% if hero.weapons1 or hero.weapons2 %}
                            <div class="info-box info-box-weapons">
                                <div class="info-box-title">
                                    ‚öîÔ∏è Recommended Weapons
                                </div>
                                {% if hero.weapons1 %}
                                <div class="weapon-item">
                                    <span class="weapon-number">1</span>
                                    <span>{{ hero.weapons1 }}</span>
                                </div>
                                {% endif %}
                                {% if hero.weapons2 %}
                                <div class="weapon-item">
                                    <span class="weapon-number">2</span>
                                    <span>{{ hero.weapons2 }}</span>
                                </div>
                                {% endif %}
                            </div>
                            {% endif %}

                            {% if hero.Leader %}
                            <div class="info-box info-box-leader">
                                <div class="info-box-title">
                                    ‚≠ê Leader Skill
                                </div>
                                <div class="leader-text">{{ hero.Leader }}</div>
                            </div>
                            {% endif %}
                        </div>

                        <!-- Imprints -->
                        {% if hero.imprint1 or hero.imprint2 or hero.imprint3 %}
                        <div class="imprints-section">
                            <h3 class="section-title">üíé Imprints</h3>
                            <div class="imprints-grid">
                                {% if hero.imprint1 %}
                                <div class="imprint-box">
                                    <span class="imprint-level">Level I</span>
                                    <div class="imprint-text">{{ hero.imprint1 }}</div>
                                </div>
                                {% endif %}
                                {% if hero.imprint2 %}
                                <div class="imprint-box">
                                    <span class="imprint-level">Level II</span>
                                    <div class="imprint-text">{{ hero.imprint2 }}</div>
                                </div>
                                {% endif %}
                                {% if hero.imprint3 %}
                                <div class="imprint-box">
                                    <span class="imprint-level">Level III</span>
                                    <div class="imprint-text">{{ hero.imprint3 }}</div>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                        {% endif %}

                        <!-- Action Buttons -->
                        <div class="action-buttons">
                            <a href="{{ path('app_heroes_edit', {'id': hero.id}) }}" class="btn-edit">
                                ‚úèÔ∏è Edit Hero
                            </a>
                            {{ include('heroes/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>

                <!-- Skills Section -->
                <div class="skills-section">
                    <h2 class="skills-title">‚ö° Skills & Abilities</h2>
                    
                    <div class="skills-grid">
                        <!-- Base Skill -->
                        <div class="skill-card skill-card-base">
                            <div class="skill-header">
                                <span class="skill-badge skill-badge-base">A1</span>
                                <span class="skill-name">Base Skill</span>
                            </div>
                            <div class="skill-description">{{ hero.base }}</div>
                        </div>

                        <!-- Core Skill -->
                        <div class="skill-card skill-card-core">
                            <div class="skill-header">
                                <span class="skill-badge skill-badge-core">A2</span>
                                <span class="skill-name">Core Skill</span>
                            </div>
                            <div class="skill-description">{{ hero.core }}</div>
                        </div>

                        <!-- Ultimate -->
                        <div class="skill-card skill-card-ultimate">
                            <div class="skill-header">
                                <span class="skill-badge skill-badge-ultimate">A3</span>
                                <span class="skill-name">Ultimate</span>
                            </div>
                            <div class="skill-description">{{ hero.ultimate }}</div>
                        </div>

                        <!-- Passive -->
                        <div class="skill-card skill-card-passive">
                            <div class="skill-header">
                                <span class="skill-badge skill-badge-passive">Passive</span>
                                <span class="skill-name">Passive Skill</span>
                            </div>
                            <div class="skill-description">{{ hero.passive }}</div>
                        </div>

                        <!-- Imprint General -->
                        <div class="skill-card skill-card-imprint">
                            <div class="skill-header">
                                <span class="skill-badge skill-badge-imprint">Imprint</span>
                                <span class="skill-name">Imprint Bonus</span>
                            </div>
                            <div class="skill-description">{{ hero.imprint }}</div>
                        </div>
                    </div>
                </div>

                <!-- Video Section (TOUT EN BAS APR√àS LES SKILLS) -->
                {% if hero.videosUrl %}
                <div class="video-section">
                    <h2 class="section-title">üé• Video Guide</h2>
                    <div class="video-container">
                        <iframe 
                            src="{{ hero.videosUrl }}" 
                            allowfullscreen
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture">
                        </iframe>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
