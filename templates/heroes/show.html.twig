                </div>

                <!-- Hero Info -->
                <div class="hero-info-section">
                    <!-- Main Badges avec ic√¥nes -->
                    <div class="hero-badges-main">
                        {% if hero.factionEntity %}
                            <span class="badge-large badge-faction">
                                {% set hasImage = false %}
                                {% set imageSource = null %}
                                {% if hero.factionEntity.iconUrl is defined and hero.factionEntity.iconUrl %}
                                    {% set hasImage = true %}
                                    {% set imageSource = hero.factionEntity.iconUrl %}
                                {% elseif hero.factionEntity.imageUrl is defined and hero.factionEntity.imageUrl %}
                                    {% set hasImage = true %}
                                    {% set imageSource = hero.factionEntity.imageUrl %}
                                {% endif %}
                                {% if hasImage and imageSource %}
                                    <img src="{{ imageSource }}" alt="{{ hero.factionEntity.name }}" class="badge-icon" loading="lazy" onerror="this.style.display='none'">
                                {% endif %}
                                {{ hero.factionEntity.name }}
                            </span>
                        {% endif %}

                        {% if hero.typeEntity %}
                            <span class="badge-large badge-type">
                                {% set hasImage = false %}
                                {% set imageSource = null %}
                                {% if hero.typeEntity.iconUrl is defined and hero.typeEntity.iconUrl %}
                                    {% set hasImage = true %}
                                    {% set imageSource = hero.typeEntity.iconUrl %}
                                {% elseif hero.typeEntity.imageUrl is defined and hero.typeEntity.imageUrl %}
                                    {% set hasImage = true %}
                                    {% set imageSource = hero.typeEntity.imageUrl %}
                                {% endif %}
                                {% if hasImage and imageSource %}
                                    <img src="{{ imageSource }}" alt="{{ hero.typeEntity.name }}" class="badge-icon" loading="lazy" onerror="this.style.display='none'">
                                {% endif %}
                                {{ hero.typeEntity.name }}
                            </span>
