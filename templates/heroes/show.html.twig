{% extends 'base.html.twig' %}

{% block title %}{{ hero.Name }} - Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            overflow-x: hidden;
        }

        /* Hero Detail Section */
        .hero-detail-section {
            position: relative;
            min-height: 100vh;
            background: 
                linear-gradient(135deg, rgba(10, 14, 39, 0.92) 0%, rgba(26, 31, 58, 0.92) 100%),
                url('{{ asset('images/castle-background.jpg') }}') center/cover no-repeat fixed;
            padding: 100px 0 50px 0;
        }

        .hero-detail-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 50%, rgba(0, 255, 100, 0.08) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(0, 200, 255, 0.08) 0%, transparent 50%);
            pointer-events: none;
        }

        .container-custom {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 30px;
            position: relative;
            z-index: 2;
        }

        /* Back Button */
        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 10px 24px;
            background: rgba(255, 255, 255, 0.05);
            color: #00ff88;
            border: 1px solid rgba(0, 255, 136, 0.3);
            border-radius: 20px;
            text-decoration: none;
            font-weight: 600;
            margin-bottom: 30px;
            transition: all 0.3s ease;
            font-size: 0.95rem;
        }

        .back-btn:hover {
            background: rgba(0, 255, 136, 0.1);
            border-color: #00ff88;
            transform: translateX(-5px);
            color: #00ff88;
        }

        /* Main Hero Card */
        .hero-card-detail {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid rgba(0, 255, 136, 0.2);
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
        }

        /* Hero Header with Image */
        .hero-header-section {
            display: grid;
            grid-template-columns: 350px 1fr;
            gap: 0;
        }

        .hero-image-container {
            position: relative;
            height: 480px;
            overflow: hidden;
        }

        .hero-image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .hero-image-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 24px;
            background: linear-gradient(to top, rgba(0, 0, 0, 0.95), transparent);
        }

        .hero-main-title {
            color: #00ff88;
            font-size: 2rem;
            font-weight: 900;
            margin: 0;
            text-transform: uppercase;
        }

        .hero-id {
            color: rgba(255, 255, 255, 0.5);
            font-size: 0.9rem;
        }

        .leader-badge-large {
            position: absolute;
            top: 15px;
            right: 15px;
            background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
            color: #0a0e27;
            padding: 10px 20px;
            border-radius: 20px;
            font-weight: 700;
            font-size: 0.95rem;
            box-shadow: 0 6px 20px rgba(255, 215, 0, 0.5);
            z-index: 5;
        }

        /* Rarity Display */
        .rarity-display {
            color: #ffd700;
            font-size: 1rem;
            font-weight: 700;
            margin-top: 8px;
            text-shadow: 0 2px 8px rgba(0, 0, 0, 0.8);
            background: rgba(0, 0, 0, 0.4);
            padding: 5px 10px;
            border-radius: 6px;
            display: inline-block;
            border: 2px solid rgba(255, 215, 0, 0.5);
        }

        /* Hero Info Section */
        .hero-info-section {
            padding: 30px;
        }

        /* Badges avec ic√¥nes */
        .hero-badges-main {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
            margin-bottom: 28px;
            padding: 8px 0;
        }

        .badge-large {
            display: inline-flex;
            align-items: center;
            padding: 10px 20px;
            border-radius: 24px;
            font-size: 0.95rem;
            font-weight: 700;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .badge-large:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
        }

        .badge-icon {
            width: 24px;
            height: 24px;
            object-fit: contain;
            margin-right: 8px;
            filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
            transition: transform 0.3s ease;
        }

        .badge-large:hover .badge-icon {
            transform: scale(1.1) rotate(5deg);
        }

        .badge-faction {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #ffffff;
            border: 2px solid rgba(255, 255, 255, 0.2);
        }

        .badge-type {
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.15) 0%, rgba(255, 255, 255, 0.05) 100%);
            color: #ffffff;
            border: 2px solid rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
        }

        .badge-affinity {
            background: linear-gradient(135deg, #00d2ff 0%, #3a7bd5 100%);
            color: #ffffff;
            border: 2px solid rgba(255, 255, 255, 0.2);
        }

        .badge-allegiance {
            background: linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.2) 100%);
            color: #ffffff;
            border: 2px solid rgba(255, 255, 255, 0.25);
            backdrop-filter: blur(10px);
        }

        /* Weapons and Leader Grid */
        .weapons-leader-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 16px;
            margin-bottom: 24px;
        }

        .info-box {
            padding: 16px;
            border-radius: 14px;
            border: 2px solid;
        }

        .info-box-weapons {
            background: rgba(102, 126, 234, 0.1);
            border-color: rgba(102, 126, 234, 0.5);
        }

        .info-box-leader {
            background: rgba(255, 215, 0, 0.1);
            border-color: rgba(255, 215, 0, 0.5);
        }

        .info-box-title {
            font-size: 1rem;
            font-weight: 700;
            margin-bottom: 12px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .info-box-weapons .info-box-title {
            color: #667eea;
        }

        .info-box-leader .info-box-title {
            color: #ffd700;
        }

        .weapon-item {
            color: rgba(255, 255, 255, 0.9);
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 0.95rem;
            padding: 8px;
            border-radius: 8px;
            background: rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }

        .weapon-item:hover {
            background: rgba(102, 126, 234, 0.2);
            transform: translateX(3px);
        }

        .weapon-image {
            width: 45px;
            height: 45px;
            border-radius: 10px;
            overflow: hidden;
            background: rgba(102, 126, 234, 0.2);
            border: 2px solid rgba(102, 126, 234, 0.5);
            flex-shrink: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .weapon-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .weapon-number {
            background: rgba(102, 126, 234, 0.5);
            color: #ffffff;
            padding: 3px 8px;
            border-radius: 6px;
            font-weight: 600;
            font-size: 0.8rem;
            flex-shrink: 0;
        }

        .leader-content {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .leader-image {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            overflow: hidden;
            background: linear-gradient(135deg, rgba(255, 215, 0, 0.3), rgba(255, 215, 0, 0.1));
            border: 3px solid rgba(255, 215, 0, 0.6);
            flex-shrink: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 15px rgba(255, 215, 0, 0.3);
        }

        .leader-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .leader-text {
            color: rgba(255, 255, 255, 0.9);
            line-height: 1.5;
            font-size: 0.95rem;
            flex: 1;
        }

        /* Imprints Section */
        .imprints-section {
            margin-bottom: 24px;
        }

        .section-title {
            color: #00ff88;
            font-size: 1.3rem;
            font-weight: 700;
            margin-bottom: 16px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .imprints-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 12px;
        }

        .imprint-box {
            padding: 12px;
            background: rgba(0, 255, 136, 0.05);
            border: 1px solid rgba(0, 255, 136, 0.3);
            border-radius: 10px;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: all 0.3s ease;
        }

        .imprint-box:hover {
            background: rgba(0, 255, 136, 0.1);
            border-color: rgba(0, 255, 136, 0.5);
            transform: translateY(-2px);
        }

        .imprint-image {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            overflow: hidden;
            background: linear-gradient(135deg, rgba(0, 255, 136, 0.3), rgba(0, 255, 136, 0.1));
            border: 2px solid rgba(0, 255, 136, 0.5);
            flex-shrink: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 15px rgba(0, 255, 136, 0.3);
        }

        .imprint-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .imprint-content {
            flex: 1;
        }

        .imprint-level {
            background: rgba(0, 255, 136, 0.3);
            color: #ffffff;
            padding: 3px 10px;
            border-radius: 6px;
            font-weight: 600;
            font-size: 0.8rem;
            display: inline-block;
            margin-bottom: 6px;
        }

        .imprint-text {
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.85rem;
            line-height: 1.4;
        }

        /* Sets Triangle Display */
        .sets-triangle-container {
            padding: 20px;
            background: linear-gradient(135deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0.3) 100%);
            border: 2px solid rgba(0, 255, 136, 0.3);
            border-radius: 16px;
            box-shadow: 0 6px 24px rgba(0, 0, 0, 0.5);
            margin-bottom: 20px;
        }

        .sets-triangle-title {
            color: #00ff88;
            font-size: 0.9rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 16px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .set-item-triangle {
            position: relative;
            background: linear-gradient(135deg, rgba(0, 255, 136, 0.15) 0%, rgba(0, 255, 136, 0.05) 100%);
            border: 2px solid rgba(0, 255, 136, 0.4);
            border-radius: 12px;
            padding: 10px;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .set-item-triangle:hover {
            transform: scale(1.05) translateY(-3px);
            border-color: rgba(0, 255, 136, 0.8);
            box-shadow: 0 10px 30px rgba(0, 255, 136, 0.5);
        }

        .set-item-triangle img {
            width: 55px;
            height: 55px;
            object-fit: contain;
            filter: drop-shadow(0 3px 10px rgba(0, 255, 136, 0.6));
        }

        /* Equipment Section */
        .equipment-section {
            margin-bottom: 24px;
        }

        .equipment-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 16px;
        }

        .equipment-item {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(102, 126, 234, 0.05) 100%);
            border: 2px solid rgba(102, 126, 234, 0.3);
            border-radius: 14px;
            padding: 16px;
            transition: all 0.3s ease;
        }

        .equipment-item:hover {
            transform: translateY(-2px);
            border-color: rgba(102, 126, 234, 0.6);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.3);
        }

        .equipment-content {
            flex: 1;
        }

        .equipment-name {
            color: #667eea;
            font-weight: 700;
            font-size: 1rem;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 0.3px;
        }

        .equipment-main-stat {
            color: #00ff88;
            font-weight: 700;
            font-size: 1.05rem;
            margin-bottom: 12px;
            padding: 8px 12px;
            background: rgba(0, 255, 136, 0.1);
            border-left: 3px solid #00ff88;
            border-radius: 6px;
        }

        .equipment-substats {
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        .equipment-substat {
            color: rgba(255, 255, 255, 0.85);
            font-size: 0.9rem;
            padding: 6px 10px;
            background: rgba(0, 0, 0, 0.3);
            border-radius: 5px;
            border-left: 2px solid rgba(102, 126, 234, 0.5);
            line-height: 1.4;
        }

        .equipment-substat::before {
            content: '‚ñ∏';
            color: #667eea;
            margin-right: 6px;
            font-size: 0.75rem;
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
        }

        .btn-edit {
            padding: 12px 28px;
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            color: #0a0e27;
            border: none;
            border-radius: 20px;
            font-weight: 700;
            font-size: 0.95rem;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

        .btn-edit:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(0, 255, 136, 0.4);
            color: #0a0e27;
        }

        .btn-delete {
            padding: 12px 28px;
            background: rgba(255, 82, 82, 0.2);
            color: #ff5252;
            border: 1px solid #ff5252;
            border-radius: 20px;
            font-weight: 700;
            font-size: 0.95rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-delete:hover {
            background: rgba(255, 82, 82, 0.3);
            transform: translateY(-2px);
        }

        /* Skills Section */
        .skills-section {
            padding: 30px;
            background: rgba(0, 0, 0, 0.2);
            border-top: 1px solid rgba(0, 255, 136, 0.2);
        }

        .skills-title {
            color: #00ccff;
            font-size: 1.6rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 28px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            text-shadow: 0 2px 12px rgba(0, 204, 255, 0.5);
        }

        .skills-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(420px, 1fr));
            gap: 20px;
        }

        .skill-card {
            padding: 0;
            background: rgba(255, 255, 255, 0.03);
            border-radius: 14px;
            backdrop-filter: blur(10px);
            overflow: hidden;
            border: 2px solid;
            transition: all 0.3s ease;
        }

        .skill-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 32px rgba(0, 0, 0, 0.5);
        }

        .skill-card-base {
            border-color: #667eea;
        }

        .skill-card-core {
            border-color: #00ff88;
        }

        .skill-card-ultimate {
            border-color: #ff5252;
        }

        .skill-card-passive {
            border-color: #ffd700;
        }

        /* Header du skill */
        .skill-header {
            padding: 16px 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            border-bottom: 2px solid rgba(255, 255, 255, 0.1);
        }

        .skill-card-base .skill-header {
            background: rgba(102, 126, 234, 0.15);
        }

        .skill-card-core .skill-header {
            background: rgba(0, 255, 136, 0.15);
        }

        .skill-card-ultimate .skill-header {
            background: rgba(255, 82, 82, 0.15);
        }

        .cooldown-badge {
            background: rgba(6, 182, 212, 0.2);
            border: 1px solid rgba(6, 182, 212, 0.5);
            color: #06b6d4;
            padding: 6px 12px;
            border-radius: 8px;
            font-size: 0.85rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .cooldown-badge i {
            font-size: 0.9rem;
        }

        .skill-card-passive .skill-header {
            background: rgba(255, 215, 0, 0.15);
        }

        .skill-title-wrapper {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .skill-badge {
            padding: 6px 14px;
            border-radius: 10px;
            font-weight: 700;
            font-size: 0.9rem;
            box-shadow: 0 3px 12px rgba(0, 0, 0, 0.3);
        }

        .skill-badge-base {
            background: #667eea;
            color: #fff;
        }

        .skill-badge-core {
            background: #00ff88;
            color: #0a0e27;
        }

        .skill-badge-ultimate {
            background: #ff5252;
            color: #fff;
        }

        .skill-badge-passive {
            background: #ffd700;
            color: #0a0e27;
        }

        .skill-name {
            font-weight: 700;
            font-size: 1.1rem;
        }

        .skill-card-base .skill-name {
            color: #667eea;
        }

        .skill-card-core .skill-name {
            color: #00ff88;
        }

        .skill-card-ultimate .skill-name {
            color: #ff5252;
        }

        .skill-card-passive .skill-name {
            color: #ffd700;
        }

        /* Cooldown and Divinity badges */
        .skill-meta-badges {
            display: flex;
            gap: 8px;
            align-items: center;
        }

        .cooldown-badge,
        .divinity-badge {
            background: rgba(0, 0, 0, 0.5);
            padding: 6px 12px;
            border-radius: 16px;
            font-weight: 600;
            font-size: 0.85rem;
            color: #fff;
            display: flex;
            align-items: center;
            gap: 5px;
            box-shadow: 0 3px 12px rgba(0, 0, 0, 0.4);
        }

        .divinity-badge.divinity-initial {
            background: linear-gradient(135deg, rgba(138, 43, 226, 0.6) 0%, rgba(75, 0, 130, 0.6) 100%);
            border: 2px solid rgba(138, 43, 226, 0.8);
        }

        .divinity-badge.divinity-cost {
            background: linear-gradient(135deg, rgba(255, 20, 147, 0.6) 0%, rgba(199, 21, 133, 0.6) 100%);
            border: 2px solid rgba(255, 20, 147, 0.8);
        }

        /* Body du skill */
        .skill-body {
            padding: 20px;
        }

        /* Description principale */
        .skill-description {
            color: rgba(255, 255, 255, 0.95);
            line-height: 1.7;
            font-size: 0.95rem;
            margin-bottom: 0;
            padding: 14px;
            background: rgba(255, 255, 255, 0.03);
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.15);
        }

        /* Accordion styles */
        .accordion-item {
            background: rgba(255, 255, 255, 0.05);
            border: 2px solid rgba(0, 255, 136, 0.2);
            border-radius: 12px;
            margin-bottom: 1rem;
        }

        .accordion-button {
            background: rgba(6, 182, 212, 0.15);
            color: #06b6d4;
            font-weight: 700;
            border-radius: 12px;
            padding: 1rem 1.5rem;
        }

        .accordion-button:not(.collapsed) {
            background: rgba(6, 182, 212, 0.25);
            color: #06b6d4;
            box-shadow: none;
        }

        .accordion-button:focus {
            box-shadow: 0 0 0 4px rgba(6, 182, 212, 0.2);
            border-color: #06b6d4;
        }

        .accordion-button::after {
            filter: brightness(0) saturate(100%) invert(64%) sepia(84%) saturate(1543%) hue-rotate(156deg) brightness(93%) contrast(98%);
        }

        .accordion-body {
            background: rgba(0, 0, 0, 0.2);
            padding: 1.5rem;
            border-radius: 0 0 12px 12px;
            color: rgba(255, 255, 255, 0.9);
        }

        /* Bonuses Section */
        .bonuses-section {
            padding: 30px;
            background: rgba(255, 215, 0, 0.05);
            border-top: 2px solid rgba(255, 215, 0, 0.3);
        }

        .bonuses-title {
            color: #ffd700;
            font-size: 1.5rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            text-shadow: 0 2px 12px rgba(255, 215, 0, 0.5);
        }

        .bonuses-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
            gap: 20px;
        }

        .bonus-card {
            background: rgba(255, 255, 255, 0.03);
            padding: 24px;
            border-radius: 14px;
            border: 2px solid rgba(255, 215, 0, 0.3);
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

        .bonus-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 24px rgba(255, 215, 0, 0.3);
        }

        .bonus-card-title {
            color: #ffd700;
            font-size: 1.15rem;
            font-weight: 700;
            margin-bottom: 16px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        /* Bonus Lists */
        .bonus-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .bonus-list li {
            color: rgba(255, 255, 255, 0.9);
            padding: 10px 0 10px 26px;
            position: relative;
            line-height: 1.6;
            font-size: 0.95rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        .bonus-list li:last-child {
            border-bottom: none;
        }

