            background: rgba(255, 255, 255, 0.05);
            color: #00ff88;
            text-decoration: none;
            border-radius: 25px;
            font-weight: 600;
            border: 1px solid rgba(0, 255, 136, 0.3);
            transition: all 0.3s ease;
            margin-bottom: 30px;
        }

        .back-btn:hover {
            background: rgba(0, 255, 136, 0.1);
            border-color: #00ff88;
            transform: translateX(-5px);
        }

        .page-header {
            text-align: center;
            margin-bottom: 50px;
        }

        .page-title {
            font-size: 3rem;
            font-weight: 900;
            color: #ffffff;
            margin-bottom: 10px;
        }

        .page-subtitle {
            color: rgba(255, 255, 255, 0.6);
            font-size: 1.1rem;
        }

        .section {
            margin-bottom: 60px;
        }

        .section-header {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 30px;
            padding-bottom: 15px;
            border-bottom: 2px solid rgba(255, 255, 255, 0.1);
        }

        .section-title {
            font-size: 2rem;
            font-weight: 700;
            color: #ffffff;
        }

        .section-title.buffs {
            color: #00ff88;
        }

        .section-title.debuffs {
            color: #ff4757;
        }

        .section-title.disables {
            color: #ffa502;
        }

        .effects-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 20px;
        }

        .effect-card {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 20px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .effect-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, transparent, var(--accent-color), transparent);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .effect-card:hover {
            transform: translateY(-5px);
            border-color: var(--accent-color);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        .effect-card:hover::before {
            opacity: 1;
        }

        .effect-card.buff {
            --accent-color: #00ff88;
        }

        .effect-card.debuff {
            --accent-color: #ff4757;
        }

        .effect-card.disable {
            --accent-color: #ffa502;
        }

        .effect-icon {
            font-size: 2rem;
            margin-bottom: 10px;
        }

        .effect-name {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--accent-color);
            margin-bottom: 12px;
        }

        .effect-description {
            color: rgba(255, 255, 255, 0.8);
            line-height: 1.6;
            font-size: 0.9rem;
        }

        .effect-levels {
            margin-top: 10px;
            padding-top: 10px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .effect-level {
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.85rem;
            margin: 5px 0;
            padding-left: 10px;
            position: relative;
        }

        .effect-level::before {
