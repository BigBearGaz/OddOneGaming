            left: 0;
            color: var(--accent-color);
        }

        .effect-level strong {
            color: var(--accent-color);
            font-weight: 600;
        }

        @media (max-width: 768px) {
            .effects-grid {
                grid-template-columns: 1fr;
            }

            .page-title {
                font-size: 2rem;
            }

            .section-title {
                font-size: 1.5rem;
            }
        }
    </style>
{% endblock %}

