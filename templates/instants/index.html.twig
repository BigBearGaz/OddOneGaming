{% extends 'base.html.twig' %}

{% block title %}Admin - Instants Database{% endblock %}

{% block body %}
<div class="container pb-5" style="margin-top: 110px;">
    
    {# MINIMALIST HEADER #}
    <div class="d-flex justify-content-between align-items-end mb-5">
        <div>
            <h1 class="text-white fw-black mb-0 tracking-tighter" style="font-size: 2.5rem;">INSTANTS</h1>
            <p class="text-secondary small text-uppercase tracking-widest mb-0">System Registry â€” Immediate Effects</p>
        </div>
        <a href="{{ path('app_instants_new') }}" class="btn-new-instant">
            <i class="fas fa-plus me-2"></i> NEW EFFECT
        </a>
    </div>

    {# CLEAN GRID LAYOUT #}
    <div class="row g-4">
        {% for instant in instants %}
            <div class="col-md-6 col-xl-4">
                <div class="instant-card">
                    <div class="card-glow"></div>
                    
                    <div class="d-flex align-items-start position-relative">
                        {# ICON #}
                        <div class="icon-wrapper me-3">
                            {% if instant.icon %}
                                <img src="{{ instant.icon }}" alt="icon">
                            {% else %}
                                <i class="fas fa-bolt text-info"></i>
                            {% endif %}
                        </div>

                        {# CONTENT #}
                        <div class="flex-grow-1">
                            <div class="d-flex justify-content-between align-items-start">
                                <h5 class="text-white fw-bold mb-1">{{ instant.name }}</h5>
                                <span class="text-secondary font-monospace small">#{{ instant.id }}</span>
                            </div>
                            <p class="text-muted small mb-3 description-text">
                                {{ instant.description|default('No description provided.') }}
                            </p>
                        </div>
                    </div>

                    {# ACTIONS #}
                    <div class="card-actions pt-3 border-top border-secondary border-opacity-10 d-flex justify-content-end gap-2">
                        <a href="{{ path('app_instants_show', {'id': instant.id}) }}" class="action-link link-view">
                            <i class="fas fa-eye me-1"></i> VIEW
                        </a>
                        <a href="{{ path('app_instants_edit', {'id': instant.id}) }}" class="action-link link-edit">
                            <i class="fas fa-pen-nib me-1"></i> EDIT
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center py-5">
                <p class="text-secondary italic">The registry is currently empty.</p>
            </div>
        {% endfor %}
    </div>
</div>

<style>
    /* TYPOGRAPHY */
    .fw-black { font-weight: 900; }
    .tracking-widest { letter-spacing: 0.2em; }

    /* NEW BUTTON */
    .btn-new-instant {
        background: #0dcaf0;
        color: #000;
        text-decoration: none;
        padding: 12px 24px;
        font-weight: 800;
        font-size: 0.85rem;
        letter-spacing: 1px;
        border-radius: 4px;
        transition: all 0.3s ease;
    }
    .btn-new-instant:hover {
        background: #fff;
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(13, 202, 240, 0.2);
    }

    /* THE CARD */
    .instant-card {
        background: #0f0f0f;
        border: 1px solid #1a1a1a;
        padding: 24px;
        border-radius: 8px;
        position: relative;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .instant-card:hover {
        border-color: #0dcaf0;
        transform: translateY(-5px);
        background: #141414;
    }

    .card-glow {
        position: absolute;
        top: 0; left: 0; width: 100%; height: 100%;
        background: radial-gradient(circle at top right, rgba(13, 202, 240, 0.05), transparent);
        pointer-events: none;
    }

    /* ICON WRAPPER */
    .icon-wrapper {
        width: 50px;
        height: 50px;
        background: #000;
        border: 1px solid #222;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }
    .icon-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 5px;
    }

    /* TEXT */
    .description-text {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        line-height: 1.6;
    }

    /* ACTION LINKS */
    .action-link {
        text-decoration: none;
        font-size: 0.75rem;
        font-weight: 800;
        letter-spacing: 1px;
        padding: 6px 12px;
        border-radius: 4px;
        transition: 0.2s;
    }
    .link-view { color: #888; border: 1px solid #222; }
    .link-view:hover { background: #fff; color: #000; border-color: #fff; }
    
    .link-edit { color: #0dcaf0; border: 1px solid rgba(13, 202, 240, 0.2); }
    .link-edit:hover { background: #0dcaf0; color: #000; }
</style>
{% endblock %}