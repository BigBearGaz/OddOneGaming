{% extends 'base.html.twig' %}

{% block title %}Dungeon Bosses - OddOne Gaming{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            overflow-x: hidden;
            background: 
                linear-gradient(135deg, rgba(10, 14, 39, 0.92) 0%, rgba(26, 31, 58, 0.92) 100%),
                url('{{ asset('images/castle-background.jpg') }}') center/cover no-repeat fixed;
            min-height: 100vh;
        }

        /* Dungeons Section */
        .dungeons-section {
            position: relative;
            min-height: 100vh;
            padding: 150px 0 80px 0;
        }

        .dungeons-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 50%, rgba(0, 255, 136, 0.08) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(0, 204, 255, 0.08) 0%, transparent 50%);
            pointer-events: none;
        }

        .container-custom {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 40px;
            position: relative;
            z-index: 2;
        }

        /* Header */
        .page-header {
            text-align: center;
            margin-bottom: 50px;
        }

        .page-title {
            font-size: 3rem;
            font-weight: 900;
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 15px;
        }

        .page-subtitle {
            color: rgba(255, 255, 255, 0.6);
            font-size: 1.1rem;
            margin-bottom: 30px;
        }

        .add-boss-btn {
            display: inline-block;
            padding: 14px 35px;
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            color: #0a0e27;
            font-size: 0.95rem;
            font-weight: 700;
            text-decoration: none;
            border-radius: 12px;
            transition: all 0.3s ease;
            box-shadow: 0 5px 20px rgba(0, 255, 136, 0.3);
        }

        .add-boss-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 30px rgba(0, 255, 136, 0.5);
            color: #0a0e27;
        }

        /* Bosses Grid */
        .bosses-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
            gap: 25px;
            margin-bottom: 60px;
        }

        /* Boss Card */
        .boss-card {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border-radius: 16px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 5px 25px rgba(0, 0, 0, 0.3);
        }

        .boss-card:hover {
            transform: translateY(-8px);
            border-color: rgba(0, 255, 136, 0.4);
            box-shadow: 0 15px 40px rgba(0, 255, 136, 0.2);
        }

        /* Boss Image */
        .boss-image-container {
            position: relative;
            height: 220px;
            background: linear-gradient(135deg, rgba(0, 255, 136, 0.15) 0%, rgba(0, 204, 255, 0.15) 100%);
            overflow: hidden;
        }

        .boss-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .boss-card:hover .boss-image {
            transform: scale(1.05);
        }

        .boss-difficulty {
            position: absolute;
            top: 12px;
            right: 12px;
            padding: 6px 14px;
            border-radius: 8px;
            font-weight: 700;
            font-size: 0.75rem;
            text-transform: uppercase;
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        }

        .difficulty-Easy {
            background: rgba(16, 185, 129, 0.9);
            color: #ffffff;
        }

        .difficulty-Normal {
            background: rgba(59, 130, 246, 0.9);
            color: #ffffff;
        }

        .difficulty-Hard {
            background: rgba(245, 158, 11, 0.9);
            color: #ffffff;
        }

        .difficulty-Hell {
            background: rgba(239, 68, 68, 0.9);
            color: #ffffff;
        }

        /* Boss Content */
        .boss-content {
            padding: 20px;
        }

        .boss-name {
            color: #00ff88;
            font-size: 1.4rem;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .boss-description {
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.85rem;
            line-height: 1.5;
            margin-bottom: 15px;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        /* Stats Row */
        .boss-stats {
            display: flex;
            gap: 10px;
            margin-bottom: 15px;
        }

        .stat-badge {
            flex: 1;
            padding: 8px 10px;
            border-radius: 8px;
            text-align: center;
            border: 1px solid;
        }

        .stat-badge-spells {
            background: rgba(59, 130, 246, 0.08);
            border-color: rgba(59, 130, 246, 0.3);
        }

        .stat-badge-passives {
            background: rgba(255, 215, 0, 0.08);
            border-color: rgba(255, 215, 0, 0.3);
        }

        .stat-badge-phases {
            background: rgba(168, 85, 247, 0.08);
            border-color: rgba(168, 85, 247, 0.3);
        }

        .stat-value {
            font-size: 1.3rem;
            font-weight: 700;
            display: block;
        }

        .stat-badge-spells .stat-value {
            color: #3b82f6;
        }

        .stat-badge-passives .stat-value {
            color: #ffd700;
        }

        .stat-badge-phases .stat-value {
            color: #a855f7;
        }

        .stat-label {
            font-size: 0.7rem;
            color: rgba(255, 255, 255, 0.5);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-top: 2px;
            display: block;
        }

        /* Actions */
        .boss-actions {
            display: grid;
            grid-template-columns: 1fr auto auto;
            gap: 8px;
            padding-top: 15px;
            border-top: 1px solid rgba(255, 255, 255, 0.08);
        }

        .btn-action {
            padding: 10px 18px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            text-align: center;
            transition: all 0.3s ease;
            font-size: 0.85rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
        }

        .btn-view {
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            color: #0a0e27;
        }

        .btn-view:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(0, 255, 136, 0.4);
            color: #0a0e27;
        }

        .btn-edit {
            background: rgba(255, 255, 255, 0.05);
            color: rgba(255, 255, 255, 0.8);
            border: 1px solid rgba(255, 255, 255, 0.15);
            padding: 10px 14px;
        }

        .btn-edit:hover {
            background: rgba(255, 255, 255, 0.1);
            color: #00ff88;
            border-color: rgba(0, 255, 136, 0.3);
        }

        .btn-delete {
            background: rgba(239, 68, 68, 0.08);
            color: #ef4444;
            border: 1px solid rgba(239, 68, 68, 0.2);
            cursor: pointer;
            padding: 10px 14px;
        }

        .btn-delete:hover {
            background: rgba(239, 68, 68, 0.15);
            border-color: rgba(239, 68, 68, 0.4);
        }

        /* Empty State */
        .empty-state {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border-radius: 16px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            padding: 80px 40px;
            text-align: center;
            grid-column: 1 / -1;
        }

        .empty-icon {
            font-size: 5rem;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .empty-title {
            color: #00ff88;
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .empty-text {
            color: rgba(255, 255, 255, 0.5);
            font-size: 1rem;
            margin-bottom: 25px;
        }

        /* Stats Section */
        .stats-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 60px;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border-radius: 16px;
            border: 1px solid;
            padding: 25px;
            text-align: center;
            transition: all 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-card:nth-child(1) {
            border-color: rgba(0, 255, 136, 0.3);
        }

        .stat-card:nth-child(2) {
            border-color: rgba(59, 130, 246, 0.3);
        }

        .stat-card:nth-child(3) {
            border-color: rgba(255, 215, 0, 0.3);
        }

        .stat-card:nth-child(4) {
            border-color: rgba(168, 85, 247, 0.3);
        }

        .stat-card-icon {
            font-size: 2rem;
            margin-bottom: 10px;
        }

        .stat-card:nth-child(1) .stat-card-icon {
            color: #00ff88;
        }

        .stat-card:nth-child(2) .stat-card-icon {
            color: #3b82f6;
        }

        .stat-card:nth-child(3) .stat-card-icon {
            color: #ffd700;
        }

        .stat-card:nth-child(4) .stat-card-icon {
            color: #a855f7;
        }

        .stat-card-value {
            font-size: 2rem;
            font-weight: 900;
            margin-bottom: 5px;
        }

        .stat-card:nth-child(1) .stat-card-value {
            color: #00ff88;
        }

        .stat-card:nth-child(2) .stat-card-value {
            color: #3b82f6;
        }

        .stat-card:nth-child(3) .stat-card-value {
            color: #ffd700;
        }

        .stat-card:nth-child(4) .stat-card-value {
            color: #a855f7;
        }

        .stat-card-label {
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* Responsive */
        @media (max-width: 1200px) {
            .bosses-grid {
                grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            }
        }

        @media (max-width: 768px) {
            .container-custom {
                padding: 0 20px;
            }

            .page-title {
                font-size: 2rem;
            }

            .bosses-grid {
                grid-template-columns: 1fr;
            }

            .boss-image-container {
                height: 180px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="dungeons-section">
        <div class="container-custom">
            <!-- Header -->
            <div class="page-header">
                <h1 class="page-title">üè∞ Dungeon Bosses</h1>
                <p class="page-subtitle">RAID Shadow Legends - Complete Boss Guide</p>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_dungeons_new') }}" class="add-boss-btn">
                        ‚ûï Add New Boss
                    </a>
                {% endif %}
            </div>

            <!-- Bosses Grid -->
            <div class="bosses-grid">
                {% for dungeon in dungeons %}
                    <div class="boss-card">
                        <!-- Boss Image -->
                        <div class="boss-image-container">
                            <img src="{{ dungeon.imageUrl ? dungeon.imageUrl : 'https://ui-avatars.com/api/?name=' ~ dungeon.name|url_encode ~ '&size=500&background=00ff88&color=0a0e27&bold=true&font-size=0.4' }}" 
                                 alt="{{ dungeon.name }}"
                                 class="boss-image">

                            {% if dungeon.difficulty %}
                                <div class="boss-difficulty difficulty-{{ dungeon.difficulty }}">
                                    {{ dungeon.difficulty }}
                                </div>
                            {% endif %}
                        </div>

                        <!-- Content -->
                        <div class="boss-content">
                            <h3 class="boss-name">{{ dungeon.name }}</h3>

                            {% if dungeon.description %}
                                <p class="boss-description">{{ dungeon.description }}</p>
                            {% endif %}

                            <!-- Stats -->
                            <div class="boss-stats">
                                <div class="stat-badge stat-badge-spells">
                                    <span class="stat-value">3</span>
                                    <span class="stat-label">Spells</span>
                                </div>
                                <div class="stat-badge stat-badge-passives">
                                    <span class="stat-value">{{ dungeon.passives|length }}</span>
                                    <span class="stat-label">Passives</span>
                                </div>
                                {% if dungeon.phases|length > 0 %}
                                    <div class="stat-badge stat-badge-phases">
                                        <span class="stat-value">{{ dungeon.phases|length }}</span>
                                        <span class="stat-label">Phases</span>
                                    </div>
                                {% endif %}
                            </div>

                            <!-- Actions -->
                            <div class="boss-actions">
                                <a href="{{ path('app_dungeons_show', {'id': dungeon.id}) }}" class="btn-action btn-view">
                                    <span>üëÅÔ∏è</span> View
                                </a>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('app_dungeons_edit', {'id': dungeon.id}) }}" class="btn-action btn-edit" title="Edit">
                                        ‚úèÔ∏è
                                    </a>
                                    <form method="post" action="{{ path('app_dungeons_delete', {'id': dungeon.id}) }}" style="margin: 0;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dungeon.id) }}">
                                        <button type="submit" class="btn-action btn-delete" onclick="return confirm('‚ö†Ô∏è Supprimer {{ dungeon.name }} ?');" title="Delete">
                                            üóëÔ∏è
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="empty-state">
                        <div class="empty-icon">üè∞</div>
                        <h3 class="empty-title">No Bosses Yet</h3>
                        <p class="empty-text">Start by creating your first boss</p>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_dungeons_new') }}" class="add-boss-btn">
                                ‚ûï Create First Boss
                            </a>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
