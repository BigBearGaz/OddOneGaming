{% extends 'base.html.twig' %}

{% block title %}{{ dungeon.name }} - Boss Guide{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            overflow-x: hidden;
            background: 
                linear-gradient(135deg, rgba(10, 14, 39, 0.92) 0%, rgba(26, 31, 58, 0.92) 100%),
                url('{{ asset('images/castle-background.jpg') }}') center/cover no-repeat fixed;
            min-height: 100vh;
        }

        /* Boss Detail Section */
        .boss-detail-section {
            position: relative;
            min-height: 100vh;
            padding: 180px 0 80px 0;
        }

        .boss-detail-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 50%, rgba(0, 255, 136, 0.08) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(0, 204, 255, 0.08) 0%, transparent 50%);
            pointer-events: none;
        }

        .container-custom {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 40px;
            position: relative;
            z-index: 2;
        }

        /* Breadcrumb */
        .breadcrumb-custom {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 40px;
            padding: 15px 25px;
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border-radius: 15px;
            border: 1px solid rgba(0, 255, 136, 0.2);
        }

        .breadcrumb-link {
            color: #00ff88;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .breadcrumb-link:hover {
            color: #00ccff;
        }

        .breadcrumb-separator {
            color: rgba(255, 255, 255, 0.4);
        }

        .breadcrumb-current {
            color: rgba(255, 255, 255, 0.7);
        }

        /* Layout Grid */
        .boss-layout {
            display: grid;
            grid-template-columns: 400px 1fr;
            gap: 40px;
            align-items: start;
        }

        /* Left Sidebar */
        .boss-sidebar {
            position: sticky;
            top: 100px;
        }

        .boss-info-card {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid rgba(0, 255, 136, 0.3);
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
        }

        .boss-avatar {
            position: relative;
            height: 350px;
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            overflow: hidden;
        }

        .boss-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0.9;
        }

        .boss-avatar-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 25px;
            background: linear-gradient(to top, rgba(0, 0, 0, 0.95), transparent);
        }

        .boss-main-name {
            color: #00ff88;
            font-size: 2rem;
            font-weight: 900;
            margin: 0;
        }

        .boss-id-label {
            color: rgba(255, 255, 255, 0.5);
            font-size: 0.9rem;
        }

        .boss-difficulty-badge {
            position: absolute;
            top: 20px;
            right: 20px;
            padding: 10px 20px;
            border-radius: 20px;
            font-weight: 700;
            font-size: 1rem;
            text-transform: uppercase;
        }

        .difficulty-Easy {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: #ffffff;
            box-shadow: 0 5px 20px rgba(16, 185, 129, 0.5);
        }

        .difficulty-Normal, .difficulty-Medium {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            color: #ffffff;
            box-shadow: 0 5px 20px rgba(59, 130, 246, 0.5);
        }

        .difficulty-Hard {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
            color: #ffffff;
            box-shadow: 0 5px 20px rgba(245, 158, 11, 0.5);
        }

        .difficulty-Hell, .difficulty-Expert {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: #ffffff;
            box-shadow: 0 5px 20px rgba(239, 68, 68, 0.5);
        }

        .boss-info-body {
            padding: 30px;
        }

        .boss-description {
            color: rgba(255, 255, 255, 0.8);
            line-height: 1.6;
            margin-bottom: 25px;
            padding: 20px;
            background: rgba(0, 255, 136, 0.05);
            border-left: 3px solid #00ff88;
            border-radius: 8px;
        }

        .info-section-title {
            color: #00ff88;
            font-size: 1.1rem;
            font-weight: 700;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 12px;
            margin-bottom: 25px;
        }

        .stat-box {
            padding: 15px;
            border-radius: 12px;
            text-align: center;
            border: 1px solid;
            transition: all 0.3s ease;
        }

        .stat-box:hover {
            transform: translateY(-2px);
        }

        .stat-box-spells {
            background: rgba(59, 130, 246, 0.1);
            border-color: rgba(59, 130, 246, 0.3);
        }

        .stat-box-passives {
            background: rgba(255, 215, 0, 0.1);
            border-color: rgba(255, 215, 0, 0.3);
        }

        .stat-box-phases {
            background: rgba(168, 85, 247, 0.1);
            border-color: rgba(168, 85, 247, 0.3);
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 900;
            margin-bottom: 5px;
        }

        .stat-box-spells .stat-value {
            color: #3b82f6;
        }

        .stat-box-passives .stat-value {
            color: #ffd700;
        }

        .stat-box-phases .stat-value {
            color: #a855f7;
        }

        .stat-label {
            color: rgba(255, 255, 255, 0.7);
            font-weight: 600;
            font-size: 0.85rem;
            margin: 0;
        }

        .action-buttons {
            display: grid;
            gap: 12px;
        }

        .btn-action-sidebar {
            padding: 14px;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            text-align: center;
            transition: all 0.3s ease;
            display: block;
        }

        .btn-edit-sidebar {
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            color: #0a0e27;
        }

        .btn-edit-sidebar:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(0, 255, 136, 0.4);
            color: #0a0e27;
        }

        .btn-delete-sidebar {
            background: rgba(239, 68, 68, 0.1);
            color: #ef4444;
            border: 1px solid rgba(239, 68, 68, 0.3);
            cursor: pointer;
            width: 100%;
        }

        .btn-delete-sidebar:hover {
            background: rgba(239, 68, 68, 0.2);
        }

        .btn-back-sidebar {
            background: rgba(255, 255, 255, 0.05);
            color: #ffffff;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .btn-back-sidebar:hover {
            background: rgba(255, 255, 255, 0.1);
            color: #ffffff;
        }

        /* Right Content */
        .boss-content {
            /* No sticky needed */
        }

        .content-header {
            margin-bottom: 40px;
        }

        .content-title {
            color: #00ff88;
            font-size: 2.5rem;
            font-weight: 900;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .content-subtitle {
            color: rgba(255, 255, 255, 0.7);
            font-size: 1.1rem;
        }

        .section-divider {
            margin: 50px 0 30px 0;
            color: rgba(255, 255, 255, 0.9);
            font-size: 1.8rem;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        /* Spell Cards */
        .spell-card {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid;
            overflow: hidden;
            margin-bottom: 25px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
        }

        .spell-card:hover {
            transform: translateY(-5px);
        }

        .spell-card-spell1 {
            border-color: rgba(59, 130, 246, 0.3);
        }

        .spell-card-spell2 {
            border-color: rgba(16, 185, 129, 0.3);
        }

        .spell-card-spell3 {
            border-color: rgba(239, 68, 68, 0.3);
        }

        .spell-header {
            padding: 20px 25px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .spell-header-spell1 {
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(59, 130, 246, 0.05) 100%);
        }

        .spell-header-spell2 {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.2) 0%, rgba(16, 185, 129, 0.05) 100%);
        }

        .spell-header-spell3 {
            background: linear-gradient(135deg, rgba(239, 68, 68, 0.2) 0%, rgba(239, 68, 68, 0.05) 100%);
        }

        .spell-badge {
            padding: 8px 16px;
            border-radius: 12px;
            font-weight: 700;
            font-size: 1rem;
        }

        .spell-badge-spell1 {
            background: #3b82f6;
            color: #ffffff;
        }

        .spell-badge-spell2 {
            background: #10b981;
            color: #ffffff;
        }

        .spell-badge-spell3 {
            background: #ef4444;
            color: #ffffff;
        }

        .spell-name {
            font-size: 1.3rem;
            font-weight: 700;
            margin: 0;
            flex: 1;
        }

        .spell-header-spell1 .spell-name {
            color: #3b82f6;
        }

        .spell-header-spell2 .spell-name {
            color: #10b981;
        }

        .spell-header-spell3 .spell-name {
            color: #ef4444;
        }

        .cooldown-badge {
            padding: 6px 12px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            font-size: 0.9rem;
            font-weight: 600;
            color: rgba(255, 255, 255, 0.8);
        }

        .spell-body {
            padding: 30px;
        }

        .spell-description {
            color: rgba(255, 255, 255, 0.9);
            line-height: 1.8;
            font-size: 1.05rem;
        }

        /* Passive Cards */
        .passive-card {
            background: rgba(255, 215, 0, 0.05);
            backdrop-filter: blur(20px);
            border-radius: 16px;
            border: 2px solid rgba(255, 215, 0, 0.3);
            padding: 20px;
            margin-bottom: 15px;
            transition: all 0.3s ease;
        }

        .passive-card:hover {
            border-color: rgba(255, 215, 0, 0.5);
            box-shadow: 0 8px 30px rgba(255, 215, 0, 0.2);
            transform: translateX(5px);
        }

        .passive-header {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 10px;
        }

        .passive-badge {
            padding: 6px 12px;
            background: #ffd700;
            color: #0a0e27;
            border-radius: 8px;
            font-weight: 700;
            font-size: 0.85rem;
        }

        .passive-name {
            font-size: 1.1rem;
            font-weight: 700;
            color: #ffd700;
            margin: 0;
        }

        .passive-description {
            color: rgba(255, 255, 255, 0.85);
            line-height: 1.7;
            font-size: 1rem;
        }

        /* Phase Cards */
        .phase-card {
            background: rgba(168, 85, 247, 0.05);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 2px solid rgba(168, 85, 247, 0.3);
            overflow: hidden;
            margin-bottom: 30px;
            transition: all 0.3s ease;
        }

        .phase-card:hover {
            border-color: rgba(168, 85, 247, 0.5);
            box-shadow: 0 15px 50px rgba(168, 85, 247, 0.2);
        }

        .phase-header {
            background: linear-gradient(135deg, rgba(168, 85, 247, 0.2) 0%, rgba(168, 85, 247, 0.05) 100%);
            padding: 25px;
            border-bottom: 1px solid rgba(168, 85, 247, 0.2);
        }

        .phase-title {
            color: #a855f7;
            font-size: 1.5rem;
            font-weight: 700;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .phase-body {
            padding: 25px;
        }

        .phase-spells-title {
            color: rgba(255, 255, 255, 0.8);
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        /* Team Suggestions */
        .teams-grid {
            display: grid;
            gap: 25px;
            margin-top: 30px;
        }

        .team-card {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 2px solid rgba(0, 255, 136, 0.3);
            padding: 25px;
            transition: all 0.3s ease;
        }

        .team-card:hover {
            border-color: rgba(0, 255, 136, 0.5);
            box-shadow: 0 15px 50px rgba(0, 255, 136, 0.2);
            transform: translateY(-3px);
        }

        .team-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 1px solid rgba(0, 255, 136, 0.2);
        }

        .team-name {
            color: #00ff88;
            font-size: 1.5rem;
            font-weight: 700;
            margin: 0;
        }

        .team-difficulty {
            padding: 8px 16px;
            border-radius: 12px;
            font-weight: 700;
            font-size: 0.9rem;
        }

        .team-heroes-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            gap: 15px;
            margin-bottom: 20px;
        }

        .team-hero-card {
            position: relative;
            border-radius: 12px;
            overflow: hidden;
            border: 2px solid rgba(0, 255, 136, 0.3);
            transition: all 0.3s ease;
            aspect-ratio: 3/4;
        }

        .team-hero-card:hover {
            transform: scale(1.05);
            border-color: #00ff88;
            box-shadow: 0 8px 25px rgba(0, 255, 136, 0.4);
        }

        .team-hero-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .team-hero-name {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(to top, rgba(0, 0, 0, 0.95), transparent);
            color: #ffffff;
            padding: 10px 8px;
            text-align: center;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .team-description {
            background: rgba(0, 255, 136, 0.05);
            border-left: 3px solid #00ff88;
            padding: 15px;
            border-radius: 8px;
            color: rgba(255, 255, 255, 0.85);
            line-height: 1.6;
            margin-bottom: 15px;
        }

        .team-description strong {
            color: #00ff88;
        }

        .team-actions {
            display: flex;
            gap: 10px;
            padding-top: 15px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .btn-team-edit,
        .btn-team-delete {
            padding: 8px 16px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.9rem;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .btn-team-edit {
            background: rgba(0, 255, 136, 0.2);
            color: #00ff88;
        }

        .btn-team-edit:hover {
            background: rgba(0, 255, 136, 0.3);
        }

        .btn-team-delete {
            background: rgba(239, 68, 68, 0.2);
            color: #ef4444;
        }

        .btn-team-delete:hover {
            background: rgba(239, 68, 68, 0.3);
        }

        /* Empty State */
        .empty-state {
            background: rgba(255, 255, 255, 0.03);
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            padding: 30px;
            text-align: center;
            color: rgba(255, 255, 255, 0.5);
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .boss-layout {
                grid-template-columns: 1fr;
            }

            .boss-sidebar {
                position: relative;
                top: 0;
            }
        }

        @media (max-width: 768px) {
            .container-custom {
                padding: 0 20px;
            }

            .boss-detail-section {
                padding: 140px 0 60px 0;
            }

            .content-title {
                font-size: 2rem;
            }

            .boss-avatar {
                height: 250px;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .team-heroes-grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="boss-detail-section">
        <div class="container-custom">
            <!-- Breadcrumb -->
            <nav class="breadcrumb-custom">
                <a href="{{ path('app_dungeons_index') }}" class="breadcrumb-link">
                    üè† Bosses
                </a>
                <span class="breadcrumb-separator">‚Ä∫</span>
                <span class="breadcrumb-current">{{ dungeon.name }}</span>
            </nav>

            <!-- Layout Grid -->
            <div class="boss-layout">
                <!-- Left Sidebar -->
                <aside class="boss-sidebar">
                    <div class="boss-info-card">
                        <!-- Boss Avatar -->
                        <div class="boss-avatar">
                            <img src="{{ dungeon.imageUrl ? dungeon.imageUrl : 'https://ui-avatars.com/api/?name=' ~ dungeon.name|url_encode ~ '&size=400&background=00ff88&color=0a0e27&bold=true&font-size=0.4' }}" 
                                 alt="{{ dungeon.name }}">
                            
                            <div class="boss-avatar-overlay">
                                <h2 class="boss-main-name">{{ dungeon.name }}</h2>
                            </div>

                            {% if dungeon.difficulty %}
                                <div class="boss-difficulty-badge difficulty-{{ dungeon.difficulty }}">
                                    {{ dungeon.difficulty }}
                                </div>
                            {% endif %}
                        </div>

                        <!-- Boss Info Body -->
                        <div class="boss-info-body">
                            {% if dungeon.description %}
                                <p class="boss-description">{{ dungeon.description }}</p>
                            {% endif %}

                            <h5 class="info-section-title">
                                üìä Stats
                            </h5>
                            
                            <div class="stats-grid">
                                <div class="stat-box stat-box-spells">
                                    <div class="stat-value">3</div>
                                    <h6 class="stat-label">Spells</h6>
                                </div>
                                <div class="stat-box stat-box-passives">
                                    <div class="stat-value">{{ dungeon.passives|length }}</div>
                                    <h6 class="stat-label">Passives</h6>
                                </div>
                                {% if dungeon.phases|length > 0 %}
                                <div class="stat-box stat-box-phases" style="grid-column: 1 / -1;">
                                    <div class="stat-value">{{ dungeon.phases|length }}</div>
                                    <h6 class="stat-label">Phase{{ dungeon.phases|length > 1 ? 's' : '' }}</h6>
                                </div>
                                {% endif %}
                            </div>

                            <!-- Action Buttons -->
                            <div class="action-buttons">
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('app_dungeons_edit', {'id': dungeon.id}) }}" class="btn-action-sidebar btn-edit-sidebar">
                                        ‚úèÔ∏è Edit Boss
                                    </a>
                                    <form method="post" action="{{ path('app_dungeons_delete', {'id': dungeon.id}) }}" style="margin: 0;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dungeon.id) }}">
                                        <button type="submit" class="btn-action-sidebar btn-delete-sidebar" onclick="return confirm('Are you sure you want to delete this boss?');">
                                            üóëÔ∏è Delete Boss
                                        </button>
                                    </form>
                                {% endif %}
                                <a href="{{ path('app_dungeons_index') }}" class="btn-action-sidebar btn-back-sidebar">
                                    ‚Üê Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </aside>

                <!-- Right Content -->
                <main class="boss-content">
                    <!-- Content Header -->
                    <div class="content-header">
                        <h1 class="content-title">
                            üìñ Complete Guide
                        </h1>
                        <p class="content-subtitle">
                            Full breakdown of {{ dungeon.name }}'s abilities and mechanics
                        </p>
                    </div>

                    <!-- BASE SPELLS -->
                    <h2 class="section-divider">‚öîÔ∏è Base Spells</h2>

                    {% if dungeon.spell1Name %}
                        <div class="spell-card spell-card-spell1">
                            <div class="spell-header spell-header-spell1">
                                <span class="spell-badge spell-badge-spell1">Spell 1</span>
                                <h3 class="spell-name">{{ dungeon.spell1Name }}</h3>
                            </div>
                            {% if dungeon.spell1Description %}
                                <div class="spell-body">
                                    <p class="spell-description">{{ dungeon.spell1Description }}</p>
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}

                    {% if dungeon.spell2Name %}
                        <div class="spell-card spell-card-spell2">
                            <div class="spell-header spell-header-spell2">
                                <span class="spell-badge spell-badge-spell2">Spell 2</span>
                                <h3 class="spell-name">{{ dungeon.spell2Name }}</h3>
                                {% if dungeon.spell2Cooldown %}
                                    <span class="cooldown-badge">‚è±Ô∏è CD: {{ dungeon.spell2Cooldown }}</span>
                                {% endif %}
                            </div>
                            {% if dungeon.spell2Description %}
                                <div class="spell-body">
                                    <p class="spell-description">{{ dungeon.spell2Description }}</p>
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}

                    {% if dungeon.spell3Name %}
                        <div class="spell-card spell-card-spell3">
                            <div class="spell-header spell-header-spell3">
                                <span class="spell-badge spell-badge-spell3">Spell 3</span>
                                <h3 class="spell-name">{{ dungeon.spell3Name }}</h3>
                                {% if dungeon.spell3Cooldown %}
                                    <span class="cooldown-badge">‚è±Ô∏è CD: {{ dungeon.spell3Cooldown }}</span>
                                {% endif %}
                            </div>
                            {% if dungeon.spell3Description %}
                                <div class="spell-body">
                                    <p class="spell-description">{{ dungeon.spell3Description }}</p>
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}

                    <!-- BASE PASSIVES -->
                    {% if dungeon.passives|length > 0 %}
                        <h2 class="section-divider">üîÆ Base Passives</h2>

                        {% for passive in dungeon.passives %}
                            <div class="passive-card">
                                <div class="passive-header">
                                    <span class="passive-badge">üí´</span>
                                    <h4 class="passive-name">{{ passive.name }}</h4>
                                </div>
                                {% if passive.description %}
                                    <p class="passive-description">{{ passive.description }}</p>
                                {% endif %}
                            </div>
                        {% endfor %}
                    {% endif %}

                    <!-- PHASES -->
                    {% if dungeon.phases|length > 0 %}
                        <h2 class="section-divider">üìç Boss Phases</h2>

                        {% for phase in dungeon.phases %}
                            <div class="phase-card">
                                <div class="phase-header">
                                    <h3 class="phase-title">
                                        Phase {{ phase.orderNum }} - {{ phase.name }}
                                    </h3>
                                </div>
                                <div class="phase-body">
                                    <!-- Phase Spell Overrides -->
                                    {% if phase.spell1NameOverride or phase.spell2NameOverride or phase.spell3NameOverride %}
                                        <h4 class="phase-spells-title">‚ö° Modified Spells</h4>

                                        {% if phase.spell1NameOverride %}
                                            <div class="spell-card spell-card-spell1" style="margin-bottom: 15px;">
                                                <div class="spell-header spell-header-spell1">
                                                    <span class="spell-badge spell-badge-spell1">Spell 1</span>
                                                    <h3 class="spell-name">{{ phase.spell1NameOverride }}</h3>
                                                </div>
                                                {% if phase.spell1DescriptionOverride %}
                                                    <div class="spell-body">
                                                        <p class="spell-description">{{ phase.spell1DescriptionOverride }}</p>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        {% endif %}

                                        {% if phase.spell2NameOverride %}
                                            <div class="spell-card spell-card-spell2" style="margin-bottom: 15px;">
                                                <div class="spell-header spell-header-spell2">
                                                    <span class="spell-badge spell-badge-spell2">Spell 2</span>
                                                    <h3 class="spell-name">{{ phase.spell2NameOverride }}</h3>
                                                    {% if phase.spell2CooldownOverride %}
                                                        <span class="cooldown-badge">‚è±Ô∏è CD: {{ phase.spell2CooldownOverride }}</span>
                                                    {% endif %}
                                                </div>
                                                {% if phase.spell2DescriptionOverride %}
                                                    <div class="spell-body">
                                                        <p class="spell-description">{{ phase.spell2DescriptionOverride }}</p>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        {% endif %}

                                        {% if phase.spell3NameOverride %}
                                            <div class="spell-card spell-card-spell3" style="margin-bottom: 15px;">
                                                <div class="spell-header spell-header-spell3">
                                                    <span class="spell-badge spell-badge-spell3">Spell 3</span>
                                                    <h3 class="spell-name">{{ phase.spell3NameOverride }}</h3>
                                                    {% if phase.spell3CooldownOverride %}
                                                        <span class="cooldown-badge">‚è±Ô∏è CD: {{ phase.spell3CooldownOverride }}</span>
                                                    {% endif %}
                                                </div>
                                                {% if phase.spell3DescriptionOverride %}
                                                    <div class="spell-body">
                                                        <p class="spell-description">{{ phase.spell3DescriptionOverride }}</p>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        {% endif %}
                                    {% endif %}

                                    <!-- Phase Passives -->
                                    {% if phase.passives|length > 0 %}
                                        <h4 class="phase-spells-title" style="margin-top: 20px;">üîÆ Phase Passives</h4>

                                        {% for passive in phase.passives %}
                                            <div class="passive-card">
                                                <div class="passive-header">
                                                    <span class="passive-badge">üí´</span>
                                                    <h4 class="passive-name">{{ passive.name }}</h4>
                                                </div>
                                                {% if passive.description %}
                                                    <p class="passive-description">{{ passive.description }}</p>
                                                {% endif %}
                                            </div>
                                        {% endfor %}
                                    {% endif %}

                                    {% if not phase.spell1NameOverride and not phase.spell2NameOverride and not phase.spell3NameOverride and phase.passives|length == 0 %}
                                        <div class="empty-state">
                                            <p>This phase uses the base spells with no additional passives.</p>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}

                    <!-- TEAM SUGGESTIONS -->
                    {% if teamSuggestions is defined and (teamSuggestions|length > 0 or is_granted('ROLE_ADMIN')) %}
                        <h2 class="section-divider">üéØ Recommended Teams</h2>

                        {% if is_granted('ROLE_ADMIN') %}
                            <div style="margin-bottom: 25px;">
                                <a href="{{ path('app_team_suggestion_new_for_dungeon', {id: dungeon.id}) }}" 
                                   class="btn-action-sidebar btn-edit-sidebar" 
                                   style="display: inline-block; text-decoration: none;">
                                    ‚ûï Add Team Suggestion
                                </a>
                            </div>
                        {% endif %}

                        {% if teamSuggestions|length > 0 %}
                            <div class="teams-grid">
                                {% for suggestion in teamSuggestions %}
                                    <div class="team-card">
                                        <div class="team-header">
                                            <h3 class="team-name">{{ suggestion.name }}</h3>
                                            {% if suggestion.difficulty %}
                                                <span class="team-difficulty difficulty-{{ suggestion.difficulty }}">
                                                    {{ suggestion.difficulty }}
                                                </span>
                                            {% endif %}
                                        </div>

                                        <div class="team-heroes-grid">
                                            {% for hero in suggestion.heroes %}
                                                <div class="team-hero-card">
                                                    <img src="{{ hero.imageUrl }}" alt="{{ hero.name }}" loading="lazy">
                                                    <div class="team-hero-name">{{ hero.name }}</div>
                                                </div>
                                            {% endfor %}
                                        </div>

                                        {% if suggestion.description %}
                                            <div class="team-description">
                                                <strong>Strategy:</strong> {{ suggestion.description }}
                                            </div>
                                        {% endif %}

                                        {% if is_granted('ROLE_ADMIN') %}
                                            <div class="team-actions">
                                                <a href="{{ path('app_team_suggestion_edit', {id: suggestion.id}) }}" 
                                                   class="btn-team-edit">‚úèÔ∏è Edit</a>
                                                <form method="post" 
                                                      action="{{ path('app_team_suggestion_delete', {id: suggestion.id}) }}" 
                                                      style="display: inline; margin: 0;">
                                                    <input type="hidden" name="_token" 
                                                           value="{{ csrf_token('delete' ~ suggestion.id) }}">
                                                    <button type="submit" class="btn-team-delete" 
                                                            onclick="return confirm('Delete this team?');">
                                                        üóëÔ∏è Delete
                                                    </button>
                                                </form>
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="empty-state">
                                <p>No team suggestions yet. Be the first to add one!</p>
                            </div>
                        {% endif %}
                    {% endif %}

                </main>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
