{% extends 'base.html.twig' %}

{% block title %}New Dungeon{% endblock %}

{% form_theme form _self %}

{# -----------------------------
   THEME OVERRIDES
------------------------------ #}
{% block form_row %}
    <div class="form-group mb-4">
        {{ form_label(form, null, {
            label_attr: { class: 'form-label fw-bold text-uppercase mb-2' }
        }) }}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </div>
{% endblock %}

{% block textarea_widget %}
    {% set attr = attr|merge({
        class: (attr.class|default('') ~ ' form-control form-control-lg')|trim,
        rows: attr.rows|default(4)
    }) %}
    <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
{% endblock %}

{% block choice_widget_expanded %}
    <div {{ block('widget_container_attributes') }}>
        {% for child in form %}
            <div class="radio-item">
                {{ form_widget(child) }}
                {{ form_label(child, null, {translation_domain: choice_translation_domain}) }}
            </div>
        {% endfor %}
    </div>
{% endblock %}

{# -----------------------------
   MACROS (render phase + passives)
------------------------------ #}
{% macro renderPassive(passiveForm) %}
    <div class="base-passive-item passive-item">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <strong>Passive</strong>
            <button type="button" class="btn btn-danger btn-sm js-remove-passive">
                <i class="fas fa-trash"></i> Delete
            </button>
        </div>

        {# Adapte si ton DungeonPassiveType a d'autres champs #}
        {% if passiveForm.name is defined %}{{ form_row(passiveForm.name) }}{% endif %}
        {% if passiveForm.description is defined %}{{ form_row(passiveForm.description) }}{% endif %}
        {% if passiveForm.orderNum is defined %}{{ form_row(passiveForm.orderNum) }}{% endif %}
        {% if passiveForm.order is defined %}{{ form_row(passiveForm.order) }}{% endif %}
    </div>
{% endmacro %}

{% macro renderPhase(phaseForm) %}
    <div class="phase-item">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0 js-phase-title">üìç Phase</h5>
            <button type="button" class="btn btn-danger btn-sm js-remove-phase">
                <i class="fas fa-trash"></i> Delete
            </button>
        </div>

        {{ form_row(phaseForm.name) }}
        {{ form_row(phaseForm.orderNum) }}

        <hr class="my-4">

        <div class="accordion" data-phase-accordion>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#__PHASE_BODY__"
                            aria-expanded="false">
                        ‚öîÔ∏è Spells / Overrides (ouvrir pour √©diter)
                    </button>
                </h2>

                <div id="__PHASE_BODY__" class="accordion-collapse collapse">
                    <div class="accordion-body">

                        <h5 class="mb-3" style="color:#3b82f6;">Spell 1 (Override)</h5>
                        {{ form_row(phaseForm.spell1NameOverride) }}
                        {{ form_row(phaseForm.spell1DescriptionOverride) }}

                        <hr class="my-4">

                        <h5 class="mb-3" style="color:#10b981;">Spell 2 (Override)</h5>
                        {{ form_row(phaseForm.spell2NameOverride) }}
                        {{ form_row(phaseForm.spell2DescriptionOverride) }}
                        {{ form_row(phaseForm.spell2CooldownOverride) }}

                        <hr class="my-4">

                        <h5 class="mb-3" style="color:#ef4444;">Spell 3 (Override)</h5>
                        {{ form_row(phaseForm.spell3NameOverride) }}
                        {{ form_row(phaseForm.spell3DescriptionOverride) }}
                        {{ form_row(phaseForm.spell3CooldownOverride) }}

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="mb-0" style="color:#10b981;">üîÆ Passives de la phase</h5>
                            <button type="button" class="btn btn-success btn-sm js-add-passive">
                                <i class="fas fa-plus"></i> Add passive
                            </button>
                        </div>

                        <div class="phase-passives-container"
                             data-index="{{ phaseForm.passives|length }}"
                             data-prototype="{{ _self.renderPassive(phaseForm.passives.vars.prototype)|e('html_attr') }}">
                            {% for passiveForm in phaseForm.passives %}
                                {{ _self.renderPassive(passiveForm) }}
                            {% endfor %}
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}

