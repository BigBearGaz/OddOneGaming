{% block javascripts %}
    {{ parent() }}
    <script>
        let phaseIndex = 0;
        let basePassiveIndex = 0;
        let phasePassiveIndexes = {};

        // ========== PASSIVES DE BASE ==========
        document.getElementById('add-base-passive').addEventListener('click', function() {
            const container = document.getElementById('base-passives-container');
            
            const wrapper = document.createElement('div');
            wrapper.classList.add('base-passive-item', 'mb-3');
            
            wrapper.innerHTML = `
                <div class="d-flex justify-content-between mb-2">
                    <strong>üí´ Passive de base #${basePassiveIndex + 1}</strong>
                    <button type="button" class="btn btn-danger btn-sm remove-base-passive">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
                <div class="mb-2">
                    <label class="form-label">Nom de la Passive</label>
                    <input type="text" name="dungeons[passives][${basePassiveIndex}][name]" class="form-control" placeholder="Ex: Immortal, Regeneration">
                </div>
                <div class="mb-2">
                    <label class="form-label">Description</label>
                    <textarea name="dungeons[passives][${basePassiveIndex}][description]" class="form-control" rows="3" placeholder="Description de la passive..."></textarea>
                </div>
                <div class="mb-2">
                    <label class="form-label">Ordre</label>
                    <input type="number" name="dungeons[passives][${basePassiveIndex}][passiveOrder]" class="form-control" value="${basePassiveIndex + 1}" min="1">
                </div>
            `;
            
            container.appendChild(wrapper);
            
            wrapper.querySelector('.remove-base-passive').addEventListener('click', function() {
                wrapper.remove();
            });
            
            basePassiveIndex++;
        });

        // ========== PHASES ==========
        document.getElementById('add-phase').addEventListener('click', function() {
            const container = document.getElementById('phases-container');
            
            const wrapper = document.createElement('div');
            wrapper.classList.add('phase-item');
            wrapper.dataset.phaseIndex = phaseIndex;
            
            phasePassiveIndexes[phaseIndex] = 0;
            
            wrapper.innerHTML = `
                <div class="d-flex justify-content-between mb-3">
                    <h5 class="mb-0">üìç Phase #${phaseIndex + 1}</h5>
                    <button type="button" class="btn btn-danger btn-sm remove-phase">
                        <i class="fas fa-trash"></i> Supprimer
                    </button>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Nom de la Phase</label>
                        <input type="text" name="dungeons[phases][${phaseIndex}][name]" class="form-control" placeholder="Ex: Exhausted, Enraged">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Ordre</label>
                        <input type="number" name="dungeons[phases][${phaseIndex}][orderNum]" class="form-control" value="${phaseIndex + 1}" min="1">
                    </div>
                </div>

                <div class="accordion mb-3" id="accordion-phase-${phaseIndex}">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-spells-${phaseIndex}">
                                ‚öîÔ∏è Modifier les Spells (optionnel)
                            </button>
                        </h2>
                        <div id="collapse-spells-${phaseIndex}" class="accordion-collapse collapse">
                            <div class="accordion-body">
                                <div class="mb-3">
                                    <label class="form-label">Spell 1 - Nom Override</label>
                                    <input type="text" name="dungeons[phases][${phaseIndex}][spell1NameOverride]" class="form-control mb-2" placeholder="Laissez vide pour utiliser le spell de base">
                                    <label class="form-label">Spell 1 - Description Override</label>
                                    <textarea name="dungeons[phases][${phaseIndex}][spell1DescriptionOverride]" class="form-control" rows="2"></textarea>
                                </div>
                                <hr>
                                <div class="mb-3">
                                    <label class="form-label">Spell 2 - Nom Override</label>
                                    <input type="text" name="dungeons[phases][${phaseIndex}][spell2NameOverride]" class="form-control mb-2" placeholder="Laissez vide pour utiliser le spell de base">
                                    <label class="form-label">Spell 2 - Description Override</label>
                                    <textarea name="dungeons[phases][${phaseIndex}][spell2DescriptionOverride]" class="form-control mb-2" rows="2"></textarea>
                                    <label class="form-label">Spell 2 - Cooldown Override</label>
                                    <input type="number" name="dungeons[phases][${phaseIndex}][spell2CooldownOverride]" class="form-control" min="0">
                                </div>
                                <hr>
                                <div class="mb-3">
                                    <label class="form-label">Spell 3 - Nom Override</label>
                                    <input type="text" name="dungeons[phases][${phaseIndex}][spell3NameOverride]" class="form-control mb-2" placeholder="Laissez vide pour utiliser le spell de base">
                                    <label class="form-label">Spell 3 - Description Override</label>
                                    <textarea name="dungeons[phases][${phaseIndex}][spell3DescriptionOverride]" class="form-control mb-2" rows="2"></textarea>
                                    <label class="form-label">Spell 3 - Cooldown Override</label>
                                    <input type="number" name="dungeons[phases][${phaseIndex}][spell3CooldownOverride]" class="form-control" min="0">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="mb-0" style="color: #a855f7;">üîÆ Passives de cette phase</h6>
                        <button type="button" class="btn btn-success btn-sm add-phase-passive" data-phase-index="${phaseIndex}">
                            <i class="fas fa-plus"></i> Ajouter
                        </button>
                    </div>
                    <div class="phase-passives-container" data-phase-index="${phaseIndex}">
                    </div>
                </div>
            `;
            
            container.appendChild(wrapper);
            
            wrapper.querySelector('.remove-phase').addEventListener('click', function() {
                wrapper.remove();
            });
            
            wrapper.querySelector('.add-phase-passive').addEventListener('click', function() {
                const currentPhaseIndex = parseInt(this.dataset.phaseIndex);
                addPassiveToPhase(currentPhaseIndex);
            });
            
            phaseIndex++;
        });

        function addPassiveToPhase(phaseIdx) {
            const passiveIdx = phasePassiveIndexes[phaseIdx];
            const phaseElement = document.querySelector(`.phase-item[data-phase-index="${phaseIdx}"]`);
            const passivesContainer = phaseElement.querySelector('.phase-passives-container');
            
            const wrapper = document.createElement('div');
            wrapper.classList.add('phase-passive-item', 'mb-3');
            
            wrapper.innerHTML = `
                <div class="d-flex justify-content-between mb-2">
                    <strong>üí´ Passive #${passiveIdx + 1}</strong>
                    <button type="button" class="btn btn-danger btn-sm remove-phase-passive">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
                <div class="mb-2">
                    <label class="form-label">Nom de la Passive</label>
                    <input type="text" name="dungeons[phases][${phaseIdx}][passives][${passiveIdx}][name]" class="form-control" placeholder="Ex: Exhausted, Enraged">
                </div>
                <div class="mb-2">
                    <label class="form-label">Description</label>
                    <textarea name="dungeons[phases][${phaseIdx}][passives][${passiveIdx}][description]" class="form-control" rows="3" placeholder="Description de la passive..."></textarea>
                </div>
                <div class="mb-2">
                    <label class="form-label">Ordre</label>
                    <input type="number" name="dungeons[phases][${phaseIdx}][passives][${passiveIdx}][passiveOrder]" class="form-control" value="${passiveIdx + 1}" min="1">
                </div>
            `;
            
            passivesContainer.appendChild(wrapper);
            
            wrapper.querySelector('.remove-phase-passive').addEventListener('click', function() {
                wrapper.remove();
            });
            
            phasePassiveIndexes[phaseIdx]++;
        }
    </script>
