{% block javascripts %}
    {{ parent() }}
    <script>
        const phasesContainer = document.getElementById('phases-container');
        const addPhaseBtn = document.getElementById('add-phase');

        function bindRemovePhaseButtons(root = document) {
            root.querySelectorAll('.js-remove-phase').forEach(btn => {
                if (btn.dataset.bound === '1') return;
                btn.dataset.bound = '1';
                btn.addEventListener('click', (e) => {
                    e.preventDefault();
                    btn.closest('.phase-item')?.remove();
                });
            });
        }

        function bindPassives(root = document) {
            // delete passive
            root.querySelectorAll('.js-remove-passive').forEach(btn => {
                if (btn.dataset.bound === '1') return;
                btn.dataset.bound = '1';
                btn.addEventListener('click', (e) => {
                    e.preventDefault();
                    btn.closest('.passive-item')?.remove();
                });
            });

            // add passive (par phase)
            root.querySelectorAll('.js-add-passive').forEach(btn => {
                if (btn.dataset.bound === '1') return;
                btn.dataset.bound = '1';

                btn.addEventListener('click', (e) => {
                    e.preventDefault();

                    const phaseItem = btn.closest('.phase-item');
                    if (!phaseItem) return;

                    const passivesContainer = phaseItem.querySelector('.phase-passives-container');
                    if (!passivesContainer) return;

                    const prototype = passivesContainer.dataset.prototype;
                    const index = parseInt(passivesContainer.dataset.index, 10);

                    const html = prototype.replace(/__name__/g, index);

                    const wrapper = document.createElement('div');
                    wrapper.innerHTML = html;

                    // wrapper.innerHTML contient d√©j√† un .passive-item (macro)
                    passivesContainer.appendChild(wrapper.firstElementChild);

                    passivesContainer.dataset.index = index + 1;

                    bindPassives(passivesContainer);
                });
            });
        }

        function normalizeNewPhaseIds(phaseEl, index) {
            // remplace l'id placeholder __PHASE_BODY__ par un id unique
            const collapse = phaseEl.querySelector('#__PHASE_BODY__');
            const btn = phaseEl.querySelector('[data-bs-target="#__PHASE_BODY__"]');

            if (collapse && btn) {
                const id = 'phase-collapse-' + index;
                collapse.id = id;
                btn.setAttribute('data-bs-target', '#' + id);
                btn.setAttribute('aria-controls', id);
            }

            const title = phaseEl.querySelector('.js-phase-title');
            if (title) title.textContent = 'üìç Phase #' + (index + 1);
        }

        function initExisting() {
            if (!phasesContainer) return;

            // Fix IDs pour les phases d√©j√† rendues (sinon tous auraient __PHASE_BODY__)
            phasesContainer.querySelectorAll('.phase-item').forEach((phaseEl, idx) => {
                normalizeNewPhaseIds(phaseEl, idx);
            });

            bindRemovePhaseButtons(phasesContainer);
            bindPassives(phasesContainer);
        }

        initExisting();

        addPhaseBtn?.addEventListener('click', () => {
            if (!phasesContainer) return;

            const prototype = phasesContainer.dataset.prototype;
            const index = parseInt(phasesContainer.dataset.index, 10);

            const html = prototype.replace(/__name__/g, index);

            const temp = document.createElement('div');
            temp.innerHTML = html;

            const newPhaseEl = temp.firstElementChild;
            phasesContainer.appendChild(newPhaseEl);

            normalizeNewPhaseIds(newPhaseEl, index);

            phasesContainer.dataset.index = index + 1;

            bindRemovePhaseButtons(newPhaseEl);
            bindPassives(newPhaseEl);
        });
    </script>
{% endblock %}
