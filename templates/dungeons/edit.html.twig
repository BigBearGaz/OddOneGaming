{% extends 'base.html.twig' %}

{% block title %}Nouveau Donjon{% endblock %}

{# ============================= #}
{#    CUSTOM FORM THEME          #}
{# ============================= #}
{% form_theme form _self %}

{% block form_row %}
    <div class="form-group mb-4">
        {{ form_label(form, null, {
            label_attr: { class: 'form-label fw-bold text-uppercase mb-2' }
        }) }}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </div>
{% endblock %}

{% block textarea_widget %}
    {% set attr = attr|merge({
        class: (attr.class|default('') ~ ' form-control form-control-lg')|trim,
        rows: attr.rows|default(4)
    }) %}
    <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
{% endblock %}

{% block choice_widget_expanded %}
    <div {{ block('widget_container_attributes') }}>
        {% for child in form %}
            <div class="radio-item">
                {{ form_widget(child) }}
                {{ form_label(child, null, {translation_domain: choice_translation_domain}) }}
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            overflow-x: hidden;
            background: 
                linear-gradient(135deg, rgba(10, 14, 39, 0.92) 0%, rgba(26, 31, 58, 0.92) 100%),
                url('{{ asset('images/castle-background.jpg') }}') center/cover no-repeat fixed;
            min-height: 100vh;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 50%, rgba(0, 255, 100, 0.08) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(0, 200, 255, 0.08) 0%, transparent 50%);
            pointer-events: none;
            z-index: 0;
        }

        .dungeon-form-section {
            position: relative;
            min-height: 100vh;
            padding: 180px 0 80px 0;
            z-index: 1;
        }

        .container-custom {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 40px;
            position: relative;
            z-index: 2;
        }

        .breadcrumb {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid rgba(0, 255, 136, 0.2);
            padding: 1rem 1.5rem;
            margin-bottom: 30px;
        }

        .breadcrumb-item a {
            color: #00ff88;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .breadcrumb-item a:hover {
            color: #00ccff;
        }

        .breadcrumb-item.active {
            color: rgba(255, 255, 255, 0.7);
        }

        .breadcrumb-item + .breadcrumb-item::before {
            color: rgba(255, 255, 255, 0.5);
        }

        .card {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid rgba(0, 255, 136, 0.2);
            margin-bottom: 30px;
            overflow: hidden;
            transition: all 0.4s ease;
        }

        .card:hover {
            border-color: rgba(0, 255, 136, 0.4);
            box-shadow: 0 20px 60px rgba(0, 255, 136, 0.2);
        }

        .card-header {
            border: none;
            padding: 1.75rem 2rem;
            position: relative;
            overflow: hidden;
        }

        .card-header h2,
        .card-header h3,
        .card-header h4,
        .card-header h5 {
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-weight: 700;
            color: #ffffff;
        }

        .card-header h2 {
            font-size: 1.75rem;
        }

        .card-header h3 {
            font-size: 1.5rem;
        }

        .card-header h4 {
            font-size: 1.25rem;
        }

        .card-header h5 {
            font-size: 1.125rem;
        }

        .card-body {
            padding: 2.5rem;
        }

        .bg-gradient-primary {
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%) !important;
        }

        .bg-gradient-info {
            background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%) !important;
        }

        .bg-gradient-purple {
            background: linear-gradient(135deg, #a855f7 0%, #ec4899 100%) !important;
        }

        .bg-gradient-warning {
            background: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%) !important;
        }

        .bg-gradient-success {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%) !important;
        }

        .bg-gradient-dark {
            background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%) !important;
        }

        .bg-gradient-danger {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%) !important;
        }

        .bg-gradient-cyan {
            background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%) !important;
        }

        .form-label {
            font-weight: 700;
            color: rgba(255, 255, 255, 0.9);
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 0.75rem !important;
            display: block;
        }

        .form-control {
            padding: 0.875rem 1.25rem !important;
            font-size: 1rem !important;
            border: 2px solid rgba(0, 255, 136, 0.2) !important;
            border-radius: 12px !important;
            background-color: rgba(255, 255, 255, 0.05) !important;
            color: #ffffff !important;
            transition: all 0.3s ease !important;
        }

        .form-control:hover {
            border-color: rgba(0, 255, 136, 0.3) !important;
            background-color: rgba(255, 255, 255, 0.08) !important;
        }

        .form-control:focus {
            border-color: #00ff88 !important;
            background-color: rgba(255, 255, 255, 0.1) !important;
            box-shadow: 0 0 0 4px rgba(0, 255, 136, 0.1),
                        0 8px 25px rgba(0, 255, 136, 0.15) !important;
            outline: none;
        }

        textarea.form-control {
            min-height: 120px !important;
            resize: vertical;
        }

        /* Radio buttons pour la difficult√© */
        .difficulty-radio-group {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
            padding: 0;
            margin: 0;
        }

        .difficulty-radio-group .radio-item {
            position: relative;
            flex: 1;
            min-width: 140px;
        }

        .difficulty-radio-group input[type="radio"] {
            position: absolute;
            opacity: 0;
            cursor: pointer;
            width: 0;
            height: 0;
        }

        .difficulty-radio-group label {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem 1.75rem;
            background: rgba(255, 255, 255, 0.05);
            border: 2px solid rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 700;
            color: rgba(255, 255, 255, 0.7);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-size: 0.9rem;
            width: 100%;
            margin: 0;
        }

        .difficulty-radio-group label:hover {
            border-color: #00ff88;
            background: rgba(0, 255, 136, 0.1);
            color: #00ff88;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 255, 136, 0.2);
        }

        .difficulty-radio-group input[type="radio"]:checked + label {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 255, 136, 0.4);
        }

        /* Couleurs sp√©cifiques par difficult√© */
        .difficulty-radio-group input[value="Easy"]:checked + label {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            border-color: #10b981;
            color: #ffffff;
        }

        .difficulty-radio-group input[value="Normal"]:checked + label {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            border-color: #3b82f6;
            color: #ffffff;
        }

        .difficulty-radio-group input[value="Hard"]:checked + label {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
            border-color: #f59e0b;
            color: #ffffff;
        }

        .difficulty-radio-group input[value="Hell"]:checked + label {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            border-color: #ef4444;
            color: #ffffff;
        }

        /* Ic√¥nes pour chaque difficult√© */
        .difficulty-radio-group input[value="Easy"] + label::before {
            content: "üòä ";
            margin-right: 0.5rem;
            font-size: 1.2rem;
        }

        .difficulty-radio-group input[value="Normal"] + label::before {
            content: "‚ö° ";
            margin-right: 0.5rem;
            font-size: 1.2rem;
        }

        .difficulty-radio-group input[value="Hard"] + label::before {
            content: "üî• ";
            margin-right: 0.5rem;
            font-size: 1.2rem;
        }

        .difficulty-radio-group input[value="Hell"] + label::before {
            content: "üíÄ ";
            margin-right: 0.5rem;
            font-size: 1.2rem;
        }

        /* Focus pour accessibilit√© */
        .difficulty-radio-group input[type="radio"]:focus + label {
            outline: 2px solid #00ff88;
            outline-offset: 2px;
        }

        /* Phase Item */
        .phase-item {
            background: rgba(13, 110, 253, 0.05);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(13, 110, 253, 0.3) !important;
            border-radius: 16px;
            padding: 2rem;
            margin-bottom: 1.5rem;
            transition: all 0.3s ease;
        }

        .phase-item:hover {
            border-color: rgba(13, 110, 253, 0.5) !important;
            box-shadow: 0 10px 40px rgba(13, 110, 253, 0.2);
            transform: translateY(-2px);
        }

        .phase-item h5 {
            color: #3b82f6;
            font-weight: 700;
            margin-bottom: 1.5rem;
        }

        /* Base Passive Item */
        .base-passive-item {
            background: rgba(16, 185, 129, 0.05);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(16, 185, 129, 0.3) !important;
            border-radius: 12px;
            padding: 1.5rem;
            transition: all 0.3s ease;
        }

        .base-passive-item:hover {
            border-color: rgba(16, 185, 129, 0.5) !important;
            box-shadow: 0 8px 30px rgba(16, 185, 129, 0.2);
        }

        .base-passive-item strong {
            color: #10b981;
        }

        /* Phase Passive Item */
        .phase-passive-item {
            background: rgba(168, 85, 247, 0.05);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(168, 85, 247, 0.3) !important;
            border-radius: 10px;
            padding: 1.25rem;
            transition: all 0.3s ease;
        }

        .phase-passive-item:hover {
            border-color: rgba(168, 85, 247, 0.5) !important;
            box-shadow: 0 6px 20px rgba(168, 85, 247, 0.2);
        }

        .phase-passive-item strong {
            color: #a855f7;
        }

        /* Accordion */
        .accordion {
            background: transparent;
        }

        .accordion-item {
            background: rgba(0, 0, 0, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px !important;
            overflow: hidden;
            margin-bottom: 0.5rem;
        }

        .accordion-button {
            background: rgba(255, 255, 255, 0.03);
            color: rgba(255, 255, 255, 0.9);
            font-weight: 600;
            border: none;
            padding: 1rem 1.5rem;
        }

        .accordion-button:not(.collapsed) {
            background: rgba(13, 110, 253, 0.15);
            color: #3b82f6;
            box-shadow: none;
        }

        .accordion-button:focus {
            box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.1);
            border-color: transparent;
        }

        .accordion-button::after {
            filter: brightness(0) saturate(100%) invert(65%) sepia(99%) saturate(2686%) hue-rotate(169deg) brightness(102%) contrast(101%);
        }

        .accordion-body {
            background: rgba(0, 0, 0, 0.3);
            padding: 1.5rem;
        }

        /* Buttons */
        .btn {
            padding: 1rem 2.5rem;
            border-radius: 50px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            border: none;
            display: inline-flex;
            align-items: center;
            gap: 0.625rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            color: #0a0e27;
            box-shadow: 0 10px 30px rgba(0, 255, 136, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 15px 40px rgba(0, 255, 136, 0.5);
            color: #0a0e27;
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.05);
            color: #ffffff;
            border: 2px solid rgba(255, 255, 255, 0.2);
        }

        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: #00ff88;
            color: #00ff88;
            transform: translateY(-2px);
        }

        .btn-success {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: #ffffff;
            box-shadow: 0 8px 20px rgba(16, 185, 129, 0.3);
            padding: 0.75rem 1.5rem;
            font-size: 0.9rem;
        }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 30px rgba(16, 185, 129, 0.5);
            color: #ffffff;
        }

        .btn-danger {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: #ffffff;
            padding: 0.75rem 1.5rem;
            font-size: 0.9rem;
        }

        .btn-danger:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(239, 68, 68, 0.5);
            color: #ffffff;
        }

        .btn-light {
            background: rgba(255, 255, 255, 0.9);
            color: #0a0e27;
            font-weight: 700;
        }

        .btn-light:hover {
            background: #ffffff;
            color: #0a0e27;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 255, 255, 0.3);
        }

        .btn-sm {
            padding: 0.5rem 1.25rem;
            font-size: 0.875rem;
        }

        .btn-lg {
            padding: 1.25rem 3rem;
            font-size: 1.125rem;
        }

        @media (max-width: 768px) {
            .container-custom {
                padding: 0 20px;
            }

            .card-body {
                padding: 1.5rem;
            }

            .card-header {
                padding: 1.25rem 1.5rem;
            }

            .btn {
                width: 100%;
                justify-content: center;
                margin-bottom: 0.5rem;
            }

            .phase-item,
            .base-passive-item {
                padding: 1.25rem;
            }

            .difficulty-radio-group {
                flex-direction: column;
            }

            .difficulty-radio-group .radio-item {
                width: 100%;
            }
        }
    </style>
{% endblock %}

{% block body %}
