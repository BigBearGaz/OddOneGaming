{% extends 'base.html.twig' %}

{% block title %}Admin - Create New Disable{% endblock %}

{% block body %}
{# 
   Wider layout (col-lg-10) for a spacious description field.
   Top margin (120px) to clear the navbar completely.
#}
<div class="container pb-5" style="margin-top: 120px;">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            
            {# HEADER : Navigation & Context #}
            <div class="d-flex justify-content-between align-items-end mb-4">
                <div class="nav-link-wrapper">
                    <a href="{{ path('app_disable_index') }}" class="back-link">
                        <i class="fas fa-arrow-left me-2"></i>BACK TO DATABASE
                    </a>
                    <h2 class="text-white fw-bold mb-0 mt-3 tracking-tighter uppercase display-6">NEW DISABLE EFFECT</h2>
                </div>
                <div class="text-end">
                    <span class="badge bg-dark text-warning border border-warning border-opacity-25 px-4 py-2">
                        CC CREATION
                    </span>
                </div>
            </div>

            {# MAIN FORM CARD #}
            <div class="card bg-black shadow-2xl" 
                 style="border: 1px solid #332b11; background: #0d0d0d !important;">
                
                <div class="card-header border-bottom border-warning border-opacity-10 p-4 bg-warning bg-opacity-5">
                    <h5 class="text-white mb-0 fw-bold">DISABLE SPECIFICATIONS</h5>
                    <p class="text-muted small mb-0">Define the properties and mechanics for this crowd control status.</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <div class="admin-form-container">
                        {# Description and other fields will now be much wider #}
                        {{ include('disable/_form.html.twig', {'button_label': 'CREATE DISABLE EFFECT'}) }}
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    /* Wider Description & Form Polish */
    .admin-form-container textarea {
        min-height: 180px;
        width: 100%;
    }

    .back-link {
        color: #6c757d;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 700;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
    }

    .back-link:hover {
        color: #ffffff;
        transform: translateX(-5px);
    }

    /* Core Gaming Theme Styling */
    .bg-black { background-color: #0d0d0d !important; }
    .shadow-2xl { box-shadow: 0 30px 60px -12px rgba(0, 0, 0, 0.9); }
    .tracking-tighter { letter-spacing: -0.05em; }
    
    .admin-form-container label {
        color: #e0e0e0 !important;
        font-size: 0.85rem;
        font-weight: 700;
        margin-bottom: 12px;
        display: block;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .admin-form-container input, 
    .admin-form-container textarea, 
    .admin-form-container select {
        background-color: #15140e !important;
        border: 1px solid #332d18 !important;
        color: #ffffff !important;
        padding: 16px !important;
        border-radius: 4px !important;
        margin-bottom: 1.5rem;
        font-size: 1rem;
    }

    .admin-form-container input:focus, 
    .admin-form-container textarea:focus {
        border-color: #ffc107 !important;
        outline: none;
        box-shadow: 0 0 0 4px rgba(255, 193, 7, 0.1) !important;
    }

    /* Primary Creation Button */
    .admin-form-container .btn-primary, 
    .admin-form-container button[type="submit"] {
        background-color: #ffc107 !important;
        color: #000 !important;
        border: none !important;
        padding: 18px !important;
        font-weight: 900 !important;
        text-transform: uppercase !important;
        width: 100%;
        margin-top: 10px;
        letter-spacing: 2px;
        transition: transform 0.2s;
    }

    .admin-form-container .btn-primary:hover {
        transform: translateY(-2px);
        filter: brightness(1.1);
    }
</style>
{% endblock %}