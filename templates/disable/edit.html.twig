{% extends 'base.html.twig' %}

{% block title %}Admin - Edit {{ disable.name }}{% endblock %}

{% block body %}
{# Widened the layout to col-lg-10 and used a larger margin-top for nav clearance #}
<div class="container pb-5" style="margin-top: 120px;">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            
            {# HEADER : Navigation & Context #}
            <div class="d-flex justify-content-between align-items-end mb-4">
                <div class="nav-link-wrapper">
                    <a href="{{ path('app_disable_index') }}" class="back-link">
                        <i class="fas fa-arrow-left me-2"></i>BACK TO DATABASE
                    </a>
                    <h2 class="text-white fw-bold mb-0 mt-3 tracking-tighter uppercase display-6">EDIT DISABLE</h2>
                </div>
                <div class="text-end">
                    <span class="badge bg-dark text-warning border border-warning border-opacity-25 px-4 py-2">
                        CC MODIFIER
                    </span>
                </div>
            </div>

            {# MAIN FORM CARD - Wider and cleaner #}
            <div class="card bg-black shadow-2xl" 
                 style="border: 1px solid #332b11; background: #0d0d0d !important;">
                
                <div class="card-header border-bottom border-warning border-opacity-10 p-4 bg-warning bg-opacity-5">
                    <div class="d-flex align-items-center">
                        {% if disable.iconUrl %}
                            <img src="{{ disable.iconUrl }}" class="rounded border border-warning border-opacity-25 me-3" 
                                 style="width: 56px; height: 56px; object-fit: cover;">
                        {% endif %}
                        <div>
                            <h4 class="text-white mb-0 fw-bold">{{ disable.name }}</h4>
                            <code class="text-warning small opacity-75">System_UID: #{{ disable.id }}</code>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4 p-md-5">
                    <div class="admin-form-container">
                        {# Description inputs inside _form will now have more width #}
                        {{ include('disable/_form.html.twig', {'button_label': 'UPDATE DISABLE EFFECT'}) }}
                    </div>
                </div>

                {# FOOTER : DANGER ZONE #}
                <div class="card-footer bg-black border-top border-danger border-opacity-10 p-4">
                    <div class="d-md-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="text-danger fw-bold mb-1 small tracking-widest">DANGER ZONE</h6>
                            <p class="text-secondary small mb-0 opacity-50">Permanent deletion of this crowd control effect.</p>
                        </div>
                        <div class="delete-wrapper mt-3 mt-md-0">
                            {{ include('disable/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    /* Wider Layout Adjustments */
    .admin-form-container textarea {
        min-height: 180px; /* Gives more vertical space to the description too */
        width: 100%;
    }

    .back-link {
        color: #6c757d;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 700;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
    }

    .back-link:hover {
        color: #ffffff;
        transform: translateX(-5px);
    }

    /* Core Styling */
    .bg-black { background-color: #0d0d0d !important; }
    .shadow-2xl { box-shadow: 0 30px 60px -12px rgba(0, 0, 0, 0.9); }
    
    .admin-form-container label {
        color: #e0e0e0 !important;
        font-size: 0.85rem;
        font-weight: 700;
        margin-bottom: 12px;
        display: block;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .admin-form-container input, 
    .admin-form-container textarea, 
    .admin-form-container select {
        background-color: #15140e !important;
        border: 1px solid #332d18 !important;
        color: #ffffff !important;
        padding: 16px !important;
        border-radius: 4px !important;
        margin-bottom: 1.5rem;
        font-size: 1rem;
    }

    .admin-form-container input:focus, 
    .admin-form-container textarea:focus {
        border-color: #ffc107 !important;
        outline: none;
        box-shadow: 0 0 0 4px rgba(255, 193, 7, 0.1) !important;
    }

    .admin-form-container .btn-primary, 
    .admin-form-container button[type="submit"] {
        background-color: #ffc107 !important;
        color: #000 !important;
        border: none !important;
        padding: 18px !important;
        font-weight: 900 !important;
        text-transform: uppercase !important;
        width: 100%;
        margin-top: 10px;
        letter-spacing: 2px;
    }

    .delete-wrapper form button {
        background: rgba(220, 53, 69, 0.05) !important;
        border: 1px solid #dc3545 !important;
        color: #dc3545 !important;
        font-weight: 700;
        padding: 12px 30px;
        transition: 0.3s;
    }

    .delete-wrapper form button:hover {
        background: #dc3545 !important;
        color: white !important;
    }
</style>
{% endblock %}