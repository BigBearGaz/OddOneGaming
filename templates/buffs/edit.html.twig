{% extends 'base.html.twig' %}

{% block title %}Admin - Edit {{ buff.name }}{% endblock %}

{% block body %}
{# 1. Increased margin-top to 120px to ensure "BACK TO DATABASE" isn't cut off #}
{# 2. Widened column to col-lg-10 to ensure the description has plenty of room #}
<div class="container pb-5" style="margin-top: 120px;">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            
            {# HEADER : Navigation & Context #}
            <div class="d-flex justify-content-between align-items-end mb-4">
                <div>
                    <a href="{{ path('app_buffs_index') }}" class="back-link">
                        <i class="fas fa-arrow-left me-2"></i> BACK TO DATABASE
                    </a>
                    <h2 class="text-white fw-bold mb-0 mt-3 tracking-tighter uppercase display-6">EDIT BUFF</h2>
                </div>
                <div class="text-end">
                    <span class="badge bg-dark text-success border border-success border-opacity-25 px-4 py-2">
                        ADMIN PANEL
                    </span>
                </div>
            </div>

            {# MAIN FORM CARD #}
            <div class="card bg-black shadow-2xl" 
                 style="border: 1px solid #222; background: #0d0d0d !important;">
                
                <div class="card-header border-bottom border-secondary border-opacity-10 p-4 bg-dark bg-opacity-10">
                    <div class="d-flex align-items-center">
                        {% if buff.iconUrl %}
                            <img src="{{ buff.iconUrl }}" class="rounded border border-secondary border-opacity-25 me-3" 
                                 style="width: 56px; height: 56px; object-fit: cover;">
                        {% endif %}
                        <div>
                            <h4 class="text-white mb-0 fw-bold">{{ buff.name }}</h4>
                            <code class="text-success small opacity-75">System_ID: #{{ buff.id }}</code>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4 p-md-5">
                    {# Description field inside here will now be wide and comfortable to read #}
                    <div class="admin-form-container">
                        {{ include('buffs/_form.html.twig', {'button_label': 'SAVE CHANGES'}) }}
                    </div>
                </div>

                {# FOOTER : DANGER ZONE #}
                <div class="card-footer bg-black border-top border-danger border-opacity-10 p-4">
                    <div class="d-md-flex align-items-center justify-content-between">
                        <div class="mb-3 mb-md-0">
                            <h6 class="text-danger fw-bold mb-1 small tracking-widest">DANGER ZONE</h6>
                            <p class="text-secondary small mb-0 opacity-50">Permanent deletion from the game database.</p>
                        </div>
                        <div class="delete-wrapper">
                            {{ include('buffs/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    /* Wider Description Area */
    .admin-form-container textarea {
        min-height: 180px;
        width: 100%;
    }

    /* Clean Back Link with visibility fix */
    .back-link {
        color: #6c757d;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 700;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
    }

    .back-link:hover {
        color: #ffffff;
        transform: translateX(-5px);
    }

    /* Dark Theme & Polish */
    .bg-black { background-color: #0d0d0d !important; }
    .shadow-2xl { box-shadow: 0 30px 60px -12px rgba(0, 0, 0, 0.9); }
    .tracking-tighter { letter-spacing: -0.05em; }
    .tracking-widest { letter-spacing: 0.1em; }

    /* Improved Form Styling */
    .admin-form-container label {
        color: #e0e0e0 !important;
        font-size: 0.85rem;
        font-weight: 700;
        margin-bottom: 12px;
        display: block;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .admin-form-container input, 
    .admin-form-container textarea, 
    .admin-form-container select {
        background-color: #1a1a1a !important;
        border: 1px solid #333 !important;
        color: #fff !important;
        padding: 16px !important;
        border-radius: 4px !important;
        font-size: 1rem !important;
        width: 100%;
        margin-bottom: 1.5rem;
    }

    .admin-form-container input:focus, 
    .admin-form-container textarea:focus {
        border-color: #198754 !important;
        outline: none;
        box-shadow: 0 0 0 4px rgba(25, 135, 84, 0.1) !important;
    }

    /* Success/Action Button */
    .admin-form-container .btn-success,
    .admin-form-container button[type="submit"] {
        background-color: #198754 !important;
        border: none !important;
        padding: 18px !important;
        font-weight: 900 !important;
        letter-spacing: 2px !important;
        text-transform: uppercase !important;
        width: 100%;
        transition: transform 0.2s, filter 0.2s;
    }

    .admin-form-container button:hover {
        filter: brightness(1.2);
        transform: translateY(-2px);
    }

    /* Danger Button */
    .delete-wrapper form button {
        background: rgba(220, 53, 69, 0.05) !important;
        border: 1px solid #dc3545 !important;
        color: #dc3545 !important;
        font-weight: 700;
        padding: 12px 30px;
        border-radius: 4px;
        transition: 0.3s;
    }

    .delete-wrapper form button:hover {
        background: #dc3545 !important;
        color: white !important;
    }
</style>
{% endblock %}