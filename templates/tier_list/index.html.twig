{% extends 'base.html.twig' %}

{% block title %}Tier Lists{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(135deg, rgba(10, 14, 39, 0.95) 0%, rgba(26, 31, 58, 0.95) 100%);
            min-height: 100vh;
        }

        .index-container {
            max-width: 1400px;
            margin: 150px auto 50px;
            padding: 0 20px;
        }

        .index-header {
            text-align: center;
            margin-bottom: 60px;
        }

        .index-title {
            color: #00ff88;
            font-size: 3.5rem;
            font-weight: 900;
            margin-bottom: 15px;
            text-transform: uppercase;
        }

        .index-subtitle {
            color: rgba(255, 255, 255, 0.7);
            font-size: 1.3rem;
        }

        .categories-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 30px;
            margin-bottom: 40px;
        }

        .category-card {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border: 2px solid rgba(0, 255, 136, 0.3);
            border-radius: 20px;
            padding: 30px;
            transition: all 0.3s ease;
            cursor: pointer;
            text-decoration: none;
            display: block;
        }

        .category-card:hover {
            transform: translateY(-5px);
            border-color: #00ff88;
            box-shadow: 0 15px 50px rgba(0, 255, 136, 0.3);
        }

        .category-card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .category-name {
            color: #00ff88;
            font-size: 2rem;
            font-weight: 900;
            margin: 0;
        }

        .category-count {
            background: rgba(0, 255, 136, 0.2);
            color: #00ff88;
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: 700;
        }

        .category-actions {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        .btn-category {
            flex: 1;
            padding: 12px;
            border-radius: 10px;
            text-align: center;
            text-decoration: none;
            font-weight: 700;
            transition: all 0.3s ease;
        }

        .btn-view {
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            color: #0a0e27;
        }

        .btn-view:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(0, 255, 136, 0.4);
            color: #0a0e27;
        }

        .btn-edit {
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        .btn-edit:hover {
            background: rgba(255, 255, 255, 0.2);
            color: #fff;
        }

        .btn-create {
            display: inline-block;
            padding: 15px 40px;
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            color: #0a0e27;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 700;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            box-shadow: 0 10px 30px rgba(0, 255, 136, 0.4);
        }

        .btn-create:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(0, 255, 136, 0.6);
            color: #0a0e27;
        }

        .empty-state {
            text-align: center;
            padding: 80px 20px;
        }

        .empty-state-icon {
            font-size: 5rem;
            margin-bottom: 20px;
        }

        .empty-state-text {
            color: rgba(255, 255, 255, 0.6);
            font-size: 1.3rem;
            margin-bottom: 30px;
        }

        @media (max-width: 768px) {
            .index-title {
                font-size: 2.5rem;
            }

            .categories-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="index-container">
    <div class="index-header">
        <h1 class="index-title">üèÜ Tier Lists</h1>
        <p class="index-subtitle">Community rankings across different game modes</p>
    </div>

    {% if categories|length > 0 %}
        <div class="categories-grid">
            {% for cat in categories %}
                <div class="category-card">
                    <div class="category-card-header">
                        <h2 class="category-name">{{ cat.category }}</h2>
                        <span class="category-count">{{ cat.heroCount }} Heroes</span>
                    </div>

                    <div class="category-actions">
                        <a href="{{ path('app_tier_list_show', {category: cat.category}) }}" class="btn-category btn-view">
                            üëÅÔ∏è View
                        </a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_tier_list_edit', {category: cat.category}) }}" class="btn-category btn-edit">
                                ‚öôÔ∏è Edit
                            </a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-state">
            <div class="empty-state-icon">üìã</div>
            <p class="empty-state-text">No tier lists created yet</p>
        </div>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') %}
        <div style="text-align: center; margin-top: 50px;">
            <a href="{{ path('app_tier_list_new') }}" class="btn-create">
                ‚ûï Create New Tier List
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
