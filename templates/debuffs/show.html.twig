{% extends 'base.html.twig' %}

{% block title %}Debuffs{% endblock %}

{% block body %}
    <h1>Debuffs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ debuff.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ debuff.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ debuff.type }}</td>
            </tr>
            <tr>
                <th>IconUrl</th>
                <td>{{ debuff.iconUrl }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ debuff.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ debuff.createdAt ? debuff.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_debuffs_index') }}">back to list</a>

    <a href="{{ path('app_debuffs_edit', {'id': debuff.id}) }}">edit</a>

    {{ include('debuffs/_delete_form.html.twig') }}
{% endblock %}
