{% extends 'base.html.twig' %}

{% block title %}Admin - Create New Debuff{% endblock %}

{% block body %}
{# 
   Wider layout (col-lg-10) for a spacious description field.
   Top margin (120px) to clear the fixed navbar perfectly.
#}
<div class="container pb-5" style="margin-top: 120px;">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            
            {# HEADER : Navigation & Context #}
            <div class="d-flex justify-content-between align-items-end mb-4">
                <div class="nav-link-wrapper">
                    <a href="{{ path('app_debuffs_index') }}" class="back-link">
                        <i class="fas fa-arrow-left me-2"></i>BACK TO DATABASE
                    </a>
                    <h2 class="text-white fw-bold mb-0 mt-3 tracking-tighter uppercase display-6">NEW DEBUFF</h2>
                </div>
                <div class="text-end">
                    <span class="badge bg-dark text-danger border border-danger border-opacity-25 px-4 py-2">
                        MALUS CREATION
                    </span>
                </div>
            </div>

            {# MAIN FORM CARD #}
            <div class="card bg-black shadow-2xl" 
                 style="border: 1px solid #331111; background: #0d0d0d !important;">
                
                <div class="card-header border-bottom border-danger border-opacity-10 p-4 bg-danger bg-opacity-5">
                    <h5 class="text-white mb-0 fw-bold">DEBUFF SPECIFICATIONS</h5>
                    <p class="text-muted small mb-0">Enter details for the new negative status effect.</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <div class="admin-form-container">
                        {# Description box will now be much wider #}
                        {{ include('debuffs/_form.html.twig', {'button_label': 'CREATE DEBUFF'}) }}
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    /* Dark Theme with Red Accents */
    .bg-black { background-color: #0d0d0d !important; }
    .shadow-2xl { box-shadow: 0 30px 60px -12px rgba(0, 0, 0, 0.9); }
    .tracking-tighter { letter-spacing: -0.05em; }

    /* Clean Back Link Styling */
    .back-link {
        color: #6c757d;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 700;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
    }

    .back-link:hover {
        color: #ffffff;
        transform: translateX(-5px);
    }

    /* Form Fields Styling */
    .admin-form-container label {
        color: #e0e0e0 !important;
        font-size: 0.85rem;
        font-weight: 700;
        margin-bottom: 12px;
        display: block;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .admin-form-container input, 
    .admin-form-container textarea, 
    .admin-form-container select {
        background-color: #1a0a0a !important; /* Slightly reddish dark tint */
        border: 1px solid #442222 !important;
        color: #fff !important;
        padding: 16px !important;
        border-radius: 4px !important;
        font-size: 1rem !important;
        width: 100%;
        margin-bottom: 1.5rem;
    }

    /* Description Box specific height */
    .admin-form-container textarea {
        min-height: 180px;
    }

    .admin-form-container input:focus, 
    .admin-form-container textarea:focus {
        border-color: #dc3545 !important;
        outline: none;
        box-shadow: 0 0 0 4px rgba(220, 53, 69, 0.1) !important;
    }

    /* Submit Button */
    .admin-form-container .btn-danger,
    .admin-form-container button[type="submit"] {
        background-color: #dc3545 !important;
        border: none !important;
        padding: 18px !important;
        font-weight: 900 !important;
        letter-spacing: 2px !important;
        text-transform: uppercase !important;
        width: 100%;
        transition: transform 0.2s, filter 0.2s;
        margin-top: 10px;
    }

    .admin-form-container button:hover {
        filter: brightness(1.2);
        transform: translateY(-2px);
    }
</style>
{% endblock %}