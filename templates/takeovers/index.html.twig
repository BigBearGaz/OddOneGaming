{% extends 'base.html.twig' %}

{% block title %}Takeover Services - OddOne Gaming{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            overflow-x: hidden;
        }

        /* Takeover Section */
        .takeover-section {
            position: relative;
            min-height: 100vh;
            background: 
                linear-gradient(135deg, rgba(10, 14, 39, 0.92) 0%, rgba(26, 31, 58, 0.92) 100%),
                url('{{ asset('images/castle-background.jpg') }}') center/cover no-repeat fixed;
            padding: 180px 0 80px 0;
        }

        .takeover-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 50%, rgba(0, 255, 100, 0.08) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(0, 200, 255, 0.08) 0%, transparent 50%);
            pointer-events: none;
        }

        .container-custom {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 40px;
            position: relative;
            z-index: 2;
        }

        /* Header */
        .page-header {
            text-align: center;
            margin-bottom: 50px;
        }

        .page-title {
            font-size: 3.5rem;
            font-weight: 900;
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 15px;
            text-transform: uppercase;
            letter-spacing: -1px;
        }

        .page-subtitle {
            color: rgba(255, 255, 255, 0.7);
            font-size: 1.3rem;
            margin-bottom: 30px;
        }

        .add-service-btn {
            display: inline-block;
            padding: 15px 40px;
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            color: #0a0e27;
            font-size: 1rem;
            font-weight: 700;
            text-decoration: none;
            border-radius: 50px;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            box-shadow: 0 10px 30px rgba(0, 255, 136, 0.3);
        }

        .add-service-btn:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 15px 40px rgba(0, 255, 136, 0.5);
            color: #0a0e27;
        }

        /* Services Grid */
        .services-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 30px;
            margin-bottom: 60px;
        }

        /* Service Card */
        .service-card {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid rgba(0, 255, 136, 0.2);
            padding: 30px;
            transition: all 0.4s ease;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
            display: flex;
            flex-direction: column;
        }

        .service-card:hover {
            transform: translateY(-10px);
            border-color: rgba(0, 255, 136, 0.5);
            box-shadow: 0 20px 60px rgba(0, 255, 136, 0.3);
        }

        .service-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 20px;
        }

        .service-category {
            padding: 8px 16px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #ffffff;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .service-price {
            padding: 10px 20px;
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            color: #0a0e27;
            border-radius: 20px;
            font-size: 1.3rem;
            font-weight: 900;
            box-shadow: 0 5px 20px rgba(0, 255, 136, 0.3);
        }

        .service-name {
            color: #00ff88;
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 15px;
            line-height: 1.3;
        }

        .service-details {
            color: rgba(255, 255, 255, 0.7);
            line-height: 1.7;
            flex-grow: 1;
            margin-bottom: 25px;
            font-size: 0.95rem;
        }

        .service-actions {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
        }

        .btn-action {
            padding: 12px;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            text-align: center;
            transition: all 0.3s ease;
            font-size: 0.95rem;
        }

        .btn-view {
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            color: #0a0e27;
        }

        .btn-view:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(0, 255, 136, 0.4);
            color: #0a0e27;
        }

        .btn-edit {
            background: rgba(255, 255, 255, 0.05);
            color: #ffffff;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .btn-edit:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: #00ff88;
            color: #00ff88;
        }

        /* Empty State */
        .empty-state {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid rgba(0, 255, 136, 0.2);
            padding: 60px 40px;
            text-align: center;
            grid-column: 1 / -1;
        }

        .empty-icon {
            font-size: 5rem;
            color: rgba(255, 255, 255, 0.2);
            margin-bottom: 20px;
        }

        .empty-title {
            color: #00ff88;
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .empty-text {
            color: rgba(255, 255, 255, 0.7);
            font-size: 1.1rem;
            margin-bottom: 30px;
        }

        /* Stats Section */
        .stats-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
            margin-top: 60px;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid rgba(0, 255, 136, 0.2);
            padding: 35px;
            text-align: center;
            transition: all 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            border-color: rgba(0, 255, 136, 0.4);
            box-shadow: 0 15px 40px rgba(0, 255, 136, 0.2);
        }

        .stat-icon {
            font-size: 3rem;
            margin-bottom: 20px;
        }

        .stat-card:nth-child(1) .stat-icon {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .stat-card:nth-child(2) .stat-icon {
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .stat-card:nth-child(3) .stat-icon {
            background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .stat-value {
            font-size: 2.5rem;
            font-weight: 900;
            color: #00ff88;
            margin-bottom: 10px;
        }

        .stat-label {
            color: rgba(255, 255, 255, 0.7);
            font-size: 1rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .container-custom {
                padding: 0 20px;
            }

            .page-title {
                font-size: 2.5rem;
            }

            .services-grid {
                grid-template-columns: 1fr;
            }

            .stats-section {
                grid-template-columns: 1fr;
            }

            .service-actions {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="takeover-section">
        <div class="container-custom">
            <!-- Header -->
            <div class="page-header">
                <h1 class="page-title">Takeover Services</h1>
                <p class="page-subtitle">Professional Account Boosting & Coaching</p>
                <a href="{{ path('app_takeovers_new') }}" class="add-service-btn">
                    ‚ûï Add New Service
                </a>
            </div>

            <!-- Services Grid -->
            <div class="services-grid">
                {% for takeover in takeovers %}
                    <div class="service-card">
                        <!-- Header with Category and Price -->
                        <div class="service-header">
                            {% if takeover.category %}
                                <span class="service-category">{{ takeover.category }}</span>
                            {% endif %}
                            <span class="service-price">¬£{{ takeover.price }}</span>
                        </div>

                        <!-- Service Name -->
                        <h3 class="service-name">{{ takeover.name }}</h3>

                        <!-- Details -->
                        {% if takeover.details %}
                        <div class="service-details">
                            {{ takeover.details|length > 100 ? takeover.details|slice(0, 100) ~ '...' : takeover.details }}
                        </div>
                        {% endif %}

                        <!-- Actions -->
                        <div class="service-actions">
                            <a href="{{ path('app_takeovers_show', {'id': takeover.id}) }}" class="btn-action btn-view">
                                üëÅÔ∏è View
                            </a>
                            <a href="{{ path('app_takeovers_edit', {'id': takeover.id}) }}" class="btn-action btn-edit">
                                ‚úèÔ∏è Edit
                            </a>
                        </div>
                    </div>
                {% else %}
                    <div class="empty-state">
                        <div class="empty-icon">üìã</div>
                        <h3 class="empty-title">No Services Available</h3>
                        <p class="empty-text">Start by creating your first takeover service</p>
                        <a href="{{ path('app_takeovers_new') }}" class="add-service-btn">
                            ‚ûï Create Now
                        </a>
                    </div>
                {% endfor %}
            </div>

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
{% endblock %}