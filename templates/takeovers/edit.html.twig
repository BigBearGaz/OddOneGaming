{% extends 'base.html.twig' %}

{% block title %}New Takeover - OddOne Gaming{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, rgba(10, 14, 39, 0.92) 0%, rgba(26, 31, 58, 0.92) 100%);
            font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
            min-height: 100vh;
        }

        .form-section {
            position: relative;
            min-height: 100vh;
            padding: 150px 40px 80px;
            max-width: 900px;
            margin: 0 auto;
        }

        .page-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .page-title {
            font-size: 3rem;
            font-weight: 900;
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 15px;
            text-transform: uppercase;
        }

        .page-subtitle {
            color: rgba(255, 255, 255, 0.7);
            font-size: 1.1rem;
        }

        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 12px 24px;
            background: rgba(255, 255, 255, 0.05);
            color: #00ff88;
            border: 2px solid rgba(0, 255, 136, 0.3);
            border-radius: 50px;
            text-decoration: none;
            font-weight: 700;
            margin-bottom: 30px;
            transition: all 0.3s ease;
            text-transform: uppercase;
        }

        .back-button:hover {
            background: rgba(0, 255, 136, 0.1);
            border-color: #00ff88;
            transform: translateX(-5px);
            color: #00ff88;
        }

        .form-card {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid rgba(0, 255, 136, 0.2);
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            display: block;
            color: rgba(255, 255, 255, 0.9);
            font-weight: 700;
            font-size: 0.95rem;
            text-transform: uppercase;
            margin-bottom: 10px;
        }

        .form-control,
        .form-select,
        textarea {
            width: 100%;
            padding: 14px 18px;
            font-size: 1rem;
            border: 2px solid rgba(0, 255, 136, 0.2);
            border-radius: 12px;
            background-color: rgba(255, 255, 255, 0.05);
            color: #ffffff;
            transition: all 0.3s ease;
            font-family: inherit;
        }

        .form-control:hover,
        .form-select:hover,
        textarea:hover {
            border-color: rgba(0, 255, 136, 0.3);
            background-color: rgba(255, 255, 255, 0.08);
        }

        .form-control:focus,
        .form-select:focus,
        textarea:focus {
            outline: none;
            border-color: #00ff88;
            background-color: rgba(255, 255, 255, 0.1);
            box-shadow: 0 0 0 4px rgba(0, 255, 136, 0.1);
        }

        .form-control::placeholder,
        textarea::placeholder {
            color: rgba(255, 255, 255, 0.4);
        }

        textarea {
            min-height: 150px;
            resize: vertical;
        }

        .form-select option {
            background: #1a1f3a;
            color: #ffffff;
        }

        .invalid-feedback {
            color: #ff5252;
            font-size: 0.875rem;
            margin-top: 8px;
            display: block;
        }

        .form-actions {
            display: flex;
            gap: 15px;
            margin-top: 30px;
            padding-top: 25px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .btn-submit {
            flex: 1;
            padding: 16px 40px;
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            color: #0a0e27;
            border: none;
            border-radius: 50px;
            font-weight: 700;
            font-size: 1.1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
        }

        .btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(0, 255, 136, 0.5);
        }

        .btn-cancel {
            padding: 16px 40px;
            background: rgba(255, 255, 255, 0.05);
            color: #ffffff;
            border: 2px solid rgba(255, 255, 255, 0.2);
            border-radius: 50px;
            font-weight: 700;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .btn-cancel:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: #ff5252;
            color: #ff5252;
        }

        @media (max-width: 768px) {
            .form-section {
                padding: 100px 20px 60px;
            }
            
            .page-title {
                font-size: 2rem;
            }
            
            .form-card {
                padding: 25px;
            }

            .form-actions {
                flex-direction: column;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form-section">
        <a href="{{ path('app_takeovers_index') }}" class="back-button">
            ‚Üê Back to list
        </a>

        <div class="page-header">
            <h1 class="page-title">Create New Takeover</h1>
            <p class="page-subtitle">Fill in the details below</p>
        </div>

        <div class="form-card">
            {{ form_start(form) }}

            <!-- Name -->
            <div class="form-group">
                <label class="form-label">üìù Name *</label>
                {{ form_widget(form.Name, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Enter takeover name...'
                    }
                }) }}
                {{ form_errors(form.Name) }}
            </div>

            <!-- Price -->
            <div class="form-group">
                <label class="form-label">üí∞ Price (‚Ç¨) *</label>
                {{ form_widget(form.price, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': '0.00',
                        'step': '0.01'
                    }
                }) }}
                {{ form_errors(form.price) }}
            </div>

            <!-- Category -->
            <div class="form-group">
                <label class="form-label">üè∑Ô∏è Category *</label>
                {{ form_widget(form.category, {
                    'attr': {
                        'class': 'form-select'
                    }
                }) }}
                {{ form_errors(form.category) }}
            </div>

            <!-- Details -->
            <div class="form-group">
                <label class="form-label">üìã Details *</label>
                {{ form_widget(form.details, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Describe the takeover in detail...'
                    }
                }) }}
                {{ form_errors(form.details) }}
            </div>

            <!-- Actions -->
            <div class="form-actions">
                <button type="submit" class="btn-submit">
                    ‚úì Edit
                </button>
                <a href="{{ path('app_takeovers_index') }}" class="btn-cancel">
                    ‚úï Cancel
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
