{% extends 'base.html.twig' %}

{% block title %}Team Suggestions{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Team Suggestions</h1>
        <a href="{{ path('app_team_suggestion_new') }}" class="btn btn-primary">
            Nouvelle Team
        </a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Donjon</th>
                <th>Héros</th>
                <th>Difficulté</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for suggestion in suggestions %}
            <tr>
                <td>{{ suggestion.name }}</td>
                <td>{{ suggestion.dungeon.name }}</td>
                <td>
                    {% for hero in suggestion.heroes %}
                        <span class="badge bg-info">{{ hero.name }}</span>
                    {% endfor %}
                </td>
                <td>
                    <span class="badge bg-{{ suggestion.difficulty == 'Easy' ? 'success' : (suggestion.difficulty == 'Hard' ? 'danger' : 'warning') }}">
                        {{ suggestion.difficulty ?? 'N/A' }}
                    </span>
                </td>
                <td>
                    <a href="{{ path('app_team_suggestion_edit', {id: suggestion.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                    <form method="post" action="{{ path('app_team_suggestion_delete', {id: suggestion.id}) }}" style="display:inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ suggestion.id) }}">
                        <button class="btn btn-sm btn-danger" onclick="return confirm('Supprimer cette team ?')">Supprimer</button>
                    </form>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5" class="text-center">Aucune team suggestion</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
