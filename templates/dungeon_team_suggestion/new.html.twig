{% extends 'base.html.twig' %}

{% block title %}New Team - {{ dungeon.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(135deg, rgba(10, 14, 39, 0.95) 0%, rgba(26, 31, 58, 0.95) 100%);
            min-height: 100vh;
        }

        .edit-container {
            max-width: 1200px;
            margin: 150px auto 50px;
            padding: 0 20px;
        }

        .edit-card {
            background: rgba(26, 31, 58, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 2px solid rgba(0, 255, 136, 0.4);
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
        }

        .edit-title {
            color: #00ff88;
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .edit-subtitle {
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 40px;
            font-size: 1.1rem;
        }

        .form-group {
            margin-bottom: 30px;
        }

        .form-label {
            color: #00ff88;
            font-weight: 700;
            font-size: 1.1rem;
            margin-bottom: 12px;
            display: block;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-control, .form-select {
            width: 100%;
            padding: 15px 20px;
            background: rgba(10, 14, 39, 0.8);
            border: 2px solid rgba(0, 255, 136, 0.4);
            border-radius: 10px;
            color: #ffffff;
            font-size: 1.1rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.4);
        }

        .form-control:focus, .form-select:focus {
            outline: none;
            border-color: #00ff88;
            box-shadow: 0 0 20px rgba(0, 255, 136, 0.4);
            background: rgba(10, 14, 39, 0.95);
        }

        textarea.form-control {
            min-height: 150px;
            resize: vertical;
            line-height: 1.6;
        }

        .form-select option {
            background: #0a0e27;
            color: #ffffff;
            padding: 10px;
        }

        /* Hero Selection */
        .hero-selection-wrapper {
            background: rgba(10, 14, 39, 0.6);
            padding: 25px;
            border-radius: 15px;
            border: 2px solid rgba(0, 255, 136, 0.2);
        }

        .selection-counter {
            text-align: center;
            font-size: 1.3rem;
            color: #00ff88;
            font-weight: 700;
            margin-bottom: 20px;
            padding: 15px;
            background: rgba(0, 255, 136, 0.1);
            border-radius: 10px;
            border: 1px solid rgba(0, 255, 136, 0.3);
        }

        .hero-selection {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 20px;
        }

        .hero-card {
            position: relative;
            cursor: pointer;
            border-radius: 12px;
            overflow: hidden;
            border: 3px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
            aspect-ratio: 3/4;
        }

        .hero-card:hover {
            transform: translateY(-5px);
        }

        /* RARITY COLORS FOR HERO CARDS */
        
        /* Legendary - Or/Jaune */
        .hero-card.rarity-legendary,
        .hero-card.rarity-légendaire {
            border-color: rgba(255, 215, 0, 0.4);
        }

        .hero-card.rarity-legendary:hover,
        .hero-card.rarity-légendaire:hover {
            border-color: #ffd700;
            box-shadow: 0 8px 30px rgba(255, 215, 0, 0.5);
        }

        .hero-card.rarity-legendary.selected,
        .hero-card.rarity-légendaire.selected {
            border-color: #ffd700;
            box-shadow: 0 0 35px rgba(255, 215, 0, 0.8);
        }

        /* Epic - Violet */
        .hero-card.rarity-epic {
            border-color: rgba(168, 85, 247, 0.4);
        }

        .hero-card.rarity-epic:hover {
            border-color: #a855f7;
            box-shadow: 0 8px 30px rgba(168, 85, 247, 0.5);
        }

        .hero-card.rarity-epic.selected {
            border-color: #a855f7;
            box-shadow: 0 0 35px rgba(168, 85, 247, 0.8);
        }

        /* Rare - Bleu */
        .hero-card.rarity-rare {
            border-color: rgba(59, 130, 246, 0.4);
        }

        .hero-card.rarity-rare:hover {
            border-color: #3b82f6;
            box-shadow: 0 8px 30px rgba(59, 130, 246, 0.5);
        }

        .hero-card.rarity-rare.selected {
            border-color: #3b82f6;
            box-shadow: 0 0 35px rgba(59, 130, 246, 0.8);
        }

        /* Uncommon - Vert */
        .hero-card.rarity-uncommon {
            border-color: rgba(16, 185, 129, 0.4);
        }

        .hero-card.rarity-uncommon:hover {
            border-color: #10b981;
            box-shadow: 0 8px 30px rgba(16, 185, 129, 0.5);
        }

        .hero-card.rarity-uncommon.selected {
            border-color: #10b981;
            box-shadow: 0 0 35px rgba(16, 185, 129, 0.8);
        }

        /* Common - Gris */
        .hero-card.rarity-common {
            border-color: rgba(156, 163, 175, 0.4);
        }

        .hero-card.rarity-common:hover {
            border-color: #9ca3af;
            box-shadow: 0 8px 30px rgba(156, 163, 175, 0.5);
        }

        .hero-card.rarity-common.selected {
            border-color: #9ca3af;
            box-shadow: 0 0 35px rgba(156, 163, 175, 0.8);
        }

        .hero-card input[type="checkbox"] {
            position: absolute;
            opacity: 0;
            pointer-events: none;
        }

        .hero-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

        .hero-card .hero-name {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(transparent, rgba(0, 0, 0, 0.95));
            color: #ffffff;
            padding: 15px 10px;
            text-align: center;
            font-weight: 700;
            font-size: 1rem;
        }

        /* RARITY BADGE */
        .hero-rarity-badge {
            position: absolute;
            top: 8px;
            left: 8px;
            padding: 4px 10px;
            border-radius: 8px;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            z-index: 2;
            backdrop-filter: blur(10px);
        }

        .rarity-badge-legendary,
        .rarity-badge-légendaire {
            background: rgba(255, 215, 0, 0.9);
            color: #0a0e27;
            box-shadow: 0 2px 10px rgba(255, 215, 0, 0.5);
        }

        .rarity-badge-epic {
            background: rgba(168, 85, 247, 0.9);
            color: #ffffff;
            box-shadow: 0 2px 10px rgba(168, 85, 247, 0.5);
        }

        .rarity-badge-rare {
            background: rgba(59, 130, 246, 0.9);
            color: #ffffff;
            box-shadow: 0 2px 10px rgba(59, 130, 246, 0.5);
        }

        .rarity-badge-uncommon {
            background: rgba(16, 185, 129, 0.9);
            color: #ffffff;
            box-shadow: 0 2px 10px rgba(16, 185, 129, 0.5);
        }

        .rarity-badge-common {
            background: rgba(156, 163, 175, 0.9);
            color: #ffffff;
            box-shadow: 0 2px 10px rgba(156, 163, 175, 0.5);
        }

        .hero-card .selected-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background: #00ff88;
            color: #000;
            width: 35px;
            height: 35px;
            border-radius: 50%;
            display: none;
            align-items: center;
            justify-content: center;
            font-weight: 900;
            font-size: 1.2rem;
            box-shadow: 0 4px 15px rgba(0, 255, 136, 0.6);
            z-index: 3;
        }

        .hero-card.selected .selected-badge {
            display: flex;
        }

        /* Buttons */
        .btn-submit {
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            color: #0a0e27;
            padding: 16px 40px;
            border: none;
            border-radius: 12px;
            font-weight: 700;
            font-size: 1.1rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(0, 255, 136, 0.5);
        }

        .btn-submit:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .btn-cancel {
            background: rgba(255, 255, 255, 0.1);
            color: #ffffff;
            padding: 16px 40px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 12px;
            font-weight: 700;
            font-size: 1.1rem;
            text-decoration: none;
            display: inline-block;
            margin-left: 15px;
            transition: all 0.3s ease;
        }

        .btn-cancel:hover {
            background: rgba(255, 255, 255, 0.2);
            color: #ffffff;
            border-color: rgba(255, 255, 255, 0.5);
        }

        @media (max-width: 768px) {
            .hero-selection {
                grid-template-columns: repeat(3, 1fr);
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="edit-container">
    <div class="edit-card">
        <h1 class="edit-title">➕ Create New Team</h1>
        <p class="edit-subtitle">
            For dungeon: <strong style="color: #00ff88;">{{ dungeon.name }}</strong>
        </p>

        {{ form_start(form, {'attr': {'id': 'team-form'}}) }}

        <div class="form-group">
            {{ form_label(form.name, 'Team Name', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Ex: F2P Friendly, Speed Clear...'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.difficulty, 'Difficulty', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.difficulty, {'attr': {'class': 'form-select'}}) }}
        </div>

        <div class="form-group">
            <label class="form-label">Select Heroes (3 to 5)</label>
            
            <div class="hero-selection-wrapper">
                <div class="selection-counter" id="counter">
                    <span id="count">0</span> / 5 heroes selected (min 3)
                </div>

                <div class="hero-selection" id="hero-grid">
                    {% for hero in allHeroes %}
                        <label class="hero-card {% if hero.rarityEntity %}rarity-{{ hero.rarityEntity.name|lower }}{% endif %}" data-hero-id="{{ hero.id }}">
                            <input type="checkbox" 
                                   name="dungeon_team_suggestion[heroes][]" 
                                   value="{{ hero.id }}">
                            
                            {% if hero.rarityEntity %}
                                <span class="hero-rarity-badge rarity-badge-{{ hero.rarityEntity.name|lower }}">
                                    {{ hero.rarityEntity.name|slice(0, 1) }}
                                </span>
                            {% endif %}
                            
                            <img src="{{ hero.imageUrl }}" alt="{{ hero.name }}" loading="lazy">
                            <div class="hero-name">{{ hero.name }}</div>
                            <div class="selected-badge">✓</div>
                        </label>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.description, 'Strategy & Notes', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Describe the strategy, synergies, rotation...'}}) }}
        </div>

        {{ form_widget(form.dungeon, {'attr': {'style': 'display: none;'}}) }}
        
        {# Empêcher le rendu automatique des heroes car on les gère manuellement #}
        {{ form_widget(form.heroes, {'attr': {'style': 'display: none;'}}) }}

        <div style="margin-top: 40px;">
            <button type="submit" class="btn-submit" id="submit-btn" disabled>
                ✨ Create Team
            </button>
            <a href="{{ path('app_dungeons_show', {id: dungeon.id}) }}" class="btn-cancel">
                Cancel
            </a>
        </div>

        {{ form_end(form) }}
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const heroCards = document.querySelectorAll('.hero-card');
    const counter = document.getElementById('count');
    const counterBox = document.getElementById('counter');
    const submitBtn = document.getElementById('submit-btn');
    const form = document.getElementById('team-form');
    
    function updateCounter() {
        const checkedBoxes = document.querySelectorAll('.hero-card input:checked');
        const count = checkedBoxes.length;
        counter.textContent = count;
        
        // Update card states
        heroCards.forEach(card => {
            const checkbox = card.querySelector('input');
            if (checkbox && checkbox.checked) {
                card.classList.add('selected');
            } else {
                card.classList.remove('selected');
            }
        });
        
        // Validate count
        if (count < 3) {
            counterBox.style.borderColor = 'rgba(239, 68, 68, 0.5)';
            counterBox.style.background = 'rgba(239, 68, 68, 0.1)';
            counterBox.style.color = '#ef4444';
            submitBtn.disabled = true;
        } else {
            counterBox.style.borderColor = 'rgba(0, 255, 136, 0.3)';
            counterBox.style.background = 'rgba(0, 255, 136, 0.1)';
            counterBox.style.color = '#00ff88';
            submitBtn.disabled = false;
        }
    }
    
    heroCards.forEach(card => {
        card.addEventListener('click', function(e) {
            e.preventDefault();
            
            const checkbox = this.querySelector('input[type="checkbox"]');
            const checkedCount = document.querySelectorAll('.hero-card input:checked').length;
            
            if (checkbox.checked) {
                // Décocher
                checkbox.checked = false;
            } else {
                // Cocher si max pas atteint
                if (checkedCount < 5) {
                    checkbox.checked = true;
                } else {
                    alert('Maximum 5 heroes!');
                    return;
                }
            }
            
            updateCounter();
        });
    });
    
    // Validation avant soumission
    form.addEventListener('submit', function(e) {
        const checkedCount = document.querySelectorAll('.hero-card input:checked').length;
        
        if (checkedCount < 3 || checkedCount > 5) {
            e.preventDefault();
            alert('Please select between 3 and 5 heroes!');
            return false;
        }
    });
    
    // Init
    updateCounter();
});
</script>
{% endblock %}
