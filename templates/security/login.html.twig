{% extends 'base.html.twig' %}

{% block title %}Admin Login - OddOne Gaming{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
        }

        .login-section {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-card {
            background: rgba(0, 0, 0, 0.85);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 2px solid rgba(0, 255, 0, 0.4);
            padding: 50px 40px;
            max-width: 450px;
            width: 100%;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.7);
        }

        .login-title {
            color: #00ff00;
            font-size: 2.2rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 10px;
            text-shadow: 0 0 20px rgba(0, 255, 0, 0.5);
        }

        .login-subtitle {
            color: rgba(255, 255, 255, 0.6);
            text-align: center;
            margin-bottom: 40px;
            font-size: 1rem;
        }

        .form-label {
            color: rgba(255, 255, 255, 0.9);
            font-weight: 600;
            margin-bottom: 10px;
            display: block;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.08) !important;
            border: 1px solid rgba(0, 255, 0, 0.3) !important;
            color: #ffffff !important;
            padding: 14px 16px;
            border-radius: 10px;
            width: 100%;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.12) !important;
            border-color: #00ff00 !important;
            outline: none;
            box-shadow: 0 0 15px rgba(0, 255, 0, 0.3);
            color: #ffffff !important;
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.4) !important;
        }

        /* Force la couleur du texte des inputs */
        input[type="email"],
        input[type="password"] {
            color: #ffffff !important;
            -webkit-text-fill-color: #ffffff !important;
        }

        .mb-3 {
            margin-bottom: 20px;
        }

        .form-check {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .form-check-input {
            width: 18px;
            height: 18px;
            background-color: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(0, 255, 0, 0.3);
            border-radius: 4px;
            cursor: pointer;
        }

        .form-check-input:checked {
            background-color: #00ff00;
            border-color: #00ff00;
        }

        .form-check-label {
            color: rgba(255, 255, 255, 0.7);
            cursor: pointer;
            user-select: none;
        }

        .btn-login {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #00ff00 0%, #00cc00 100%);
            color: #000000;
            font-weight: 700;
            font-size: 1.1rem;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(0, 255, 0, 0.5);
        }

        .alert-danger {
            background: rgba(255, 0, 0, 0.15);
            border: 1px solid rgba(255, 0, 0, 0.4);
            color: #ff6666;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 25px;
            text-align: center;
        }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 25px;
            color: rgba(255, 255, 255, 0.5);
            text-decoration: none;
            transition: color 0.3s ease;
            font-size: 0.95rem;
        }

        .back-link:hover {
            color: #00ff00;
        }
    </style>
{% endblock %}

{% block body %}
<div class="login-section">
    <div class="login-card">
        <h1 class="login-title">üîê Admin Login</h1>
        <p class="login-subtitle">OddOne Gaming</p>

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post">
            <div class="mb-3">
                <label for="email" class="form-label">üìß Email</label>
                <input type="email" 
                       class="form-control" 
                       id="email" 
                       name="email" 
                       value="{{ last_username }}" 
                       required 
                       autofocus
                       placeholder="admin@example.com">
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">üîë Password</label>
                <input type="password" 
                       class="form-control" 
                       id="password" 
                       name="password" 
                       required
                       placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢">
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn-login">
                Login
            </button>
        </form>

        <a href="{{ path('app_home') }}" class="back-link">
            ‚Üê Back to Home
        </a>
    </div>
</div>
{% endblock %}
