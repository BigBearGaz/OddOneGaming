            justify-content: center;
        }

        .card-button {
            padding: 9px 22px;
            border-radius: 11px;
            font-weight: 700;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 7px;
            flex: 0 0 auto;
        }

        .youtube-main .card-button { background: linear-gradient(135deg, #ff0000 0%, #cc0000 100%); color: #ffffff; }
        .twitch .card-button { background: linear-gradient(135deg, #9146ff 0%, #772ce8 100%); color: #ffffff; }

        .twitch.live .card-button {
            background: linear-gradient(135deg, #ff0000 0%, #cc0000 100%);
            animation: liveButtonPulse 2s ease-in-out infinite;
        }

        @keyframes liveButtonPulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .email .card-button, .discord .card-button {
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            color: #0a0e27;
        }

        .card-button:hover { transform: scale(1.05); }

        /* Notification de copie */
        .copy-notification {
            position: fixed;
            bottom: 30px;
            right: 30px;
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            color: #0a0e27;
            padding: 15px 25px;
            border-radius: 12px;
            font-weight: 700;
            box-shadow: 0 10px 40px rgba(0, 255, 136, 0.5);
            transform: translateY(150px);
            opacity: 0;
            transition: all 0.4s ease;
            z-index: 1000;
        }

        .copy-notification.show {
            transform: translateY(0);
            opacity: 1;
        }

        /* Mobile */
        @media (max-width: 768px) {
            .contact-section {
                padding: 110px 16px 24px 16px;
                overflow: visible; /* laisse le contenu respirer + scroll */
                background-attachment: scroll; /* iOS gÃ¨re mal fixed [web:192] */
            }

            .contact-title { font-size: clamp(2rem, 8vw, 2.4rem); } /* plus propre selon tailles Ã©cran [web:188] */
            .contact-subtitle { font-size: 0.98rem; }
            .contact-tagline { font-size: 0.85rem; }

            .contact-grid {
                grid-template-columns: 1fr;
                gap: 14px;
            }

            .contact-card {
                padding: 18px;
                min-height: unset;
            }

