{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
    <script>
        function copyToClipboard(text, type) {
            navigator.clipboard.writeText(text).then(function() {
                showNotification(`${type} copied to clipboard!`);
            }).catch(function(err) {
                console.error('Error copying text: ', err);
                showNotification('Failed to copy!');
            });
        }

        function showNotification(message) {
            const notification = document.getElementById('copyNotification');
            const messageSpan = document.getElementById('copyMessage');

            messageSpan.textContent = message;
            notification.classList.add('show');

            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        const TWITCH_USERNAME = 'oddonegaming_yt';

        async function checkTwitchStream() {
            try {
                const response = await fetch(`https://decapi.me/twitch/uptime/${TWITCH_USERNAME}`);
                const data = await response.text();

                if (data.includes('offline') || data.includes('error') || !data || data.length < 5) {
                    updateTwitchCard(false);
                } else {
                    const [titleResponse, viewersResponse] = await Promise.all([
                        fetch(`https://decapi.me/twitch/title/${TWITCH_USERNAME}`),
                        fetch(`https://decapi.me/twitch/viewercount/${TWITCH_USERNAME}`)
                    ]);

                    const title = await titleResponse.text();
                    const viewers = await viewersResponse.text();

                    updateTwitchCard(true, {
                        title: title || 'Live Stream',
                        viewer_count: parseInt(viewers) || 0
                    });
                }
            } catch (error) {
                console.error('Error checking Twitch stream:', error);
                updateTwitchCard(false);
            }
        }

        function updateTwitchCard(isLive, streamData = null) {
            const card = document.getElementById('twitch-card');
            const liveIndicator = document.getElementById('live-indicator');
            const liveInfo = document.getElementById('live-info');
            const defaultDescription = document.getElementById('default-description');
            const buttonText = document.getElementById('button-text');

            if (isLive && streamData) {
                card.classList.add('live');
                liveIndicator.style.display = 'block';
                liveInfo.style.display = 'block';
                defaultDescription.style.display = 'none';
                document.getElementById('stream-title').textContent = streamData.title;
                const viewerCount = streamData.viewer_count.toLocaleString();
                document.getElementById('viewer-count').innerHTML = `ðŸ‘ï¸ ${viewerCount} viewers`;
                buttonText.textContent = 'Watch Live';
            } else {
                card.classList.remove('live');
                liveIndicator.style.display = 'none';
                liveInfo.style.display = 'none';
                defaultDescription.style.display = 'block';
                buttonText.textContent = 'Follow';
            }
        }

        checkTwitchStream();
        setInterval(checkTwitchStream, 120000);
    </script>
