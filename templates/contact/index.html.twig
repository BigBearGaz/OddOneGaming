{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }

        /* IMPORTANT: sur mobile il faut pouvoir scroller si besoin */
        body {
            overflow-x: hidden;
            overflow-y: auto;
        }

        .contact-section {
            position: relative;
            /* Remplace height:100vh -> min-height:100dvh pour Ã©viter les bugs d'URL bar mobile [web:188] */
            min-height: 100dvh;
            background:
                linear-gradient(135deg, rgba(10, 14, 39, 0.95) 0%, rgba(26, 31, 58, 0.95) 100%),
                url('{{ asset('images/castle-background.jpg') }}') center/cover no-repeat fixed;
            padding: 120px 40px 20px 40px;
            overflow: hidden;
        }

        .contact-section::before {
            content: '';
            position: absolute;
            top: 0; left: 0; right: 0; bottom: 0;
            background:
                radial-gradient(circle at 20% 50%, rgba(0, 255, 100, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(0, 200, 255, 0.1) 0%, transparent 50%);
            pointer-events: none;
            animation: pulse 8s ease-in-out infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 0.5; }
            50% { opacity: 1; }
        }

        .container-custom {
            max-width: 1200px;
            margin: 0 auto;
            position: relative;
            z-index: 2;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .contact-header {
            text-align: center;
            margin-bottom: 20px;
            flex-shrink: 0;
        }

        .contact-title {
            font-size: 2.8rem;
            font-weight: 900;
            background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: -2px;
            animation: glow 3s ease-in-out infinite;
            line-height: 1.05;
        }

        @keyframes glow {
            0%, 100% { filter: drop-shadow(0 0 20px rgba(0, 255, 136, 0.5)); }
            50% { filter: drop-shadow(0 0 40px rgba(0, 255, 136, 0.8)); }
        }

        .contact-subtitle {
            color: rgba(255, 255, 255, 0.8);
            font-size: 1.05rem;
            line-height: 1.4;
            max-width: 700px;
            margin: 0 auto 6px;
        }

        .contact-tagline {
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.9rem;
            font-style: italic;
        }

        .contact-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
            flex: 1;
            align-items: stretch;
            /* permet d'avoir une hauteur mini mais laisser le scroll si besoin */
            align-content: start;
        }

        .contact-card {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(30px);
            border-radius: 18px;
            border: 2px solid;
            padding: 18px;
            text-decoration: none;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 10px;
            transition: all 0.4s ease;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
            position: relative;
            overflow: hidden;
            cursor: pointer;
            min-height: 210px;
        }

        .contact-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: left 0.6s ease;
        }

        .contact-card:hover::before { left: 100%; }

        .contact-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 25px 70px rgba(0, 0, 0, 0.6);
        }

        .contact-card.youtube-main { border-color: rgba(255, 0, 0, 0.5); }
        .contact-card.youtube-main:hover { border-color: #ff0000; box-shadow: 0 25px 70px rgba(255, 0, 0, 0.4); }

        .contact-card.twitch { border-color: rgba(145, 70, 255, 0.5); }
        .contact-card.twitch:hover { border-color: #9146ff; box-shadow: 0 25px 70px rgba(145, 70, 255, 0.4); }

        .contact-card.twitch.live {
            border-color: #9146ff;
            animation: livePulse 2s ease-in-out infinite;
        }

        @keyframes livePulse {
            0%, 100% { box-shadow: 0 20px 60px rgba(145, 70, 255, 0.4); }
            50% { box-shadow: 0 25px 70px rgba(145, 70, 255, 0.7); }
        }

        .contact-card.email { border-color: rgba(0, 255, 136, 0.5); }
        .contact-card.email:hover { border-color: #00ff88; box-shadow: 0 25px 70px rgba(0, 255, 136, 0.4); }

        .contact-card.discord { border-color: rgba(88, 101, 242, 0.5); }
        .contact-card.discord:hover { border-color: #5865f2; box-shadow: 0 25px 70px rgba(88, 101, 242, 0.4); }

        .card-icon-wrapper {
            width: 65px;
            height: 65px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.3rem;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
            transition: all 0.4s ease;
            position: relative;
