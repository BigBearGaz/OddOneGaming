        }

        .contact-card:hover .card-icon-wrapper { transform: scale(1.1) rotateZ(5deg); }

        .youtube-main .card-icon-wrapper { background: linear-gradient(135deg, #ff0000 0%, #cc0000 100%); }
        .twitch .card-icon-wrapper { background: linear-gradient(135deg, #9146ff 0%, #772ce8 100%); }
        .email .card-icon-wrapper { background: linear-gradient(135deg, #00ff88 0%, #00ccff 100%); }
        .discord .card-icon-wrapper { background: linear-gradient(135deg, #5865f2 0%, #4752c4 100%); }

        .live-indicator {
            position: absolute;
            top: -5px;
            right: -5px;
            width: 20px;
            height: 20px;
            background: #ff0000;
            border-radius: 50%;
