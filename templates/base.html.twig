<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}OddOne Gaming{% endblock %}</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-image: url('/images/OddOne_Gaming_CastleTheme_jpg.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            min-height: 100vh;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(0, 0, 0, 0.4);
            z-index: -1;
        }

        nav.navbar {
            background: rgba(0, 0, 0, 0.7) !important;
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(0, 255, 0, 0.3);
        }

        .navbar-brand img { height: 80px; }

        .navbar-nav .nav-link {
            color: #00ff00 !important;
            font-weight: bold;
            text-transform: uppercase;
            font-size: 0.95rem;
        }

        .navbar-nav .nav-link:hover {
            color: #ffffff !important;
            text-shadow: 0 0 10px #00ff00;
        }

        .dropdown-menu {
            background: rgba(0, 0, 0, 0.9) !important;
            backdrop-filter: blur(15px);
            border: 1px solid rgba(0, 255, 0, 0.3);
            min-width: 250px;
        }

        .dropdown-item {
            color: #00ff00 !important;
            font-weight: 600;
            padding: 8px 20px;
            transition: 0.3s;
            display: flex;
            align-items: center;
        }

        .dropdown-item:hover {
            background: rgba(0, 255, 0, 0.2) !important;
            color: #ffffff !important;
            transform: translateX(5px);
        }

        .dungeon-mini-icon {
            width: 24px !important;
            height: 24px !important;
            object-fit: cover;
            border-radius: 4px;
            border: 1px solid rgba(0, 255, 0, 0.5);
            flex-shrink: 0;
        }

        .nav-admin-btn {
            border: 1px solid #0dcaf0;
            border-radius: 5px;
            background: rgba(13, 202, 240, 0.1);
        }

        {% block stylesheets %}{% endblock %}
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_home') }}">
                <img src="{{ asset('images/OddOneGaming_Logo.png') }}" alt="Logo">
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav align-items-center">
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_home') }}">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_heroes_index') }}">Heroes</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_takeovers_index') }}">Takeover</a></li>

                    {# MENU MECHANICS (PUBLIC) #}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="mechDrop" data-bs-toggle="dropdown">Mechanics</a>
                        <ul class="dropdown-menu shadow">
                            <li><a class="dropdown-item" href="{{ path('app_buffs_index') }}"><i class="fas fa-arrow-up me-2 text-success"></i> Buffs</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_debuffs_index') }}"><i class="fas fa-arrow-down me-2 text-danger"></i> Debuffs</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_disable_index') }}"><i class="fas fa-hand-paper me-2 text-warning"></i> Disables</a></li>
                        </ul>
                    </li>

                    {# MENU DUNGEONS #}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="dungDrop" data-bs-toggle="dropdown">Dungeons</a>
                        <ul class="dropdown-menu shadow">
                            <li><a class="dropdown-item py-2" href="{{ path('app_dungeons_index') }}"><i class="fas fa-list-ul me-2 small text-success"></i> <strong>View All Bosses</strong></a></li>
                            {% if global_dungeons is defined and global_dungeons|length > 0 %}
                                <li><hr class="dropdown-divider my-1"></li>
                                {% for dungeon in global_dungeons|slice(0, 6) %}
                                    <li>
                                        <a class="dropdown-item py-2" href="{{ path('app_dungeons_show', {'id': dungeon.id}) }}">
                                            <img src="{{ dungeon.imageUrl ? dungeon.imageUrl : 'https://ui-avatars.com/api/?name=' ~ dungeon.name|url_encode ~ '&background=00ff00&color=000&size=40' }}" class="dungeon-mini-icon me-2">
                                            <span class="small">{{ dungeon.name }}</span>
                                        </a>
                                    </li>
                                {% endfor %}
                            {% endif %}
                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_weapons_index') }}"> Weapons</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_sets_index') }}">Sets</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_tier_list_index') }}">Tier Lists</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_contact') }}">Contact</a></li>

                    {# ESPACE ADMIN COMPLET #}
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item dropdown ms-lg-2">
                            <a class="nav-link dropdown-toggle nav-admin-btn text-info" href="#" id="adminDrop" data-bs-toggle="dropdown">
                                <i class="fas fa-user-shield me-1"></i> Admin
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow">
                                <li><h6 class="dropdown-header">Gestion M√©caniques</h6></li>
                                <li><a class="dropdown-item" href="{{ path('app_buffs_index') }}"><i class="fas fa-arrow-up me-2 text-success"></i> Buffs</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_debuffs_index') }}"><i class="fas fa-arrow-down me-2 text-danger"></i> Debuffs</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_disable_index') }}"><i class="fas fa-hand-paper me-2 text-warning"></i> Disables</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_instants_index') }}"><i class="fas fa-hand-paper me-2 text-warning"></i> Instants</a></li>                                
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Contenu</h6></li>
                                <li><a class="dropdown-item text-success" href="{{ path('app_dungeons_new') }}"><i class="fas fa-plus me-2"></i> Add New Boss</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_sets_index') }}"><i class="fas fa-shield-alt me-2"></i> Manage Sets</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_takeovers_index') }}"><i class="fas fa-edit me-2"></i> Manage Takeovers</a></li>
                                
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger fw-bold" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt me-2"></i> Logout</a></li>
                            </ul>
                        </li>
                    {% else %}
                        <li class="nav-item ms-lg-2">
                            <a class="nav-link btn btn-sm btn-outline-success px-3" href="{{ path('app_login') }}" style="border-radius: 20px;">üîê Login</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <main class="container-fluid p-0" style="margin-top: 100px;">
        {% block body %}{% endblock %}
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>