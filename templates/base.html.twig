<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}OddOne Gaming{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-image: url('/images/OddOne_Gaming_CastleTheme_jpg.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            min-height: 100vh;
        }

        /* Overlay */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.4);
            z-index: -1;
        }

        /* Navigation */
        nav.navbar {
            background: rgba(0, 0, 0, 0.7) !important;
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(0, 255, 0, 0.3);
        }

        .navbar-brand img {
            height: 80px;
        }

        .navbar-nav .nav-link {
            color: #00ff00 !important;
            font-weight: bold;
            text-transform: uppercase;
            font-size: 1.1rem;
        }

        .navbar-nav .nav-link:hover {
            color: #ffffff !important;
            text-shadow: 0 0 10px #00ff00;
        }

        /* Dropdown Menu Styling */
        .dropdown-menu {
            background: rgba(0, 0, 0, 0.9) !important;
            backdrop-filter: blur(15px);
            border: 1px solid rgba(0, 255, 0, 0.3);
            box-shadow: 0 10px 30px rgba(0, 255, 0, 0.2);
            max-height: none !important;
            overflow: visible !important;
            min-width: 300px;
        }

        .dropdown-item {
            color: #00ff00 !important;
            font-weight: 600;
            padding: 12px 20px;
            transition: all 0.3s ease;
        }

        .dropdown-item:hover {
            background: rgba(0, 255, 0, 0.2) !important;
            color: #ffffff !important;
            text-shadow: 0 0 10px #00ff00;
            transform: translateX(5px);
        }

        .dropdown-item.disabled {
            color: rgba(255, 255, 255, 0.4) !important;
            cursor: not-allowed;
        }

        .dropdown-item.text-success {
            color: #00ff00 !important;
            font-weight: 700;
        }

        .dropdown-divider {
            border-color: rgba(0, 255, 0, 0.2);
        }

        .dropdown-header {
            color: rgba(0, 255, 0, 0.6);
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 700;
        }

        /* Dropdown Dungeons avec images */
        .dropdown-item.dungeon-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 10px 15px;
        }

        .dropdown-item.dungeon-item:hover {
            padding-left: 20px;
        }

        .dungeon-thumb {
            width: 40px;
            height: 40px;
            border-radius: 8px;
            object-fit: cover;
            border: 2px solid rgba(0, 255, 0, 0.4);
            flex-shrink: 0;
        }

        .dungeon-item span {
            flex: 1;
            font-weight: 600;
            font-size: 0.95rem;
        }

        {% block stylesheets %}{% endblock %}
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_home') }}">
                <img src="{{ asset('images/OddOneGaming_Logo.png') }}" alt="OddOne Gaming Logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_heroes_index') }}">Heroes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_takeovers_index') }}">Takeover</a>
                    </li>
                    
                    {# DROPDOWN DUNGEONS #}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="dungeonsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Dungeons
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dungeonsDropdown">
                            <li>
                                <a class="dropdown-item" href="{{ path('app_dungeons_index') }}">
                                    <strong>üìã View All Bosses</strong>
                                </a>
                            </li>
                            
                            {% if global_dungeons is defined and global_dungeons|length > 0 %}
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Quick Access</h6></li>
                                
                                {% for dungeon in global_dungeons|slice(0, 6) %}
                                    <li>
                                        <a class="dropdown-item dungeon-item" href="{{ path('app_dungeons_show', {'id': dungeon.id}) }}">
                                            <img src="{{ dungeon.imageUrl ? dungeon.imageUrl : 'https://ui-avatars.com/api/?name=' ~ dungeon.name|url_encode ~ '&size=80&background=00ff00&color=000000&bold=true' }}" 
                                                 alt="{{ dungeon.name }}"
                                                 class="dungeon-thumb">
                                            <span>{{ dungeon.name }}</span>
                                        </a>
                                    </li>
                                {% endfor %}
                            {% else %}
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <span class="dropdown-item disabled">
                                        <em>No dungeons yet</em>
                                    </span>
                                </li>
                            {% endif %}
                            
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-success" href="{{ path('app_dungeons_new') }}">
                                    ‚ûï Add New Boss
                                </a>
                            </li>
                            
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_contact') }}">Contact</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
    <li class="nav-item">
        <a class="nav-link" href="{{ path('app_logout') }}">
            üö™ Logout
        </a>
    </li>
{% else %}
    <li class="nav-item">
        <a class="nav-link" href="{{ path('app_login') }}">
            üîê Login
        </a>
    </li>
{% endif %}

                </ul>
            </div>
        </div>
    </nav>

    <main class="container-fluid p-0">
        {% block body %}{% endblock %}
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>
